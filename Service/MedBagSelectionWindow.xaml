<Window x:Class="His_Pos.Service.MedBagSelectionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:His_Pos.Service"
        mc:Ignorable="d"
        Width="350" Height="230" WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid Name="MainGrid">
        <StackPanel Orientation="Vertical" VerticalAlignment="Top">
            <StackPanel Orientation="Horizontal" Height="35" Background="CornflowerBlue">
                <Label Name="TitleLabel" Width="200" Foreground="GhostWhite" FontSize="16" Content="請選擇藥袋列印模式" FontFamily="Segoe UI Semibold" VerticalContentAlignment="Center"/>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Height="195" >
                <StackPanel Orientation="Horizontal" Width="170" Height="55" Margin="10,20,10,10">
                    <Image Source="C:\HisPos\Images\medicine.png" Width="45" Height="55" MouseDown="MultiMode_MouseDown"/>
                    <Label Name="MultiButton" Width="125" Height="55" Content="多藥一袋" FontSize="20" Foreground="DimGray" Focusable="True" HorizontalAlignment="Right" Background="White" BorderBrush="DarkGray" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="MultiMode_MouseDown"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Width="170" Height="55" Margin="90,20,90,10">
                    <Image Source="C:\HisPos\Images\capsule.png" Width="45" Height="55" MouseDown="SingleMode_MouseDown" />
                    <Label Name="SingleButton" Width="125" Height="55" Content="一藥一袋" FontSize="20" Foreground="DimGray" Focusable="True" HorizontalAlignment="Right" Background="White" BorderBrush="DarkGray" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" MouseDown="SingleMode_MouseDown"/>
                </StackPanel>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
