<UserControl x:Class="His_Pos.GeneralCustomControl.DecimalControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <StackPanel Name="DecimalStack" Orientation="Horizontal">
        <TextBlock Text="{Binding IntegerPart}" />
        <TextBlock Text="." />
        <TextBlock Text="{Binding FloatPart, FallbackValue=00}" TextDecorations="Underline" />
    </StackPanel>
</UserControl>