<UserControl x:Class="His_Pos.GeneralCustomControl.IconLabel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:His_Pos"
             mc:Ignorable="d">
    <Grid>
        <StackPanel Orientation="Horizontal">
            <Image Name="Icon" Width="30" Height="30" Margin="0,15,15,0"/>
            <TextBox Name="Label" Foreground="#FF424040" VerticalContentAlignment="Center" FontSize="18" Margin="0,10,10,0"/>
        </StackPanel>
    </Grid>
</UserControl>
