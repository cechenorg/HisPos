<UserControl
    x:Class="His_Pos.SYSTEM_TAB.SETTINGS.SettingControl.MyPharmacyControl.MyPharmacyControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:command="http://www.galasoft.ch/mvvmlight"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.SETTINGS.SettingControl.MyPharmacyControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="600"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <UserControl.DataContext>
        <local:MyPharmacyControlViewModel />
    </UserControl.DataContext>
    <UserControl.Resources>
        <DataTemplate x:Key="DataNotChanged">
            <Label
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="未修改"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
        </DataTemplate>
        <DataTemplate x:Key="DataChanged">
            <Label
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="已修改"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Red" />
        </DataTemplate>
    </UserControl.Resources>
    <xctk:BusyIndicator BusyContent="{Binding BusyContent, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" IsBusy="{Binding IsBusy, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
        <Grid Background="LightGray" DataContext="{Binding MyPharmacy, UpdateSourceTrigger=PropertyChanged}">
            <Grid.RowDefinitions>
                <RowDefinition Height="100" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition Height="60" />
                <RowDefinition />
                <RowDefinition Height="120" />
            </Grid.RowDefinitions>
            <TextBlock
                Grid.Row="0"
                Margin="0,0,0,10"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                FontFamily="Segoe UI Semibold"
                FontSize="45"
                Text="{Binding Name}" />
            <Border
                Grid.Row="0"
                Width="450"
                BorderBrush="DimGray"
                BorderThickness="0,0,0,1" />
            <StackPanel
                Grid.Row="1"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Semibold"
                    FontSize="28"
                    Foreground="DimGray"
                    Text="機構代碼" />
                <TextBox
                    Margin="20,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Semi"
                    MinWidth="150"
                    FontSize="25"
                    Foreground="DimGray"
                    Text="{Binding ID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <command:EventToCommand Command="{Binding DataContext.PharmacyIDChangedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Semibold"
                    FontSize="28"
                    Foreground="DimGray"
                    Text="門市電話" />
                <TextBox
                    Margin="20,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semi"
                    MinWidth="150"
                    FontSize="25"
                    Foreground="DimGray"
                    Text="{Binding Tel}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <command:EventToCommand Command="{Binding DataContext.DataChangedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
            </StackPanel>
            <StackPanel
                Grid.Row="3"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Semibold"
                    FontSize="28"
                    Foreground="DimGray"
                    Text="門市地址" />
                <TextBox
                    Margin="20,0,0,0"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semibold"
                    FontSize="25"
                    MinWidth="150"
                    Foreground="DimGray"
                    Text="{Binding Address}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <command:EventToCommand Command="{Binding DataContext.DataChangedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
            </StackPanel>
            <StackPanel
                Grid.Row="4"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <TextBlock
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontFamily="Segoe UI Semibold"
                    FontSize="28"
                    Foreground="DimGray"
                    Text="統一編號" />
                <TextBox
                    Margin="20,0,0,0"
                    MinWidth="150"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semibold"
                    FontSize="25"
                    Foreground="DimGray"
                    Text="{Binding TAXNUM}">
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="TextChanged">
                            <command:EventToCommand Command="{Binding DataContext.DataChangedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </TextBox>
            </StackPanel>
            <Grid
                Grid.Row="6"
                Margin="10"
                Background="{StaticResource Shadow}">
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Grid.Row="0" Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI Semibold"
                        FontSize="28"
                        Foreground="Black"
                        Text="讀卡機設定" />
                    <TextBlock
                        Margin="20,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI Semi"
                        FontSize="25"
                        Foreground="DimGray"
                        Text="COM" />
                    <ComboBox
                        Width="150"
                        Height="40"
                        Margin="10,0,0,0"
                        HorizontalContentAlignment="Center"
                        FontFamily="Segoe UI Semi"
                        FontSize="25"
                        Foreground="DimGray"
                        ItemContainerStyle="{StaticResource ComboItemContainerStyle}"
                        SelectedIndex="{Binding ReaderCom, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <TextBlock
                            FontFamily="Segoe UI Semi"
                            FontSize="20"
                            Foreground="DimGray"
                            Text="COM0" />
                        <TextBlock
                            FontFamily="Segoe UI Semi"
                            FontSize="20"
                            Foreground="DimGray"
                            Text="COM1" />
                        <TextBlock
                            FontFamily="Segoe UI Semi"
                            FontSize="20"
                            Foreground="DimGray"
                            Text="COM2" />
                        <TextBlock
                            FontFamily="Segoe UI Semi"
                            FontSize="20"
                            Foreground="DimGray"
                            Text="COM3" />
                        <TextBlock
                            FontFamily="Segoe UI Semi"
                            FontSize="20"
                            Foreground="DimGray"
                            Text="COM4" />
                        <TextBlock
                            FontFamily="Segoe UI Semi"
                            FontSize="20"
                            Foreground="DimGray"
                            Text="COM5" />
                        <TextBlock
                            FontFamily="Segoe UI Semi"
                            FontSize="20"
                            Foreground="DimGray"
                            Text="COM6" />
                        <TextBlock
                            FontFamily="Segoe UI Semi"
                            FontSize="20"
                            Foreground="DimGray"
                            Text="COM7" />
                        <TextBlock
                            FontFamily="Segoe UI Semi"
                            FontSize="20"
                            Foreground="DimGray"
                            Text="COM8" />
                        <TextBlock
                            FontFamily="Segoe UI Semi"
                            FontSize="20"
                            Foreground="DimGray"
                            Text="COM9" />
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="SelectionChanged">
                                <command:EventToCommand Command="{Binding DataContext.DataChangedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </ComboBox>
                    <Button
                        Margin="10,0,0,0"
                        Background="RoyalBlue"
                        BorderBrush="RoyalBlue"
                        Command="{Binding DataContext.VerifySAMDCCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Content="安全模組認證"
                        FontFamily="Segoe UI Semibold"
                        FontSize="16" />
                    <CheckBox
                        Margin="10,0,0,0"
                        Command="{Binding DataContext.NewInstitutionOnCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Content="新特約關閉每日上傳"
                        FontFamily="Segoe UI Semibold"
                        FontSize="16"
                        IsChecked="{Binding DataContext.MyPharmacy.NewInstitution, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                </StackPanel>
                <StackPanel Grid.Row="1" Orientation="Horizontal">
                    <TextBlock
                        Margin="10,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI Semibold"
                        FontSize="28"
                        Foreground="Black"
                        Text="健保局IP" />
                    <TextBox
                        Width="185"
                        Margin="20,0,0,8"
                        HorizontalContentAlignment="Center"
                        FontFamily="Segoe UI Semi"
                        FontSize="23"
                        Foreground="DimGray"
                        Text="{Binding VpnIp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="TextChanged">
                                <command:EventToCommand Command="{Binding DataContext.DataChangedCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </TextBox>
                    <ContentControl Margin="70,0,0,0">
                        <ContentControl.Style>
                            <Style TargetType="{x:Type ContentControl}">
                                <Setter Property="ContentTemplate" Value="{StaticResource DataNotChanged}" />
                                <Style.Triggers>
                                    <DataTrigger Binding="{Binding IsDataChanged, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                        <Setter Property="ContentTemplate" Value="{StaticResource DataChanged}" />
                                    </DataTrigger>
                                </Style.Triggers>
                            </Style>
                        </ContentControl.Style>
                    </ContentControl>
                    <Button
                        Width="120"
                        Margin="10,0,10,0"
                        Background="Gray"
                        BorderThickness="0"
                        Command="{Binding DataContext.CancelChangeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Content="取消"
                        FontFamily="Segoe UI Semibold"
                        FontSize="16" />
                    <Button
                        Width="150"
                        Background="IndianRed"
                        BorderThickness="0"
                        Command="{Binding DataContext.ConfirmChangeCommand, RelativeSource={RelativeSource AncestorType=UserControl}}"
                        Content="確認"
                        FontFamily="Segoe UI Semibold"
                        FontSize="16" />
                </StackPanel>
            </Grid>
        </Grid>
    </xctk:BusyIndicator>
</UserControl>