<UserControl
    x:Class="His_Pos.SYSTEM_TAB.H7_ACCOUNTANCY_REPORT.PurchaseReturnReport.PurchaseReturnReportView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:hisPos="clr-namespace:His_Pos"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:purchaseReturnReport="clr-namespace:His_Pos.SYSTEM_TAB.H7_ACCOUNTANCY_REPORT.PurchaseReturnReport"
    xmlns:service="clr-namespace:His_Pos.Service"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="839"
    d:DesignWidth="1365"
    mc:Ignorable="d">
    <UserControl.Resources>
        <service:NullableDateConverter x:Key="NullableDateConverter" />
        <DataTemplate x:Key="NoManufactoryControl" DataType="{x:Type purchaseReturnReport:PurchaseReturnReportViewModel}">
            <Grid Background="{StaticResource GridDarkerBackGround}">
                <Label
                    HorizontalAlignment="Center"
                    Content="無廠商資料"
                    Foreground="{StaticResource ForeGround}"
                    Style="{StaticResource BoldLabelHeader30}" />
            </Grid>
        </DataTemplate>
        <DataTemplate x:Key="ManufactoryControl" DataType="{x:Type purchaseReturnReport:PurchaseReturnReportViewModel}">
            <purchaseReturnReport:PurchaseReturnReportControl />
        </DataTemplate>
    </UserControl.Resources>
    <Grid Margin="10,0,10,10">
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition />
            <RowDefinition Height="50" />
            <RowDefinition Height="30" />
            <RowDefinition Height="100" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Orientation="Horizontal">
            <xctk:MaskedTextBox
                Width="150"
                Margin="20,0,10,5"
                HorizontalContentAlignment="Center"
                FontFamily="Segoe UI Semibold"
                FontSize="27"
                Foreground="{StaticResource ForeGround}"
                InsertKeyMode="Overwrite"
                Mask="000/00/00"
                PromptChar="-"
                Style="{StaticResource MaterialDesignTextBox}"
                ValueDataType="xctk:DateTimeFormat">
                <xctk:MaskedTextBox.Text>
                    <Binding
                        Converter="{StaticResource NullableDateConverter}"
                        Mode="TwoWay"
                        NotifyOnValidationError="True"
                        Path="StartDate"
                        UpdateSourceTrigger="PropertyChanged"
                        ValidatesOnDataErrors="True">
                        <Binding.ValidationRules>
                            <service:DateValidationRule />
                        </Binding.ValidationRules>
                    </Binding>
                </xctk:MaskedTextBox.Text>
            </xctk:MaskedTextBox>
            <Label
                VerticalAlignment="Center"
                Content="~"
                FontSize="25" />
            <xctk:MaskedTextBox
                Width="150"
                Margin="10,0,0,5"
                HorizontalContentAlignment="Center"
                FontFamily="Segoe UI Semibold"
                FontSize="27"
                Foreground="{StaticResource ForeGround}"
                InsertKeyMode="Overwrite"
                Mask="000/00/00"
                PromptChar="-"
                Style="{StaticResource MaterialDesignTextBox}"
                ValueDataType="xctk:DateTimeFormat">
                <xctk:MaskedTextBox.Text>
                    <Binding
                        Converter="{StaticResource NullableDateConverter}"
                        Mode="TwoWay"
                        NotifyOnValidationError="True"
                        Path="EndDate"
                        UpdateSourceTrigger="PropertyChanged"
                        ValidatesOnDataErrors="True">
                        <Binding.ValidationRules>
                            <service:DateValidationRule />
                        </Binding.ValidationRules>
                    </Binding>
                </xctk:MaskedTextBox.Text>
            </xctk:MaskedTextBox>
            <Label
                Margin="20,0,0,0"
                VerticalContentAlignment="Center"
                Content="供應商"
                FontFamily="Segoe UI Semibold"
                FontSize="25" />
            <TextBox
                Width="150"
                Margin="10,0,0,5"
                FontFamily="Segoe UI Semi"
                FontSize="25"
                Text="{Binding ManufactoryName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Margin="20,0,0,0"
                VerticalContentAlignment="Center"
                Content="庫別"
                FontFamily="Segoe UI Semibold"
                FontSize="25" />
            <ComboBox
                Width="120"
                HorizontalContentAlignment="Center"
                DisplayMemberPath="Name"
                FontSize="25"
                ItemsSource="{Binding WareHouseCollection}"
                SelectedItem="{Binding SelectedWareHouse, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            <Button
                Width="120"
                Height="35"
                Margin="390,0,0,0"
                Background="RoyalBlue"
                BorderThickness="0"
                Command="{Binding SearchCommand}"
                Content="查詢"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
        </StackPanel>
        <DataGrid
            Grid.Row="1"
            Grid.Column="0"
            AutoGenerateColumns="False"
            Background="{StaticResource GridBackGround}"
            CanUserAddRows="False"
            ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
            GridLinesVisibility="None"
            HeadersVisibility="None"
            HorizontalScrollBarVisibility="Hidden"
            ItemsSource="{Binding ManufactoryOrderCollection}"
            SelectedItem="{Binding CurrentManufactoryOrder, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            VerticalScrollBarVisibility="Hidden">
            <DataGrid.RowStyle>
                <Style TargetType="DataGridRow">
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Style.Triggers>
                        <Trigger Property="IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource GridSelected}" />
                        </Trigger>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter Property="Background" Value="{StaticResource Shadow}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="300">
                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="DataGridCell">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                        </Style>
                    </DataGridTemplateColumn.CellStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid Height="90">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40" />
                                    <RowDefinition />
                                    <RowDefinition />
                                </Grid.RowDefinitions>
                                <Label
                                    Grid.Row="0"
                                    Margin="5,0,0,0"
                                    Content="{Binding ManufactoryName}"
                                    FontFamily="Segoe UI Semibold"
                                    FontSize="25" />
                                <StackPanel Grid.Row="1" Orientation="Horizontal">
                                    <TextBlock
                                        Margin="20,0,0,0"
                                        FontFamily="Segoe UI Semibold"
                                        FontSize="15"
                                        Foreground="Green"
                                        Text="進貨單數量" />
                                    <TextBlock
                                        Width="40"
                                        FontFamily="Segoe UI Semi"
                                        FontSize="15"
                                        Foreground="DimGray"
                                        Text="{Binding PurchaseCount}"
                                        TextAlignment="Center" />
                                    <TextBlock
                                        FontFamily="Segoe UI Semibold"
                                        FontSize="15"
                                        Foreground="Green"
                                        Text="進貨總額 $" />
                                    <TextBlock
                                        Width="80"
                                        FontFamily="Segoe UI Semi"
                                        FontSize="15"
                                        Foreground="DimGray"
                                        Text="{Binding PurchasePrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"
                                        TextAlignment="Right" />
                                </StackPanel>
                                <StackPanel Grid.Row="2" Orientation="Horizontal">
                                    <TextBlock
                                        Margin="20,0,0,0"
                                        FontFamily="Segoe UI Semibold"
                                        FontSize="15"
                                        Foreground="IndianRed"
                                        Text="退貨單數量" />
                                    <TextBlock
                                        Width="40"
                                        FontFamily="Segoe UI Semi"
                                        FontSize="15"
                                        Foreground="DimGray"
                                        Text="{Binding ReturnCount}"
                                        TextAlignment="Center" />
                                    <TextBlock
                                        FontFamily="Segoe UI Semibold"
                                        FontSize="15"
                                        Foreground="IndianRed"
                                        Text="退貨總額 $" />
                                    <TextBlock
                                        Width="80"
                                        FontFamily="Segoe UI Semi"
                                        FontSize="15"
                                        Foreground="DimGray"
                                        Text="{Binding ReturnPrice, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"
                                        TextAlignment="Right" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="0"
            Background="{StaticResource GridBackGround}" />
        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                Width="120"
                Height="30"
                Margin="0,0,10,0"
                Background="RoyalBlue"
                BorderThickness="0"
                Command="{Binding ExportCSVTotalCommand}"
                Content="列印匯總"
                FontFamily="Segoe UI Semibold"
                FontSize="15" />
            <Button
                Width="120"
                Height="30"
                Margin="10,0,0,0"
                Background="RoyalBlue"
                BorderThickness="0"
                Command="{Binding ExportCSVDetailTotalCommand}"
                Content="列印總明細"
                FontFamily="Segoe UI Semibold"
                FontSize="15" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Grid.RowSpan="3"
            Grid.Column="0"
            Background="{StaticResource GridBackGround}" />
        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Background="{StaticResource GridBackGround}"
            Orientation="Horizontal">
            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semibold"
                FontSize="15"
                Text="進貨單總量" />
            <TextBlock
                Width="50"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="15"
                Text="{Binding ManufactoryOrdersPurchaseCount, UpdateSourceTrigger=PropertyChanged}"
                TextAlignment="Center" />
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semibold"
                FontSize="15"
                Text="進貨總額 $" />
            <TextBlock
                Width="80"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="15"
                Text="{Binding ManufactoryOrdersPurchaseTotal, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"
                TextAlignment="Right" />
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Grid.Column="0"
            Background="{StaticResource GridBackGround}"
            Orientation="Horizontal">
            <TextBlock
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semibold"
                FontSize="15"
                Text="退貨單總量" />
            <TextBlock
                Width="50"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="15"
                Text="{Binding ManufactoryOrdersReturnCount, UpdateSourceTrigger=PropertyChanged}"
                TextAlignment="Center" />
            <TextBlock
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semibold"
                FontSize="15"
                Text="退貨總額 $" />
            <TextBlock
                Width="80"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="15"
                Text="{Binding ManufactoryOrdersReturnTotal, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"
                TextAlignment="Right" />
        </StackPanel>
        <ContentControl
            Grid.Row="1"
            Grid.RowSpan="4"
            Grid.Column="1"
            Content="{Binding}">
            <ContentControl.Style>
                <Style TargetType="{x:Type ContentControl}">
                    <Setter Property="ContentTemplate" Value="{StaticResource NoManufactoryControl}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding HasManufactory, UpdateSourceTrigger=PropertyChanged}" Value="True">
                            <Setter Property="ContentTemplate" Value="{StaticResource ManufactoryControl}" />
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</UserControl>