<Window
    x:Class="His_Pos.SYSTEM_TAB.H5_ATTEND.WorkScheduleManage.Leave.LeaveWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="請假申請"
    Width="500"
    Height="300"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Rectangle
            Grid.Row="1"
            Grid.RowSpan="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="-10,0,-10,0"
            Fill="{StaticResource DarkShadow}" />
        <ComboBox
            Name="UserName"
            Grid.Row="0"
            Grid.Column="0"
            Width="200"
            Height="40"
            Margin="0,0,0,5"
            DisplayMemberPath="Name"
            FontFamily="Segoe UI Semibold"
            FontSize="20"
            ItemContainerStyle="{StaticResource ComboItemContainerStyle}"
            ItemsSource="{Binding UserIconDatas}" />
        <StackPanel
            Grid.Row="0"
            Grid.Column="1"
            Margin="10"
            Orientation="Horizontal">
            <Label
                Content="假別"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <ComboBox
                Name="DayOffType"
                Width="160"
                Margin="5,0,0,0"
                HorizontalContentAlignment="Center"
                DisplayMemberPath="Name"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                ItemContainerStyle="{StaticResource ComboItemContainerStyle}"
                ItemsSource="{Binding LeaveTypes}" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <RadioButton
                Name="LDay"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Checked="RadioButton_Checked"
                Content="天"
                FontFamily="Segoe UI Semibold"
                FontSize="18"
                IsChecked="True"
                Tag="0" />
            <RadioButton
                Name="LHour"
                Margin="50,0,0,0"
                VerticalAlignment="Center"
                VerticalContentAlignment="Center"
                Checked="RadioButton_Checked"
                Content="小時"
                FontFamily="Segoe UI Semibold"
                FontSize="18"
                Tag="1" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Margin="4"
            Orientation="Horizontal">
            <Label
                Content="日期"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <DatePicker
                Name="StartDate"
                Width="165"
                Height="30"
                Margin="10,0,0,0"
                FontSize="15"
                SelectedDateFormat="Short" />
        </StackPanel>
        <StackPanel
            Name="LeaveDays"
            Grid.Row="2"
            Grid.Column="1"
            Margin="4"
            Orientation="Horizontal">
            <Label
                Width="50"
                HorizontalContentAlignment="Center"
                Content="~"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <DatePicker
                Name="EndDate"
                Width="165"
                Height="30"
                Margin="10,0,0,0"
                FontSize="15"
                SelectedDateFormat="Short" />
        </StackPanel>
        <StackPanel
            Name="LeaveHours"
            Grid.Row="2"
            Grid.Column="1"
            Margin="5,0,0,0"
            Orientation="Horizontal"
            Visibility="Collapsed">
            <materialDesign:TimePicker
                Name="StartTime"
                Width="100"
                Height="27"
                materialDesign:HintAssist.Hint=""
                FontSize="14"
                IsInvalidTextAllowed="False" />
            <Label
                HorizontalContentAlignment="Center"
                Content="~"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <materialDesign:TimePicker
                Name="EndTime"
                Width="100"
                Height="27"
                materialDesign:HintAssist.Hint=""
                FontSize="14"
                IsInvalidTextAllowed="False" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Margin="4"
            Orientation="Horizontal">
            <Label
                Content="原因"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <TextBox
                Name="Note"
                Width="395"
                Margin="10,0,0,0"
                FontFamily="Segoe UI Semi"
                FontSize="18" />
        </StackPanel>
        <Button
            Grid.Row="4"
            Grid.Column="0"
            Width="150"
            Margin="0,10,0,0"
            Background="Gray"
            BorderThickness="0"
            Click="CloseWindow"
            Content="取消"
            FontFamily="Segoe UI Semibold"
            FontSize="16" />
        <Button
            Grid.Row="4"
            Grid.Column="1"
            Width="150"
            Margin="0,10,0,0"
            Background="IndianRed"
            BorderThickness="0"
            Click="Confirm_Click"
            Content="確認"
            FontFamily="Segoe UI Semibold"
            FontSize="16" />
    </Grid>
</Window>