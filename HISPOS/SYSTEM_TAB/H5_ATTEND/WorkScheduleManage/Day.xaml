    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:workScheduleManage="clr-namespace:His_Pos.SYSTEM_TAB.H5_ATTEND.WorkScheduleManage"
    d:DesignHeight="105"
    d:DesignWidth="192"
    mc:Ignorable="d">
