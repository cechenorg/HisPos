<UserControl
    x:Class="His_Pos.SYSTEM_TAB.H3_STOCKTAKING.StockTakingRecord.StockTakingRecordView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:generalCustomControl="clr-namespace:His_Pos.GeneralCustomControl"
    xmlns:hisPos="clr-namespace:His_Pos"
    xmlns:local="[local ]clr-namespace:His_Pos.SYSTEM_TAB.H3_STOCKTAKING.StockTakingRecord"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="clr-namespace:His_Pos.Service"
    xmlns:stockTakingRecord="clr-namespace:His_Pos.SYSTEM_TAB.H3_STOCKTAKING.StockTakingRecord"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="839"
    d:DesignWidth="1365"
    mc:Ignorable="d">
    <UserControl.Resources>
        <service:DateConverter x:Key="DateConverter" />
    </UserControl.Resources>
    <Viewbox Stretch="Fill">
        <Grid Width="1365" Height="839">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                Margin="9"
                Orientation="Horizontal">
                <Label
                    Margin="10,0,10,0"
                    Content="日期"
                    FontFamily="Segoe UI Semibold"
                    FontSize="18"
                    Foreground="{StaticResource ForeGround}" />
                <xctk:MaskedTextBox
                    Width="120"
                    Margin="5,0,0,0"
                    HorizontalContentAlignment="Center"
                    FontSize="18"
                    Foreground="{StaticResource ForeGround}"
                    InsertKeyMode="Overwrite"
                    Mask="000/00/00"
                    PromptChar="-"
                    Style="{StaticResource MaterialDesignTextBox}"
                    ValueDataType="xctk:DateTimeFormat">
                    <xctk:MaskedTextBox.Text>
                        <Binding
                            Converter="{StaticResource DateConverter}"
                            Mode="TwoWay"
                            NotifyOnValidationError="True"
                            Path="StartDate"
                            UpdateSourceTrigger="PropertyChanged"
                            ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <service:DateValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </xctk:MaskedTextBox.Text>
                </xctk:MaskedTextBox>
                <Label
                    Margin="10,0,10,0"
                    VerticalContentAlignment="Center"
                    Content="~" />
                <xctk:MaskedTextBox
                    Width="120"
                    Margin="5,0,0,0"
                    HorizontalContentAlignment="Center"
                    FontSize="18"
                    Foreground="{StaticResource ForeGround}"
                    InsertKeyMode="Overwrite"
                    Mask="000/00/00"
                    PromptChar="-"
                    Style="{StaticResource MaterialDesignTextBox}"
                    ValueDataType="xctk:DateTimeFormat">
                    <xctk:MaskedTextBox.Text>
                        <Binding
                            Converter="{StaticResource DateConverter}"
                            Mode="TwoWay"
                            NotifyOnValidationError="True"
                            Path="EndDate"
                            UpdateSourceTrigger="PropertyChanged"
                            ValidatesOnDataErrors="True">
                            <Binding.ValidationRules>
                                <service:DateValidationRule />
                            </Binding.ValidationRules>
                        </Binding>
                    </xctk:MaskedTextBox.Text>
                </xctk:MaskedTextBox>
                <Label
                    Margin="10,0,10,0"
                    Content="商品編號"
                    FontFamily="Segoe UI Semibold"
                    FontSize="18"
                    Foreground="{StaticResource ForeGround}" />
                <TextBox
                    Width="130"
                    Margin="0,0,10,0"
                    FontSize="16"
                    Text="{Binding ProID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                <Label
                    Margin="10,0,10,0"
                    Content="商品名稱"
                    FontFamily="Segoe UI Semibold"
                    FontSize="18"
                    Foreground="{StaticResource ForeGround}" />
                <TextBox
                    Width="130"
                    Margin="0,0,10,0"
                    FontSize="16"
                    Text="{Binding ProName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />

                <Rectangle Width="400" />
                <Button
                    Grid.Row="0"
                    Grid.Column="1"
                    Width="100"
                    Height="30"
                    Background="RoyalBlue"
                    BorderThickness="0"
                    Command="{Binding SearchCommand}"
                    Content="查詢"
                    FontSize="18"
                    FontWeight="Bold" />
            </StackPanel>
            <Grid Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="210" />
                    <ColumnDefinition Width="16*" />
                    <ColumnDefinition Width="61*" />
                </Grid.ColumnDefinitions>
                <DataGrid
                    Name="StockTakingRecord"
                    Grid.Column="0"
                    Margin="10,10,0,10"
                    AutoGenerateColumns="False"
                    Background="{StaticResource GridBackGround}"
                    CanUserAddRows="False"
                    ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                    HeadersVisibility="None"
                    HorizontalScrollBarVisibility="Hidden"
                    ItemsSource="{Binding StockTakingCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding StockTakingSelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    VerticalScrollBarVisibility="Hidden">
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="210">
                            <DataGridTemplateColumn.CellStyle>
                                <Style TargetType="{x:Type DataGridCell}">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="Foreground" Value="{StaticResource ForeGround}" />
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource GridSelected}" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGridTemplateColumn.CellStyle>
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <Grid Height="70" Margin="20,0,0,0">
                                        <Grid.RowDefinitions>
                                            <RowDefinition />
                                            <RowDefinition />
                                        </Grid.RowDefinitions>
                                        <StackPanel Grid.Row="0" Orientation="Horizontal">
                                            <Label
                                                Width="160"
                                                Content="{Binding ID, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                                FontFamily="Segoe UI Semibold"
                                                FontSize="23"
                                                Foreground="Black" />
                                            <TextBlock
                                                Margin="5,0,5,0"
                                                VerticalAlignment="Center"
                                                FontFamily="Segoe UI Semi"
                                                FontSize="15" />
                                        </StackPanel>
                                        <StackPanel Grid.Row="1" Orientation="Horizontal">
                                            <Label
                                                VerticalAlignment="Center"
                                                Content="盤點人"
                                                FontFamily="Segoe UI Semi" />
                                            <TextBlock
                                                Margin="5,0,5,0"
                                                VerticalAlignment="Center"
                                                FontFamily="Segoe UI Semi"
                                                FontSize="15"
                                                Text="{Binding Employee.Name, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                        </StackPanel>
                                    </Grid>
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <Grid
                    Grid.Column="1"
                    Grid.ColumnSpan="2"
                    Margin="0,10,10,10"
                    Background="{StaticResource GridDarkerBackGround}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition Height="50" />
                    </Grid.RowDefinitions>
                    <Grid Grid.Row="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40" />
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="7*" />
                            <ColumnDefinition Width="4*" />
                        </Grid.ColumnDefinitions>
                        <Label
                            Grid.Row="0"
                            Grid.Column="0"
                            Margin="20,0,0,0"
                            VerticalAlignment="Bottom"
                            HorizontalContentAlignment="Center"
                            Content="有更動"
                            FontFamily="Segoe UI Semibold"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="{StaticResource ForeGround}" />
                        <Label
                            Grid.Row="0"
                            Grid.Column="1"
                            Margin="20,0,0,0"
                            VerticalAlignment="Bottom"
                            HorizontalContentAlignment="Center"
                            Content="未更動"
                            FontFamily="Segoe UI Semibold"
                            FontSize="20"
                            FontWeight="Bold"
                            Foreground="{StaticResource ForeGround}" />
                        <DataGrid
                            Grid.Row="2"
                            Grid.Column="0"
                            Margin="10,0,5,10"
                            AutoGenerateColumns="False"
                            Background="{StaticResource Shadow}"
                            CanUserAddRows="False"
                            CellStyle="{StaticResource DataGridCellStyle}"
                            ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                            ItemsSource="{Binding ChangeProductCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <DataGrid.RowStyle>
                                <Style TargetType="{x:Type DataGridRow}">
                                    <Style.Triggers>
                                        <Trigger Property="DataGridRow.IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource GridSelected}" />
                                        </Trigger>
                                    </Style.Triggers>
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="Height" Value="40" />
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="100"
                                    Binding="{Binding ID}"
                                    FontFamily="Segoe UI Semi"
                                    Header="商品編號"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTemplateColumn
                                    MaxWidth="200"
                                    Header="商品名稱"
                                    IsReadOnly="True">
                                    <DataGridTemplateColumn.CellTemplate>
                                        <DataTemplate>
                                            <StackPanel Orientation="Horizontal">
                                                <generalCustomControl:ProductStatusIcon
                                                    CommonSafeAmount="{Binding SafeAmount}"
                                                    ControlLevel="{Binding IsControl}"
                                                    IsCommon="{Binding IsCommon}"
                                                    IsFrozen="{Binding IsFrozen}" />
                                                <Label
                                                    Margin="-5,0,0,0"
                                                    VerticalAlignment="Center"
                                                    Content="{Binding FullName}"
                                                    FontFamily="Segoe UI Semibold" />
                                            </StackPanel>
                                        </DataTemplate>
                                    </DataGridTemplateColumn.CellTemplate>
                                    <DataGridTemplateColumn.CellStyle>
                                        <Style TargetType="{x:Type DataGridCell}">
                                            <Setter Property="Background" Value="Transparent" />
                                            <Setter Property="BorderBrush" Value="Transparent" />
                                            <Setter Property="Foreground" Value="#FF424040" />
                                        </Style>
                                    </DataGridTemplateColumn.CellStyle>
                                </DataGridTemplateColumn>
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding Inventory}"
                                    FontFamily="Segoe UI Semi"
                                    Header="當下庫存"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding NewInventory}"
                                    FontFamily="Segoe UI Semi"
                                    Header="盤點量"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="80"
                                    Binding="{Binding PriceValueDiff, StringFormat=N2}"
                                    FontFamily="Segoe UI Semi"
                                    Header="盤差額"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="170"
                                    Binding="{Binding Note}"
                                    FontFamily="Segoe UI Semi"
                                    Header="盤差原因"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                        <DataGrid
                            Grid.Row="2"
                            Grid.Column="1"
                            Margin="5,0,10,10"
                            AutoGenerateColumns="False"
                            Background="{StaticResource Shadow}"
                            CanUserAddRows="False"
                            CellStyle="{StaticResource DataGridCellStyle}"
                            ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                            ItemsSource="{Binding UnChangeProductCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                            <DataGrid.RowStyle>
                                <Style TargetType="{x:Type DataGridRow}">
                                    <Style.Triggers>
                                        <Trigger Property="DataGridRow.IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource GridSelected}" />
                                        </Trigger>
                                    </Style.Triggers>
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="FontSize" Value="14" />
                                    <Setter Property="Height" Value="40" />
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn
                                    Width="120"
                                    Binding="{Binding ID}"
                                    FontFamily="Segoe UI Semi"
                                    Header="商品編號"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="190"
                                    Binding="{Binding FullName}"
                                    FontFamily="Segoe UI Semi"
                                    Header="商品名稱"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="HorizontalAlignment" Value="Left" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn
                                    Width="90"
                                    Binding="{Binding Inventory}"
                                    FontFamily="Segoe UI Semi"
                                    Header="當下庫存"
                                    IsReadOnly="True">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </Grid>
                    <StackPanel
                        Grid.Row="2"
                        Background="{StaticResource Shadow}"
                        Orientation="Horizontal">
                        <Label
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Content="盤點"
                            FontFamily="Segoe UI Semibold"
                            FontSize="20"
                            Foreground="Black" />
                        <Label
                            Width="90"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Content="{Binding TotalProductCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            FontFamily="Segoe UI Semi"
                            FontSize="20"
                            Foreground="Black" />
                        <Label
                            VerticalAlignment="Center"
                            Content="項 , 有更動"
                            FontFamily="Segoe UI Semibold"
                            FontSize="20"
                            Foreground="Black" />
                        <Label
                            Width="90"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            Content="{Binding ChangeProductCount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                            FontFamily="Segoe UI Semi"
                            FontSize="20"
                            Foreground="Black" />
                        <Label
                            VerticalAlignment="Center"
                            Content="項"
                            FontFamily="Segoe UI Semibold"
                            FontSize="20"
                            Foreground="Black" />
                        <Label
                            Margin="20,0,0,0"
                            VerticalAlignment="Center"
                            Content="盤差總額"
                            FontFamily="Segoe UI Semibold"
                            FontSize="20"
                            Foreground="Black" />
                        <TextBlock
                            Width="90"
                            VerticalAlignment="Center"
                            FontFamily="Segoe UI Semi"
                            FontSize="20"
                            Foreground="Black"
                            Text="{Binding StockTakingSelectedItem.TotalValueDiff, StringFormat=N2, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    </StackPanel>
                </Grid>
            </Grid>
        </Grid>
    </Viewbox>
</UserControl>