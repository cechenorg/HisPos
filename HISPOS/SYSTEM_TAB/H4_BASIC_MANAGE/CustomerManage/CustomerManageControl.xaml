<UserControl
    x:Class="His_Pos.SYSTEM_TAB.H4_BASIC_MANAGE.CustomerManage.CustomerManageControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.H4_BASIC_MANAGE.CustomerManage"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="clr-namespace:His_Pos.Service"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    mc:Ignorable="d">
    <UserControl.Resources>
        <service:NullableDateConverter x:Key="NullableDateConverter" />
        <service:InvertBoolConverter x:Key="InvertBoolConverter" />
        <DataTemplate x:Key="DataNotChanged" DataType="UserControl">
            <Label
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="未修改"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
        </DataTemplate>
        <DataTemplate x:Key="DataChanged" DataType="UserControl">
            <Label
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="已修改"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Red" />
        </DataTemplate>
    </UserControl.Resources>
    <Grid Background="{StaticResource GridDarkerBackGround}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="110" />
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <StackPanel
            Grid.Row="0"
            Grid.Column="0"
            Grid.ColumnSpan="6"
            Orientation="Horizontal">
            <TextBox
                x:Name="tbName"
                Width="300"
                Margin="20,0,0,0"
                VerticalAlignment="Center"
                materialDesign:HintAssist.Hint="姓名"
                BorderThickness="0"
                FontFamily="Segoe UI Semibold"
                FontSize="40"
                FontWeight="Bold"
                Foreground="Black"
                Text="{Binding Customer.Name, UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding DataChangeCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
            <CheckBox
                x:Name="cbIsEmployee"
                Margin="500,0,0,0"
                VerticalAlignment="Center"
                Content="員工身分"
                FontFamily="Segoe UI Semi"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                IsChecked="{Binding Customer.IsEmp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                Visibility="Visible">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="Checked">
                        <i:InvokeCommandAction Command="{Binding DataChangeCommand}" />
                    </i:EventTrigger>
                    <i:EventTrigger EventName="Unchecked">
                        <i:InvokeCommandAction Command="{Binding DataChangeCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </CheckBox>
            <Button
                Width="120"
                Margin="50,0,10,0"
                Background="IndianRed"
                BorderThickness="0"
                Command="{Binding DeleteCommand}"
                Content="刪除"
                FontFamily="Segoe UI Semibold"
                FontSize="16"
                IsEnabled="True" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Grid.Column="0"
            Grid.ColumnSpan="6"
            Margin="8"
            Orientation="Horizontal">
            <Label
                VerticalAlignment="Center"
                Content="性別"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <ComboBox
                Width="50"
                Margin="10,0,0,0"
                HorizontalContentAlignment="Center"
                DisplayMemberPath="GenderName"
                FontSize="18"
                IsSynchronizedWithCurrentItem="True"
                ItemContainerStyle="{StaticResource ComboItemContainerStyle}"
                ItemsSource="{Binding Genders}"
                SelectedValue="{Binding Customer.Gender, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedValuePath="GenderName">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding DataChangeCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </ComboBox>
            <Label
                Margin="10,0,0,0"
                Content="生日"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <xctk:MaskedTextBox
                Name="PatientBirthday"
                Width="90"
                Margin="10,0,0,0"
                HorizontalContentAlignment="Center"
                materialDesign:HintAssist.Hint="生日"
                FontFamily="Segoe UI Semibold"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                GotFocus="DateControl_GotFocus"
                InputMethod.IsInputMethodEnabled="False"
                InputScope="Number"
                InsertKeyMode="Default"
                Mask="000/00/00"
                PreviewKeyDown="PatientBirthday_OnPreviewKeyDown"
                PromptChar="-"
                Style="{StaticResource MaterialDesignTextBox}"
                ValueDataType="{x:Type xctk:DateTimeFormat}">
                <xctk:MaskedTextBox.Text>
                    <Binding
                        Converter="{StaticResource NullableDateConverter}"
                        Mode="TwoWay"
                        NotifyOnValidationError="True"
                        Path="Customer.Birthday"
                        UpdateSourceTrigger="PropertyChanged"
                        ValidatesOnDataErrors="True">
                        <Binding.ValidationRules>
                            <service:DateValidationRule />
                        </Binding.ValidationRules>
                    </Binding>
                </xctk:MaskedTextBox.Text>
            </xctk:MaskedTextBox>
            <Label
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="身分證"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />

            <TextBox
                Width="120"
                Margin="10,0,0,0"
                HorizontalContentAlignment="Center"
                FontSize="18"
                Text="{Binding Customer.IDNumber, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding DataChangeCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>

            <Label
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="家電"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <TextBox
                Width="120"
                Margin="10,0,0,0"
                HorizontalContentAlignment="Center"
                FontSize="18"
                PreviewTextInput="TextBox_PreviewTextInput"
                PreviewKeyDown="TextBox_PreviewKeyDown"
                InputMethod.IsInputMethodEnabled="False"
                Text="{Binding Customer.Tel, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding DataChangeCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
            <Label
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="手機1"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <TextBox
                Width="120"
                Margin="10,0,0,0"
                HorizontalContentAlignment="Center"
                FontSize="18"
                PreviewTextInput="TextBox_PreviewTextInput"
                PreviewKeyDown="TextBox_PreviewKeyDown"
                InputMethod.IsInputMethodEnabled="False"
                Text="{Binding Customer.CellPhone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:####-######}}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding DataChangeCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
            <Label
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="手機2"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <TextBox
                Width="120"
                Margin="10,0,0,0"
                HorizontalContentAlignment="Center"
                FontSize="18"
                PreviewTextInput="TextBox_PreviewTextInput"
                PreviewKeyDown="TextBox_PreviewKeyDown"
                InputMethod.IsInputMethodEnabled="False"
                Text="{Binding Customer.SecondPhone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged, StringFormat={}{0:####-######}}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding DataChangeCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="6"
            Margin="8"
            Orientation="Horizontal">
            <Label
                VerticalAlignment="Center"
                Content="LINE"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <TextBox
                Width="140"
                Margin="10,0,0,0"
                HorizontalContentAlignment="Center"
                FontSize="18"
                Text="{Binding Customer.Line, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding DataChangeCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
            <Label
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="電子信箱"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <TextBox
                Width="322"
                Margin="10,0,0,0"
                HorizontalContentAlignment="Center"
                FontSize="18"
                Text="{Binding Customer.Email, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding DataChangeCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
            <Label
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="住址"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <TextBox
                Width="360"
                Margin="10,0,0,0"
                HorizontalContentAlignment="Center"
                FontSize="18"
                Text="{Binding Customer.Address, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding DataChangeCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Grid.Column="0"
            Grid.ColumnSpan="6"
            Background="{StaticResource Shadow}"
            Orientation="Horizontal">
            <Label
                Margin="8,0,0,0"
                VerticalAlignment="Center"
                Content="聯絡備註"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <TextBox
                Width="447"
                Margin="10,10,0,10"
                AcceptsReturn="True"
                Background="{StaticResource LightForeGround}"
                FontSize="18"
                Text="{Binding Customer.ContactNote, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Visible">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding DataChangeCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
            <Label
                Height="50"
                Margin="20,0,0,0"
                HorizontalAlignment="Center"
                VerticalContentAlignment="Center"
                Content="備註"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Black" />
            <TextBox
                Width="450"
                Margin="10,10,0,10"
                AcceptsReturn="True"
                Background="{StaticResource LightForeGround}"
                FontSize="16"
                Text="{Binding Customer.Note, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                TextWrapping="Wrap"
                VerticalScrollBarVisibility="Visible">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="TextChanged">
                        <i:InvokeCommandAction Command="{Binding DataChangeCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
            </TextBox>
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="6"
            Orientation="Horizontal">
            <Rectangle Width="726" />
            <ContentControl>
                <ContentControl.Style>
                    <Style TargetType="{x:Type ContentControl}">
                        <Setter Property="ContentTemplate" Value="{StaticResource DataNotChanged}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding IsDataChanged, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Value="True">
                                <Setter Property="ContentTemplate" Value="{StaticResource DataChanged}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
            <Button
                Width="120"
                Margin="10,0,10,0"
                Background="Gray"
                BorderThickness="0"
                Command="{Binding CancelCommand}"
                Content="取消"
                FontFamily="Segoe UI Semibold"
                FontSize="16" />
            <Button
                Width="150"
                Background="IndianRed"
                BorderThickness="0"
                Command="{Binding SubmitCommand}"
                Content="確認"
                FontFamily="Segoe UI Semibold"
                FontSize="16" />
        </StackPanel>
        <Grid
            Grid.Row="5"
            Grid.ColumnSpan="6"
            Margin="0,0,0,0.333">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="570" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal">
                <Label
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    BorderThickness="0"
                    Content="處方歷程"
                    FontFamily="Segoe UI Semibold"
                    FontSize="25"
                    FontWeight="Bold"
                    Foreground="{StaticResource ForeGround}" />
                <ComboBox
                    Width="100"
                    Margin="10,0,0,0"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semi"
                    FontSize="18"
                    ItemContainerStyle="{StaticResource ComboItemContainerStyle}"
                    ItemsSource="{Binding PrescriptionCaseString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding PrescriptionCaseSelectItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <DataGrid
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,0,0,10"
                AutoGenerateColumns="False"
                Background="{StaticResource GridBackGround}"
                CanUserAddRows="False"
                CellStyle="{StaticResource DataGridCellStyle}"
                ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                ItemsSource="{Binding PrescriptionDetailView, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding CustomerDetailPrescriptionSelectedItem, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="SelectionChanged">
                        <i:InvokeCommandAction Command="{Binding ShowMedicinesDetailCommand}" />
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="DataGridRow.IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource GridSelected}" />
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="Height" Value="40" />
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="150"
                        Binding="{Binding InsName}"
                        FontFamily="Segoe UI Semi"
                        Header="院所"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                                <Setter Property="Margin" Value="10,0,0,0" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="80"
                        Binding="{Binding DivName}"
                        FontFamily="Segoe UI Semi"
                        Header="科別"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding TreatMentDate, Converter={StaticResource NullableDateConverter}}"
                        FontFamily="Segoe UI Semi"
                        Header="就醫日"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding AdjustDate, Converter={StaticResource NullableDateConverter}}"
                        FontFamily="Segoe UI Semi"
                        Header="調劑日"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding ChronicStatus}"
                        FontFamily="Segoe UI Semi"
                        Header="慢箋狀態"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid
                Grid.Row="1"
                Grid.Column="1"
                Margin="10,0,10,10"
                AutoGenerateColumns="False"
                Background="{StaticResource GridBackGround}"
                CanUserAddRows="False"
                CellStyle="{StaticResource DataGridCellStyle}"
                ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                ItemsSource="{Binding CustomerDetailPrescriptionMedicines, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="DataGridRow.IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource GridSelected}" />
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="Height" Value="40" />
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding ID}"
                        FontFamily="Segoe UI Semi"
                        Header="藥品代碼"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="200"
                        Binding="{Binding Name}"
                        FontFamily="Segoe UI Semi"
                        Header="藥品名稱"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Usage}"
                        FontFamily="Segoe UI Semi"
                        Header="用法"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Dossage}"
                        FontFamily="Segoe UI Semi"
                        Header="用量"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="100"
                        Binding="{Binding Amount}"
                        FontFamily="Segoe UI Semi"
                        Header="總量"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Grid>
</UserControl>