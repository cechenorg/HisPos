<UserControl
    x:Class="His_Pos.SYSTEM_TAB.H4_BASIC_MANAGE.AuthenticationManage.AuthenticationManageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="839"
    d:DesignWidth="1365"
    mc:Ignorable="d">
    <Viewbox Stretch="Fill">
        <Grid Width="1365" Height="839">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <Grid
                Grid.Row="0"
                Grid.Column="0"
                Margin="10"
                Background="{StaticResource GridBackGround}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    Margin="5"
                    Orientation="Horizontal">
                    <Label
                        Margin="20,0,0,0"
                        Content="請假審核"
                        FontFamily="Segoe UI Semibold"
                        FontSize="20" />
                    <ToggleButton
                        Name="LeaveToggle"
                        Margin="20,0,0,0"
                        Click="AuthLeaveToggle" />
                </StackPanel>
                <DataGrid
                    Name="LeaveGrid"
                    Grid.Row="1"
                    AutoGenerateColumns="False"
                    Background="{StaticResource Shadow}"
                    CanUserAddRows="False"
                    CellStyle="{StaticResource DataGridCellStyle}"
                    ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                    HorizontalScrollBarVisibility="Disabled"
                    ItemsSource="{Binding AuthLeaveRecords, UpdateSourceTrigger=PropertyChanged}">
                    <DataGrid.Resources>
                        <Style TargetType="{x:Type ScrollBar}">
                            <Setter Property="SnapsToDevicePixels" Value="True" />
                            <Setter Property="OverridesDefaultStyle" Value="true" />
                            <Setter Property="Width" Value="100" />
                            <Style.Triggers>
                                <Trigger Property="Orientation" Value="Horizontal">
                                    <Setter Property="Width" Value="Auto" />
                                    <Setter Property="Height" Value="15" />
                                    <Setter Property="Template" Value="{StaticResource HorizontalScrollBar}" />
                                </Trigger>
                                <Trigger Property="Orientation" Value="Vertical">
                                    <Setter Property="Width" Value="15" />
                                    <Setter Property="Height" Value="Auto" />
                                    <Setter Property="Template" Value="{StaticResource VerticalScrollBar}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </DataGrid.Resources>
                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Style.Triggers>
                                <Trigger Property="DataGridRow.IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource GridSelected}" />
                                </Trigger>
                            </Style.Triggers>
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="Height" Value="40" />
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTemplateColumn Width="40">
                            <DataGridTemplateColumn.CellTemplate>
                                <DataTemplate>
                                    <CheckBox
                                        HorizontalAlignment="Center"
                                        Click="AuthLeave_OnClick"
                                        IsChecked="{Binding IsSelected, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                                </DataTemplate>
                            </DataGridTemplateColumn.CellTemplate>
                        </DataGridTemplateColumn>
                        <DataGridTextColumn
                            Width="90"
                            Binding="{Binding Id}"
                            FontFamily="Segoe UI Semi"
                            FontSize="16"
                            Header="員工編號"
                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Width="110"
                            Binding="{Binding Name}"
                            FontFamily="Segoe UI Semi"
                            FontSize="16"
                            Header="員工姓名"
                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Width="70"
                            Binding="{Binding LeaveType}"
                            FontFamily="Segoe UI Semi"
                            FontSize="16"
                            Header="假別"
                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Width="200"
                            Binding="{Binding Dates}"
                            FontFamily="Segoe UI Semi"
                            FontSize="16"
                            Header="請假日期"
                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                        <DataGridTextColumn
                            Width="120"
                            Binding="{Binding Notes}"
                            FontFamily="Segoe UI Semi"
                            FontSize="16"
                            Header="原因"
                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                </DataGrid>
                <StackPanel
                    Name="LeaveConfirmStack"
                    Grid.Row="2"
                    Margin="5"
                    Orientation="Horizontal">
                    <CheckBox
                        Name="AuthLeaveAllSelectCheckBox"
                        Margin="5,0,0,0"
                        VerticalAlignment="Center"
                        Click="AuthLeaveAllSelectCheckBox_OnClick"
                        Content="全選"
                        FontFamily="Segoe UI Semibold"
                        FontSize="20" />
                    <Rectangle Width="320" />
                    <Label
                        Margin="20,0,0,0"
                        VerticalAlignment="Center"
                        Content="同意"
                        FontFamily="Segoe UI Semibold"
                        FontSize="20" />
                    <Label
                        Width="50"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        Content="{Binding AuthLeaveCheckedCount, UpdateSourceTrigger=PropertyChanged}"
                        FontFamily="Segoe UI Semibold"
                        FontSize="20" />
                    <Label
                        VerticalAlignment="Center"
                        Content="位"
                        FontFamily="Segoe UI Semibold"
                        FontSize="20" />
                    <Button
                        Width="100"
                        Margin="10,0,0,0"
                        Background="IndianRed"
                        BorderThickness="0"
                        Click="LeaveConfirm_OnClick"
                        Content="核准"
                        FontFamily="Segoe UI Semibold"
                        FontSize="16" />
                </StackPanel>
            </Grid>
        </Grid>
    </Viewbox>
</UserControl>