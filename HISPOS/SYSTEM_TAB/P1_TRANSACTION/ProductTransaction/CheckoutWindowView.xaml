<Window
    x:Class="His_Pos.SYSTEM_TAB.P1_TRANSACTION.ProductTransaction.CheckoutWindowView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.P1_TRANSACTION.ProductTransaction"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="結帳視窗"
    Width="520"
    Height="710"
    DataContext="{Binding RelativeSource={RelativeSource Self}}"
    FontFamily="Segoe UI Semibold"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Window.Background>
        <ImageBrush ImageSource="/Images/tabViewBackground.jpg" />
    </Window.Background>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="55" />
            <RowDefinition Height="55" />
            <RowDefinition Height="55" />
            <RowDefinition Height="55" />
            <RowDefinition Height="55" />
            <RowDefinition Height="55" />
            <RowDefinition Height="55" />
            <RowDefinition Height="55" />
            <RowDefinition Height="55" />
            <RowDefinition Height="55" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Margin="10,0,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label Content="結帳筆數：" FontSize="20" />
            <Label
                x:Name="lblLineCount"
                Content="0"
                FontSize="20" />
            <Label
                Margin="10,0,0,0"
                Content="商品數量："
                FontSize="20" />
            <Label
                x:Name="lblItemCount"
                Content="0"
                FontSize="20" />
            <Button
                x:Name="btnNoReciept"
                Width="15"
                Height="15"
                Margin="200,0,0,0"
                Background="LightGray"
                BorderBrush="LightGray"
                Click="btnNoReciept_Click" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Margin="10,0,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label Content="統一編號：" FontSize="24" />
            <TextBox
                x:Name="tbTaxNum"
                Width="120"
                FontSize="24"
                PreviewKeyDown="tbTaxNum_PreviewKeyDown"
                Text="" />
        </StackPanel>
        <StackPanel
            Grid.Row="2"
            Margin="10,0,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label Content="發票號碼：" FontSize="24" />
            <Label x:Name="tbInvoiceNum" FontSize="24" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Margin="10,0,10,0"
            VerticalAlignment="Center"
            Background="Khaki"
            Orientation="Horizontal">
            <Label Content="應收金額：" FontSize="24" />
            <Label Content="$" FontSize="24" />
            <Label
                x:Name="lblTotal"
                Content="0"
                FontSize="24" />
        </StackPanel>
        <StackPanel
            Grid.Row="4"
            Margin="10,0,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label Content="實收現金：" FontSize="24" />
            <TextBox
                x:Name="tbCash"
                Width="100"
                FontSize="24"
                GotFocus="tbCash_GotFocus"
                InputMethod.InputScope="Number"
                LostFocus="tbCash_LostFocus"
                PreviewKeyDown="tbCash_PreviewKeyDown"
                Text="" />
            <Label
                Margin="20,0,0,0"
                Content="訂金沖銷："
                FontSize="24" />
            <TextBox
                x:Name="tbPrepay"
                Width="100"
                FontSize="24"
                GotFocus="tbCash_GotFocus"
                InputMethod.InputScope="Number"
                IsEnabled="False"
                LostFocus="tbCash_LostFocus"
                PreviewKeyDown="tbCash_PreviewKeyDown"
                Text="" />
        </StackPanel>
        <StackPanel
            Grid.Row="5"
            Margin="10,0,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label Content="禮券抵用：" FontSize="24" />
            <TextBox
                x:Name="tbVoucher"
                Width="100"
                FontSize="24"
                GotFocus="tbVoucher_GotFocus"
                InputMethod.InputScope="Number"
                LostFocus="tbVoucher_LostFocus"
                PreviewKeyDown="tbVoucher_PreviewKeyDown"
                Text="" />
            <Label
                Margin="20,0,0,0"
                Content="可沖訂金："
                FontSize="24" />
            <Label
                x:Name="lblPrepay"
                Content="0"
                FontSize="24" />
        </StackPanel>
        <StackPanel
            Grid.Row="6"
            Margin="10,0,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label Content="收現金券：" FontSize="24" />
            <TextBox
                x:Name="tbCashCoupon"
                Width="100"
                FontSize="24"
                GotFocus="tbCashCoupon_GotFocus"
                InputMethod.InputScope="Number"
                LostFocus="tbCashCoupon_LostFocus"
                PreviewKeyDown="tbCashCoupon_PreviewKeyDown"
                Text="" />
        </StackPanel>
        <StackPanel
            Grid.Row="7"
            Margin="10,0,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label Content="刷卡金額：" FontSize="24" />
            <TextBox
                x:Name="tbCard"
                Width="100"
                FontSize="24"
                GotFocus="tbCard_GotFocus"
                InputMethod.InputScope="Number"
                LostFocus="tbCard_LostFocus"
                PreviewKeyDown="tbCard_PreviewKeyDown"
                Text=""
                TextChanged="tbCard_TextChanged" />
        </StackPanel>
        <StackPanel
            Grid.Row="8"
            Margin="10,0,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label Content="信用卡號：" FontSize="24" />
            <TextBox
                x:Name="tbCardNum1"
                Width="55"
                VerticalContentAlignment="Center"
                FontSize="22"
                IsEnabled="False"
                PreviewKeyDown="tbCardNum1_PreviewKeyDown"
                Text=""
                TextChanged="tbCardNum1_TextChanged" />
            <Label Content="-" FontSize="24" />
            <TextBox
                x:Name="tbCardNum2"
                Width="55"
                VerticalContentAlignment="Center"
                FontSize="22"
                IsEnabled="False"
                Text=""
                TextChanged="tbCardNum2_TextChanged" />
            <Label Content="-" FontSize="24" />
            <TextBox
                x:Name="tbCardNum3"
                Width="55"
                VerticalContentAlignment="Center"
                FontSize="22"
                IsEnabled="False"
                Text=""
                TextChanged="tbCardNum3_TextChanged" />
            <Label Content="-" FontSize="24" />
            <TextBox
                x:Name="tbCardNum4"
                Width="55"
                VerticalContentAlignment="Center"
                FontSize="22"
                IsEnabled="False"
                Text=""
                TextChanged="tbCardNum4_TextChanged" />
        </StackPanel>
        <StackPanel
            Grid.Row="9"
            Margin="10,0,10,0"
            VerticalAlignment="Center"
            Background="LightSkyBlue"
            Orientation="Horizontal">
            <Label Content="應找金額：" FontSize="24" />
            <Label Content="$" FontSize="24" />
            <Label
                x:Name="tbChange"
                Content="0"
                FontSize="24" />
        </StackPanel>
        <StackPanel
            Grid.Row="10"
            Margin="10,0,0,0"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Label Content="結帳人員：" FontSize="24" />
            <TextBox
                x:Name="tbEmployee"
                Width="60"
                FontSize="24"
                GotFocus="tbEmployee_GotFocus"
                PreviewKeyDown="tbEmployee_PreviewKeyDown"
                Text=""
                TextChanged="tbEmployee_TextChanged" />
            <Label
                x:Name="lbEmployee"
                Margin="10,0,0,0"
                FontSize="24" />
        </StackPanel>
        <StackPanel
            Grid.Row="11"
            Margin="10,0,0,0"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <Button
                x:Name="btnSubmit"
                Width="120"
                Height="40"
                Margin="0"
                Background="RoyalBlue"
                BorderThickness="0"
                Click="btnSubmit_Click"
                Content="結帳"
                FontFamily="Segoe UI Semibold"
                FontSize="20" />
            <Button
                x:Name="btnReturn"
                Width="120"
                Height="40"
                Margin="10"
                Background="DimGray"
                BorderThickness="0"
                Content="返回"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                IsCancel="True" />
        </StackPanel>
    </Grid>
</Window>