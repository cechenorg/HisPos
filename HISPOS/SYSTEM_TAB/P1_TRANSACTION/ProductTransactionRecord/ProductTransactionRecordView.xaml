                    <Button x:Name="btnPrint1" Width="100" Margin="10,0,0,0" Background="RoyalBlue" BorderBrush="RoyalBlue" Command="{Binding PrintCommand}"  Content="匯出紀錄" />
                </StackPanel>
            </Grid>
        </xctk:BusyIndicator>
    </Viewbox>
