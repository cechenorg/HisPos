<Window
    x:Class="His_Pos.SYSTEM_TAB.P1_TRANSACTION.ProductTransactionDetail.ProductTransactionDetail"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:generalCustomControl="clr-namespace:His_Pos.GeneralCustomControl"
    xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.P1_TRANSACTION.ProductTransactionDetail"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="銷售詳細記錄"
    Width="960"
    Height="680"
    FontFamily="Segoe UI Semibold"
    Loaded="Window_Loaded"
    WindowStartupLocation="CenterScreen"
    ResizeMode="NoResize"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:ProductTransactionDetailViewModel />
    </Window.DataContext>
    <Window.Resources>
        <Style x:Key="ActionLabelStyle" TargetType="{x:Type Label}">
            <Setter Property="TextBlock.TextWrapping" Value="Wrap" />
            <Setter Property="FontFamily" Value="Segoe UI Semibold" />
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Label}">
                        <TextBlock>
                <ContentPresenter />
                        </TextBlock>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Resources>
                <Style TargetType="TextBlock">
                    <Setter Property="TextDecorations" Value="Underline"/>
                </Style>
            </Style.Resources>
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="/Images/tabViewBackground.jpg" />
    </Window.Background>
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="229*"/>
            <ColumnDefinition Width="62*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="180" />
            <RowDefinition />
            <RowDefinition Height="45" />
            <RowDefinition Height="45" />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Margin="0,0,-0.4,10" Grid.ColumnSpan="2">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="422*"/>
                <ColumnDefinition Width="273*"/>
                <ColumnDefinition Width="179*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Background="{StaticResource GridDarkerBackGround}"
                Orientation="Horizontal" Grid.ColumnSpan="3" Margin="0,0,-0.4,0.4">
                <Label
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="結帳金額 $"
                    FontFamily="Segoe UI Semibold"
                    FontSize="20"
                    Foreground="Black" />
                <Label
                    x:Name="lblRealTotal"
                    Width="100"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    Content="{Binding RealTotal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Segoe UI Semibold"
                    FontSize="24"
                    Foreground="Black" />
                <Label
                    Margin="40,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="結帳人員："
                    FontFamily="Segoe UI Semibold"
                    FontSize="20"
                    Foreground="Black" />
                <Label
                    x:Name="lblCashier"
                    Width="100"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    Content="{Binding Cashier, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Segoe UI Semibold"
                    FontSize="20"
                    Foreground="Black" />
                <Label
                    x:Name="lblChanged"
                    Width="70"
                    Margin="80,0,0,0"
                    VerticalAlignment="Bottom"
                    HorizontalContentAlignment="Right"
                    Content="未修改"
                    FontFamily="Segoe UI Semibold"
                    FontSize="18"
                    Foreground="Black" />
                <Button
                    x:Name="btnSubmit"
                    Width="140"
                    Height="30"
                    Margin="0,0,0,0"
                    Background="IndianRed"
                    BorderThickness="0"
                    Command="{Binding SubmitCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Content="送出修改"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    IsEnabled="False" />
                <Button
                    x:Name="btnDelete"
                    Width="70"
                    Height="30"
                    Margin="10,0,0,0"
                    Background="DimGray"
                    BorderThickness="0"
                    Command="{Binding DeleteCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Content="刪除"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16" />
                <Button
                    x:Name="btnReturn"
                    Width="70"
                    Height="30"
                    Margin="10,0,0,0"
                    Background="DimGray"
                    BorderThickness="0"
                    Command="{Binding ReturnCommand, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    Content="退貨"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16" />
            </StackPanel>
            <StackPanel
                Background="{StaticResource GridBackGround}"
                Orientation="Horizontal" Grid.ColumnSpan="3" Margin="0,42,-0.4,42" Grid.RowSpan="3">
                <Label
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="付款方式："
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="現金$"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    x:Name="lbCash"
                    Width="65"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    Content="{Binding Cash, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="信用卡$"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    x:Name="lbCard"
                    Width="65"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    Content="{Binding Card, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="禮券$"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    x:Name="lbVoucher"
                    Width="65"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    Content="{Binding Voucher, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="現金券$"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    x:Name="lbCashCoupon"
                    Width="65"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    Content="{Binding CashCoupon, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="訂金沖銷$"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    x:Name="lbPrepay"
                    Width="65"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    Content="{Binding Prepay, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
            </StackPanel>
            <StackPanel
                Grid.Row="2"
                Background="{StaticResource GridBackGround}"
                Orientation="Horizontal" Grid.ColumnSpan="3" Margin="0,0.4,-0.4,0">
                <Label
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="卡號"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <TextBox
                    x:Name="tbCardNum"
                    Width="160"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semi"
                    FontSize="16"
                    Foreground="Black"
                    Text="{Binding CardNum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextChanged="tb_TextChanged">
                    <TextBox.InputScope>
                        <InputScope>
                            <InputScope.Names>
                                <InputScopeName NameValue="AlphanumericHalfWidth" />
                            </InputScope.Names>
                        </InputScope>
                    </TextBox.InputScope>
                </TextBox>
                <Label
                    Margin="00,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="統編"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <TextBox
                    x:Name="tbTaxNum"
                    Width="90"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semi"
                    FontSize="16"
                    Foreground="Black"
                    Text="{Binding TaxNum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextChanged="tb_TextChanged">
                    <TextBox.InputScope>
                        <InputScope>
                            <InputScope.Names>
                                <InputScopeName NameValue="AlphanumericHalfWidth" />
                            </InputScope.Names>
                        </InputScope>
                    </TextBox.InputScope>
                </TextBox>
                <Label
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="發票號碼"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    x:Name="tbInvoiceNum"
                    Width="100"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semi"
                    Content="{Binding InvoiceNum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    Margin="0,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="顧客姓名:"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <!--<Label
                    x:Name="lbCusName"
                    Width="65"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black"
                    MouseDoubleClick="lbCusName_MouseDoubleClick"
                    Style="{StaticResource ActionLabelStyle}"/>-->
                <TextBox
                    x:Name="tbCusName"
                    Width="120"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semi"
                    FontSize="16"
                    Foreground="Black"
                    Text="{Binding CusName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    TextChanged="tb_TextChanged"
                    KeyDown="tbCusName_KeyDown">
                    <TextBox.InputScope>
                        <InputScope>
                            <InputScope.Names>
                                <InputScopeName NameValue="AlphanumericHalfWidth" />
                            </InputScope.Names>
                        </InputScope>
                    </TextBox.InputScope>
                </TextBox>
                <Label
                    Margin="0,0,0,0"
                    Width="95"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                     Content="顧客電話:"
                    Foreground="Black" />
                <Label
                    x:Name="tbPhone"
                    Width="100"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    FontFamily="Segoe UI Semibold"
                    Content="{Binding CusPhone, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontSize="16"
                    Foreground="Black" />
            </StackPanel>
            <StackPanel
                Grid.Row="3"
                Background="{StaticResource GridDarkerBackGround}"
                Orientation="Horizontal" Grid.ColumnSpan="3" Margin="0,0,-0.4,0.4">
                <Label
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="折扣前總計 $"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    x:Name="lblPreTotal"
                    Width="95"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    Content="{Binding PreTotal, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Segoe UI Semi"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    Margin="20,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="折價 $"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    x:Name="lbDiscountAmt"
                    Width="80"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="{Binding DiscountAmt, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="元"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    Margin="280,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    Content="套用價格："
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
                <Label
                    x:Name="lblPriceType"
                    Width="95"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Left"
                    Content="{Binding PriceType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="Black" />
            </StackPanel>
        </Grid>
        <DataGrid
            Name="ProductDataGrid"
            Grid.Row="1"
            AutoGenerateColumns="False"
            Background="{StaticResource GridBackGround}"
            CanUserAddRows="False"
            CanUserDeleteRows="False"
            CellStyle="{StaticResource DataGridCellStyle}"
            ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
            EnableRowVirtualization="False"
            GridLinesVisibility="Horizontal"
            MouseDoubleClick="ProductDataGrid_MouseDoubleClick"
            ItemsSource="{Binding Details, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectedItem="{Binding Detail, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
            SelectionUnit="Cell" Grid.ColumnSpan="2" Margin="0,0,-0.4,44.6" Grid.RowSpan="2">
            <DataGrid.Resources>
                <Style TargetType="{x:Type ScrollBar}">
                    <Setter Property="SnapsToDevicePixels" Value="True" />
                    <Setter Property="OverridesDefaultStyle" Value="true" />
                    <Setter Property="Width" Value="100" />
                    <Style.Triggers>
                        <Trigger Property="Orientation" Value="Horizontal">
                            <Setter Property="Width" Value="Auto" />
                            <Setter Property="Height" Value="15" />
                            <Setter Property="Template" Value="{StaticResource HorizontalScrollBar}" />
                        </Trigger>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter Property="Width" Value="15" />
                            <Setter Property="Height" Value="Auto" />
                            <Setter Property="Template" Value="{StaticResource VerticalScrollBar}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </DataGrid.Resources>
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Style.Triggers>
                        <Trigger Property="DataGridRow.IsSelected" Value="True">
                            <Setter Property="Background" Value="{StaticResource Shadow}" />
                        </Trigger>
                        <DataTrigger Binding="{Binding TraDet_IsGift}" Value="1">
                            <Setter Property="Background">
                                <Setter.Value>
                                    <SolidColorBrush Opacity="0.5" Color="ForestGreen" />
                                </Setter.Value>
                            </Setter>
                        </DataTrigger>
                    </Style.Triggers>
                    <Setter Property="Background" Value="Transparent" />
                    <Setter Property="BorderBrush" Value="Transparent" />
                    <Setter Property="FontSize" Value="16" />
                    <Setter Property="Height" Value="40" />
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn
                    Width="50"
                    Binding="{Binding Path=TraDet_DetailID}"
                    FontFamily="Segoe UI Semi"
                    Header="序"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn
                    Width="160"
                    Header="商品代碼"
                    IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Label
                                Name="ProductIDTextbox"
                                Width="140"
                                Margin="0,0,0,2"
                                HorizontalContentAlignment="Center"
                                Content="{Binding TraDet_ProductID, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                                FontFamily="Segoe UI Semi"
                                FontSize="16"
                                InputMethod.IsInputMethodEnabled="False" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn
                    Width="250"
                    Header="商品名稱"
                    IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <generalCustomControl:ProductStatusIcon IsCommon="{Binding IsCommon}" />
                                <Label
                                    x:Name="lblProductName"
                                    Width="320"
                                    Margin="0,0,20,0"
                                    VerticalAlignment="Center"
                                    Content="{Binding TraDet_ProductName}"
                                    FontFamily="Segoe UI Semibold"
                                    FontSize="16" />
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="Foreground" Value="#FF424040" />
                        </Style>
                    </DataGridTemplateColumn.CellStyle>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    x:Name="Price"
                    Width="100"
                    Binding="{Binding TraDet_Price, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Header="售價"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding Irr, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Value="Yes">
                                    <Setter Property="Foreground" Value="Red" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Width="50" Header="數量">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Label
                                x:Name="Amount"
                                Width="40"
                                Margin="0,0,0,2"
                                HorizontalContentAlignment="Center"
                                Content="{Binding TraDet_Amount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                FontFamily="Segoe UI Semi"
                                FontSize="16" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding TraDet_PriceSum, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Header="小計"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn Width="50" Header="寄庫">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Label
                                x:Name="Deposit"
                                Width="40"
                                Margin="0,0,0,2"
                                HorizontalContentAlignment="Center"
                                Content="{Binding TraDet_DepositAmount, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                FontFamily="Segoe UI Semi"
                                FontSize="16" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTemplateColumn Width="100" Header="獎勵">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox
                                x:Name="cbCashier"
                                Width="80"
                                VerticalAlignment="Center"
                                DisplayMemberPath="Name"
                                DropDownClosed="cbCashier_DropDownClosed"
                                FontFamily="Segoe UI Semibold"
                                FontSize="18"
                                Foreground="Black"
                                SelectedIndex="0"
                                IsEnabled="{Binding IsReward_Format, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                IsReadOnly="{Binding IsReward_Format, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                SelectedValuePath="CashierID"
                                SelectedItem="{Binding Emp, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                ItemsSource="{Binding Emps, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn
                    Width="80"
                    Binding="{Binding TraDet_RewardPercent, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Header="績效"
                    IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment" Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center" />
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel
            Grid.Row="2"
            Margin="0,10.2,-0.4,44.4"
            Background="{StaticResource GridDarkerBackGround}"
            Orientation="Horizontal" Grid.ColumnSpan="2" Grid.RowSpan="2">
            <Label
                Width="95"
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Content="結帳時間："
                FontFamily="Segoe UI Semibold"
                FontSize="18" />
            <Label
                x:Name="lblTradeTime"
                Width="180"
                HorizontalAlignment="Left"
                Content="{Binding TradeTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                FontFamily="Segoe UI Semibold"
                FontSize="18" />
            <Label
                Width="130"
                Margin="50,0,0,0"
                HorizontalAlignment="Left"
                Content="最後編輯時間："
                FontFamily="Segoe UI Semibold"
                FontSize="18" />
            <Label
                x:Name="lblUpdateTime"
                Width="250"
                HorizontalAlignment="Left"
                Content="{Binding UpdateTime, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                FontFamily="Segoe UI Semibold"
                FontSize="18" />
            <Label
                x:Name="DelContent"
                Margin="80,0,0,0"
                Foreground="Red"
                Visibility="Hidden"
                Width="250"
                HorizontalAlignment="Left"
                Content="已退貨刪單"
                FontFamily="Segoe UI Semibold"
                FontSize="18" />
        </StackPanel>
        <StackPanel
            Grid.Row="3"
            Margin="0,10.4,-0.4,0.4"
            Background="{StaticResource GridDarkerBackGround}"
            Orientation="Horizontal" Grid.ColumnSpan="2">
            <Label
                Margin="10,0,0,0"
                HorizontalAlignment="Left"
                Content="備註："
                FontFamily="Segoe UI Semibold"
                FontSize="18" />
            <TextBlock
                x:Name="tbNote"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semibold"
                FontSize="18"
                Text="" />
        </StackPanel>
    </Grid>
</Window>