            HorizontalContentAlignment="Center"
            Content="平均成本"
            FontFamily="Segoe UI Semibold"
            FontSize="25"
            Foreground="{StaticResource ForeGround}" />
        <Label
            Grid.Row="3"
            Grid.Column="2"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            Content="{Binding StockDetail.AvgPrice, FallbackValue=0, UpdateSourceTrigger=PropertyChanged, StringFormat=$0.00}"
            FontFamily="Segoe UI Semibold"
            FontSize="25"
            Foreground="{StaticResource ForeGround}" />
        <TextBlock
            Grid.Row="1"
            Grid.Column="3"
            Width="120"
            Margin="0,0,0,10"
            VerticalAlignment="Center"
            FontFamily="Segoe UI Semibold"
            FontSize="25"
            Foreground="{StaticResource ForeGround}"
            Text="{Binding StockDetail.LastPrice, FallbackValue=0, UpdateSourceTrigger=PropertyChanged, StringFormat=$0.00}"
            TextAlignment="Center" />
        <StackPanel
            Grid.Row="2"
            Grid.Column="3"
            Grid.ColumnSpan="2"
            HorizontalAlignment="Center"
            Orientation="Horizontal">
            <Label
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                Content="3個月耗用"
                FontFamily="Segoe UI Semibold"
                FontSize="25"
                Foreground="{StaticResource ForeGround}" />
        </StackPanel>
        <TextBlock
            Grid.Row="3"
            Grid.Column="3"
            Grid.ColumnSpan="1"
            Width="80"
            Margin="0,0,0,10"
            VerticalAlignment="Center"
            FontFamily="Segoe UI Semibold"
            FontSize="25"
            Foreground="{StaticResource ForeGround}"
            Text="{Binding StockDetail.ConsumeIn90Days, FallbackValue=0, UpdateSourceTrigger=PropertyChanged, StringFormat=0}"
            TextAlignment="Center" />
    </Grid>
