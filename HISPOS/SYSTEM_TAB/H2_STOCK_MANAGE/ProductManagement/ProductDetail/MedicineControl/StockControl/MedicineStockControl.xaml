            Grid.Row="0"
            Grid.Column="2"
            Margin="0,10,0,0"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            Content="庫存現值"
            FontFamily="Segoe UI Semibold"
            FontSize="25"
            Foreground="{StaticResource ForeGround}" />
