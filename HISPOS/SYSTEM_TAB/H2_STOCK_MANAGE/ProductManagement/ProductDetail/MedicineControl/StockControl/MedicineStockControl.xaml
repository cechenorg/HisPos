                                                <DataGridTextColumn Width="60" Binding="{Binding SelfAmountHeader}" />
                                                <DataGridTextColumn Width="70" Binding="{Binding SelfAmount, StringFormat=N1}">
                                                    <DataGridTextColumn.ElementStyle>
                                                        <Style TargetType="{x:Type TextBlock}">
                                                            <Setter Property="HorizontalAlignment" Value="Right" />
                                                            <Setter Property="VerticalAlignment" Value="Center" />
                                                        </Style>
                                                    </DataGridTextColumn.ElementStyle>
                                                </DataGridTextColumn>
                                            </DataGrid.Columns>
                                        </DataGrid>
                                    </Setter.Value>
                                </Setter>
                            </Style>
                        </TextBlock.Style>
                    </TextBlock>
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="0" Orientation="Horizontal">
                    <Label
                        Margin="15,0,0,0"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Content="登錄需求"
                        FontFamily="Segoe UI Semibold"
                        FontSize="12"
                        Foreground="WhiteSmoke" />
                </StackPanel>
                <StackPanel Grid.Row="2" Grid.Column="1" Orientation="Horizontal">
                    <TextBlock
                        Width="75"
                        VerticalAlignment="Center"
                        FontFamily="Segoe UI Semi"
                        FontSize="12"
                        Foreground="WhiteSmoke"
                        Text="{Binding StockDetail.DemandInventory, UpdateSourceTrigger=PropertyChanged, StringFormat=N0}"
                        TextAlignment="Center"
                        ToolTipService.ShowDuration="600000">
                        <TextBlock.Style>
                            <Style TargetType="TextBlock">
                                <EventSetter Event="MouseEnter" Handler="GetMedBagDetail" />
                                <Setter Property="ToolTip">
                                    <Setter.Value>
                                        <DataGrid
                                            Width="420"
                                            Height="Auto"
                                            AutoGenerateColumns="False"
                                            Background="Transparent"
                                            CanUserAddRows="False"
                                            CanUserDeleteRows="False"
                                            CanUserReorderColumns="False"
                                            CanUserResizeColumns="False"
                                            CanUserResizeRows="False"
                                            CanUserSortColumns="False"
                                            FontFamily="Courier New"
                                            FontSize="18"
                                            Foreground="WhiteSmoke"
                                            GridLinesVisibility="None"
                                            HeadersVisibility="None"
                                            ItemsSource="{Binding StockDetail.DemandStockDetails, UpdateSourceTrigger=PropertyChanged}"
                                            RowHeight="25">
                                            <DataGrid.CellStyle>
                                                <Style TargetType="{x:Type DataGridCell}">
                                                    <Setter Property="Padding" Value="0" />
                                                    <Setter Property="Background" Value="Transparent" />
                                                    <Setter Property="BorderBrush" Value="Transparent" />
                                                </Style>
                                            </DataGrid.CellStyle>
                                            <DataGrid.Columns>
                                                <DataGridTextColumn Width="50" Binding="{Binding Type}" />
