<Window
    x:Class="His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductManagement.ProductDetail.SharedWindow.ProductManageWindows.StockTakingWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductManagement.ProductDetail.SharedWindow.ProductManageWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="單品盤點"
    Width="300"
    Height="Auto"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    SizeToContent="WidthAndHeight"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="{Binding AutoGridHeight}" />
            <RowDefinition Height="{Binding AutoGridHeight}" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Label
            Margin="10,0,10,0"
            Grid.Row="0"
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Right"
            Content="庫存總量"
            FontFamily="Segoe UI Semibold"
            FontSize="22"
            Foreground="Black" />
        <TextBox
            Margin="10,0,10,0"
            Grid.Row="0"
            Grid.Column="1"
            Width="120"
            InputMethod.IsInputMethodEnabled="False" 
            MaxLength="8"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            FontFamily="Segoe UI Semibold"
            FontSize="20"
            Foreground="Black"
            PreviewTextInput="TextBox_PreviewTextInput"
            Text="{Binding NewInventory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Margin="10,0,10,0"
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Right"
            Content="架上量"
            FontFamily="Segoe UI Semibold"
            FontSize="22"
            Foreground="Black"/>
        <TextBox
            Margin="10,0,10,0"
            Grid.Row="1"
            Grid.Column="1"
            Width="120"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            FontFamily="Segoe UI Semibold"
            FontSize="20"
            Foreground="Black"
            Text="{Binding ShelfInventory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Margin="10,0,10,0"
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Right"
            Content="藥袋量"
            FontFamily="Segoe UI Semibold"
            FontSize="22"
            Foreground="Black"/>
        <TextBox
            Margin="10,0,10,0"
            Grid.Row="2"
            Grid.Column="1"
            Width="120"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            FontFamily="Segoe UI Semibold"
            IsEnabled="False"
            FontSize="20"
            Foreground="Black"
            Text="{Binding MedInventory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Margin="10,0,10,0"
            Grid.Row="3"
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Right"
            Content="盤點單價"
            FontFamily="Segoe UI Semibold"
            FontSize="22"
            Foreground="Black" />
        <TextBox
            Margin="10,0,10,0"
            Grid.Row="3"
            Grid.Column="1"
            Width="120"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            FontFamily="Segoe UI Semibold"
            FontSize="20"
            Foreground="Black"
            InputMethod.IsInputMethodEnabled="False" 
            MaxLength="8"
            PreviewTextInput="TextBox_PreviewTextInput"
            IsEnabled="{Binding IsOverage, UpdateSourceTrigger=PropertyChanged}"
            Text="{Binding NewPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Margin="10,0,10,0"
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="150"
            Height="35"
            Background="ForestGreen"
            BorderThickness="0"
            Click="Confirm_OnClick"
            Command="{Binding MergeProductGroupCommand}"
            IsEnabled="{Binding IsbtnEnable}"
            Content="盤點"
            FontFamily="Segoe UI Semibold"
            FontSize="20" />
    </Grid>
</Window>