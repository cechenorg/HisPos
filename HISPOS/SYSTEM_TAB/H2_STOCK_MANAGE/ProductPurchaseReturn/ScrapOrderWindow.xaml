<Window
    x:Class="His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductPurchaseRecord.ScrapOrderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductPurchaseRecord"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
    xmlns:productpurchasereturn="clr-namespace:His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductPurchaseReturn" 
    Title="作廢進退貨單"
    Width="300"
    Height="230"
    Closing="Window_Closing"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="40" />
            <RowDefinition Height="100" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="進退貨單作廢後即無法復原"
            FontFamily="Segoe UI Semibold"
            FontSize="22"
            Foreground="Red" Grid.ColumnSpan="2" />
        <StackPanel Margin="10,0,0,0" Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2">
            <RadioButton Name="radio1" Click="radio_Click" FontSize="15">1.客人取消</RadioButton>
            <RadioButton Name="radio2" Click="radio_Click" FontSize="15">2.無法等待</RadioButton>
            <RadioButton Name="radio3" Click="radio_Click" FontSize="15">3.比外面貴</RadioButton>
            <RadioButton Name="radio4" Click="radio_Click" FontSize="15" IsChecked="True">
                <StackPanel>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="25"/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="150"/>
                        </Grid.ColumnDefinitions>
                        <AccessText Grid.Row="0" Grid.Column="0">4.其他:</AccessText>
                        <TextBox Name="other" Grid.Row="0" Grid.Column="1" Text="{Binding Other}"></TextBox>
                    </Grid>
                </StackPanel>
            </RadioButton>
        </StackPanel>
        <Button 
            x:Name="btnScrap"
            Grid.Row="2"
            Width="150"
            Command="{Binding YesCommand}"
            Content="確認作廢"
            FontFamily="Segoe UI Semibold"
            FontSize="18" Grid.ColumnSpan="2" Margin="0,0,0,0" Cursor="Hand"/>
    </Grid>
</Window>