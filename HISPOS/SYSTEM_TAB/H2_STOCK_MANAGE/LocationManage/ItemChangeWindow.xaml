<Window
    x:Class="His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.LocationManage.ItemChangeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="換櫃"
    Width="800"
    Height="450"
    MinWidth="800"
    MinHeight="450"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Viewbox Stretch="Fill">
        <Grid Width="800" Height="450">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="380" />
                <ColumnDefinition />
                <ColumnDefinition Width="380" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition />
                <RowDefinition Height="50" />
            </Grid.RowDefinitions>
            <StackPanel
                Grid.Row="0"
                Grid.Column="0"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <ComboBox
                    Name="ComboBoxSourceBig"
                    Width="120"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semibold"
                    FontSize="14"
                    Foreground="Black"
                    ItemContainerStyle="{StaticResource ComboItemContainerStyle}"
                    SelectionChanged="ComboBoxSourceBig_SelectionChanged" />
                <ComboBox
                    Name="ComboBoxSourceSmall"
                    Width="120"
                    Margin="20,0,0,0"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semibold"
                    FontSize="14"
                    Foreground="Black"
                    ItemContainerStyle="{StaticResource ComboItemContainerStyle}"
                    SelectionChanged="ComboBoxSourceSmall_SelectionChanged" />
            </StackPanel>
            <StackPanel
                Grid.Row="0"
                Grid.Column="2"
                HorizontalAlignment="Center"
                Orientation="Horizontal">
                <ComboBox
                    Name="ComboBoxTargetBig"
                    Width="120"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semibold"
                    FontSize="14"
                    Foreground="Black"
                    ItemContainerStyle="{StaticResource ComboItemContainerStyle}"
                    SelectionChanged="ComboBoxTargetBig_SelectionChanged" />
                <ComboBox
                    Name="ComboBoxTargetSmall"
                    Width="120"
                    Margin="20,0,0,0"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semibold"
                    FontSize="14"
                    Foreground="Black"
                    ItemContainerStyle="{StaticResource ComboItemContainerStyle}"
                    SelectionChanged="ComboBoxTargetSmall_SelectionChanged" />
            </StackPanel>
            <DataGrid
                Name="DataGridSource"
                Grid.Row="1"
                Grid.Column="0"
                Margin="10,10,10,10"
                AutoGenerateColumns="False"
                Background="{StaticResource Shadow}"
                CanUserAddRows="False"
                CellStyle="{StaticResource DataGridCellStyle}"
                ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                HorizontalScrollBarVisibility="Disabled"
                ItemsSource="{Binding LocationSourceDatas, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="DataGridRow.IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource GridSelected}" />
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="Height" Value="40" />
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="110"
                        Binding="{Binding proid, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        FontFamily="Segoe UI Semi"
                        Header="商品ID"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="250"
                        Binding="{Binding proname, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        FontFamily="Segoe UI Semi"
                        Header="商品名稱"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <DataGrid
                Name="DataGridTarget"
                Grid.Row="1"
                Grid.Column="2"
                Margin="10,10,10,10"
                AutoGenerateColumns="False"
                Background="{StaticResource Shadow}"
                CanUserAddRows="False"
                CellStyle="{StaticResource DataGridCellStyle}"
                ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                HorizontalScrollBarVisibility="Disabled"
                ItemsSource="{Binding LocationTargetDatas, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}">
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="DataGridRow.IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource GridSelected}" />
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="FontSize" Value="14" />
                        <Setter Property="Height" Value="40" />
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn
                        Width="110"
                        Binding="{Binding proid, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                        FontFamily="Segoe UI Semi"
                        Header="商品ID"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn
                        Width="250"
                        Binding="{Binding proname}"
                        FontFamily="Segoe UI Semi"
                        Header="商品名稱"
                        IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment" Value="Left" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel
                Grid.Row="1"
                Grid.Column="1"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <Image
                    Name="ButtonPlus"
                    Width="35"
                    MouseLeftButtonDown="ButtonPlus_MouseLeftButtonDown"
                    Source="/Images/RightArrow.png" />
                <Image
                    Name="ButtonBalance"
                    Width="35"
                    Margin="0,20,0,0"
                    MouseLeftButtonDown="ButtonBalance_MouseLeftButtonDown"
                    Source="/Images/LeftArrow.png" />
            </StackPanel>
            <Button
                Grid.Row="2"
                Grid.Column="0"
                Grid.ColumnSpan="3"
                Width="300"
                Click="Button_Click"
                Content="確定" />
        </Grid>
    </Viewbox>
</Window>