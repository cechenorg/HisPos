<Window x:Class="His_Pos.InventoryManagement.OtcDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:His_Pos.InventoryManagement"
        xmlns:lvc="clr-namespace:LiveCharts.Wpf;assembly=LiveCharts.Wpf"
        mc:Ignorable="d"
        Title="ProductDetail" Height="600" Width="1000" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="CenterGridHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="5,10,5,10"/>
        </Style>
    </Window.Resources>
    <Window.Background>
        <ImageBrush ImageSource="/Images/SystemBackgroundWhite2.jpg"/>
    </Window.Background>
    <Viewbox Stretch="Fill">
        <Grid Width="1000">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition Height="130"/>
                <RowDefinition Height="400"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <Label Name="ProductName" Foreground="Black" FontSize="40" FontWeight="Bold" FontFamily="Segoe UI Semibold" Margin="20,10,20,10" Padding="0"/>
                <Label Name="ProductId" Foreground="DimGray" FontSize="25" FontFamily="Segoe UI Semi" Margin="0,25,0,10" Padding="0"/>
            </StackPanel>
            <StackPanel Grid.Row="1" Margin="10,5,10,5" Background="#B2EEEEEE">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition/>
                        <RowDefinition/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <Label Content="售價" Grid.Column="0" Grid.Row="0"></Label>
                    <Label Content="售價" Grid.Column="1" Grid.Row="0"></Label>
                    <Label Content="售價" Grid.Column="2" Grid.Row="0"></Label>
                    <Label Content="售價" Grid.Column="3" Grid.Row="1"></Label>
                </Grid>
            </StackPanel>
            <StackPanel Grid.Row="2">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Orientation="Vertical" Grid.Column="0" Margin="10,10,5,10" Background="#B2EEEEEE" Height="380">
                        <Label Content="訂單紀錄" HorizontalAlignment="Center" Foreground="Black" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold"/>
                        <DataGrid Name="DataGrid" Background="Transparent" ColumnHeaderStyle="{DynamicResource CenterGridHeaderStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="訂貨日期" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True"/>
                                <DataGridTextColumn Header="訂貨人" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True"/>
                                <DataGridTextColumn Header="到貨期日" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True"/>
                                <DataGridTextColumn Header="進貨單價" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="1" Margin="5,10,5,10" Background="#B2EEEEEE" Height="380">
                        <Label Content="交易紀錄" HorizontalAlignment="Center" Foreground="Black" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold"/>
                        <DataGrid Name="DataGrid1" Background="Transparent" ColumnHeaderStyle="{DynamicResource CenterGridHeaderStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="交易日期" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True"/>
                                <DataGridTextColumn Header="交易數量" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True"/>
                                <DataGridTextColumn Header="購買價格" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Grid.Column="2" Margin="5,10,10,10" Background="#B2EEEEEE" Height="380">
                        <Label Content="盤點紀錄" HorizontalAlignment="Center" Foreground="Black" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold"/>
                        <DataGrid Name="DataGrid2" Background="Transparent" ColumnHeaderStyle="{DynamicResource CenterGridHeaderStyle}">
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="盤點時間" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True"/>
                                <DataGridTextColumn Header="盤點數量" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True"/>
                                <DataGridTextColumn Header="盤點人" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True"/>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                </Grid>
                
            </StackPanel>
        </Grid>
    </Viewbox>
</Window>
