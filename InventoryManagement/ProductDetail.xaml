<Window x:Class="His_Pos.InventoryManagement.ProductDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:His_Pos.InventoryManagement"
        mc:Ignorable="d"
        Title="ProductDetail" Height="389.327" Width="671.337">
    <Window.Background>
        <ImageBrush ImageSource="/Images/SystemBackgroundWhite.jpg"/>
    </Window.Background>
    <Grid Margin="0,0,-0.2,-3">

        <Canvas HorizontalAlignment="Left" Height="136" Margin="10,10,0,0" VerticalAlignment="Top" Width="645">
            <DockPanel Margin="10,0,0,0">
                <Label Content="商品編號:" Width="auto" Foreground="#FF424040" Margin="10,10,10,10" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Semibold" 
                                   HorizontalContentAlignment="Stretch" />
                <Label Name="ProductId" Content="編號" Width="auto" Foreground="#FF424040" Margin="0,10,10,10" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Semibold" 
                                   HorizontalContentAlignment="Stretch"/>
            </DockPanel>
            <DockPanel Canvas.Left="222" >
                <Label  Content="商品名稱:" Width="auto" Foreground="#FF424040" Margin="10,10,10,10" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Semibold" 
                                   HorizontalContentAlignment="Stretch" />
                <Label  Name="ProductName" Content="名稱" Width="auto" Foreground="#FF424040" Margin="0,10,10,10" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Semibold" 
                                   HorizontalContentAlignment="Stretch"/>
            </DockPanel>
            <DockPanel Canvas.Left="446" >
                <Label  Name="ProductPrice" Content="商品售價:" Width="auto" Foreground="#FF424040" Margin="10,10,10,10" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Semibold" 
                                   HorizontalContentAlignment="Stretch" />
                <Label Content="售價" Width="auto" Foreground="#FF424040" Margin="0,10,10,10" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Semibold" 
                                   HorizontalContentAlignment="Stretch"/>
            </DockPanel>
            <DockPanel Canvas.Left="10" Canvas.Top="52" >
                <Label Content="商品總量:" Width="auto" Foreground="#FF424040" Margin="10,10,10,10" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Semibold" 
                                   HorizontalContentAlignment="Stretch" />
                <Label Name="ProductAmount" Content="總量" Width="auto" Foreground="#FF424040" Margin="0,10,10,10" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Semibold" 
                                   HorizontalContentAlignment="Stretch"/>
            </DockPanel>
            <DockPanel Canvas.Left="222" Canvas.Top="52" >
                <Label   Content="進貨廠商:" Width="auto" Foreground="#FF424040" Margin="10,10,10,10" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Semibold" 
                                   HorizontalContentAlignment="Stretch" />
                <Label  Name="ProductManufacturers" Content="廠商" Width="auto" Foreground="#FF424040" Margin="0,10,10,10" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Semibold" 
                                   HorizontalContentAlignment="Stretch"/>
            </DockPanel>
            <DockPanel Canvas.Left="446" Canvas.Top="52" >
                <Label Content="安全量:" Width="auto" Foreground="#FF424040" Margin="10,10,10,10" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Semibold" 
                                   HorizontalContentAlignment="Stretch" />
                <Label Name="ProductSafeAmount" Content="安全量" Width="auto" Foreground="#FF424040" Margin="0,10,10,10" FontSize="16" FontWeight="Bold" FontFamily="Segoe UI Semibold" 
                                   HorizontalContentAlignment="Stretch"/>
            </DockPanel>
        </Canvas>
        <DataGrid Name="DataGrid" Background="Transparent" HorizontalAlignment="Left" Height="221" Margin="19,118,0,0" VerticalAlignment="Top" Width="636" AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Width="100" Header="進貨日" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True"  Binding="{Binding ProductId}"/>
                <DataGridTextColumn Width="100" Header="到期日" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True" Binding="{Binding ProductName}"/>
                <DataGridTextColumn Width="100" Header="庫存數量" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True" Binding="{Binding ProductTotalAmount}"/>
                <DataGridTextColumn Width="100" Header="進貨價" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True" Binding="{Binding ProductSafeAmount}"/>
                <DataGridTextColumn Width="150" Header="商品狀態" FontSize="20" FontWeight="Bold" FontFamily="Segoe UI Semibold" IsReadOnly="True" Binding="{Binding ProductCurrentTime}"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>

</Window>
