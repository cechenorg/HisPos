<Window x:Class="His_Pos.InventoryManagement.ProductDetail"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:His_Pos.InventoryManagement"
        xmlns:chromeTabs="clr-namespace:ChromeTabs;assembly=ChromeTabs"
        xmlns:converters="clr-namespace:ChromeTabs.Converters;assembly=ChromeTabs"
        mc:Ignorable="d"
        DataContext="{Binding Source={StaticResource ProductDetailViewModelLocator},Path=ViewModelProductDetailWindow}"
        Title="ProductDetail" Height="830" Width="1400">
    <Window.Resources>
        
        <DataTemplate DataType="{x:Type local:OtcDetailView}">
            <local:OtcDetail/>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <DockPanel>
            <DockPanel.Background>
                <ImageBrush ImageSource="../Images/onlyoneeeeeee.jpg"/>
            </DockPanel.Background>
            <chromeTabs:ChromeTabControl Name="Tabs" MaximumTabWidth="200" TabPersistBehavior="All" AddTabButtonBehavior="OpenNewTab"
                             Background="AliceBlue" ItemsSource="{Binding ItemCollection}" SelectedItem="{Binding SelectedTab}" SelectedTabBrush="White"
                             CanMoveTabs="{Binding CanMoveTabs}" DragWindowWithOneTab="True" IsAddButtonVisible="{Binding ShowAddButton}" AddTabCommand="{Binding AddTabCommand}"
                             CloseTabCommand="{Binding CloseTabCommand}" ReorderTabsCommand="{Binding ReorderTabsCommand}" Height="900">
                <chromeTabs:ChromeTabControl.Template>
                    <ControlTemplate TargetType="{x:Type chromeTabs:ChromeTabControl}">
                        <ControlTemplate.Resources>
                            <converters:TabPersistBehaviorToContentPresenterVisibilityConverter x:Key="TabPersistBehaviorToContentPresenterVisibilityConverter" />
                            <converters:TabPersistBehaviorToItemHolderVisibilityConverter x:Key="TabPersistBehaviorToItemHolderVisibilityConverter" />
                        </ControlTemplate.Resources>
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="30" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>
                            <Border Background="{TemplateBinding Background}" BorderThickness="0,0,0,1" BorderBrush="Gray" Grid.Row="0">
                                <chromeTabs:ChromeTabPanel IsItemsHost="True" Background="{TemplateBinding Background}" />
                            </Border>
                            <Grid Grid.Row="1" Visibility="{TemplateBinding TabPersistBehavior,Converter={StaticResource TabPersistBehaviorToContentPresenterVisibilityConverter}}">
                                <ContentPresenter Content="{TemplateBinding SelectedContent}" />
                            </Grid>
                            <Grid x:Name="PART_ItemsHolder" Grid.Row="1" Visibility="{TemplateBinding TabPersistBehavior,Converter={StaticResource TabPersistBehaviorToItemHolderVisibilityConverter}}" />
                        </Grid>
                    </ControlTemplate>
                </chromeTabs:ChromeTabControl.Template>
                <chromeTabs:ChromeTabControl.ItemTemplate>
                    <DataTemplate>
                        <Grid Tag="{Binding RelativeSource={RelativeSource AncestorType={x:Type chromeTabs:ChromeTabItem}}}">
                            <StackPanel Orientation="Horizontal" Background="Transparent">
                                <Image Source="{Binding Icon}" Width="20" Height="20" Margin="5,2,0,0"/>
                                <TextBlock Text="{Binding TabName}" Margin="10,0,0,0" FontFamily="Segoe UI Semibold" FontSize="18" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Grid>
                    </DataTemplate>
                </chromeTabs:ChromeTabControl.ItemTemplate>
            </chromeTabs:ChromeTabControl>
        </DockPanel>
    </Grid>
</Window>
