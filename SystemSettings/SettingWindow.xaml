<Window x:Class="His_Pos.SystemSettings.SettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:His_Pos.SystemSettings"
        mc:Ignorable="d"
        Title="設定" Height="500" Width="800" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="180"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid Background="{StaticResource MenuBarBackGround}">
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <StackPanel Name="MyPharmacyStack" Tag="1" Orientation="Horizontal" Grid.Row="0" MouseLeftButtonDown="SettingTab_OnMouseLeftButtonDown">
                <Image Source="../Images/MyPharmacy.png" Width="35" Margin="15,0,0,5"/>
                <Label Content="藥局設定" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="18" FontFamily="Segoe UI Semibold" Foreground="DarkGray"/>
            </StackPanel>
            <StackPanel Tag="2" Orientation="Horizontal" Grid.Row="1" MouseLeftButtonDown="SettingTab_OnMouseLeftButtonDown">
                <Image Source="../Images/Printer.png" Width="35" Margin="15,0,0,0"/>
                <Label Content="印表機設定" VerticalAlignment="Center" Margin="10,0,0,0" FontSize="18" FontFamily="Segoe UI Semibold" Foreground="DarkGray"/>
            </StackPanel>
            <StackPanel Tag="3" Orientation="Horizontal" Grid.Row="2" MouseLeftButtonDown="SettingTab_OnMouseLeftButtonDown">
                <Image Source="../Images/Database.png" Width="35" Margin="18,0,0,0"/>
                <Label Content="資料庫設定" VerticalAlignment="Center" Margin="7,0,0,0" FontSize="18" FontFamily="Segoe UI Semibold" Foreground="DarkGray"/>
            </StackPanel>
        </Grid>
        <ContentControl Grid.Column="1" Content="{Binding CurrentControl, UpdateSourceTrigger=PropertyChanged}"/>
    </Grid>
</Window>
