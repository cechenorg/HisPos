<Window x:Class="His_Pos.ProductPurchase.AddNewOrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:His_Pos.ProductPurchase"
        xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
        mc:Ignorable="d"
        Title="AddNewOrderDialog" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Viewbox Stretch="Fill">
        <Grid Height="300" Width="500">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Label Content="選擇新增對象:" Foreground="Black" FontSize="30" Grid.Row="0" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <Grid Name="TargetGrid" Grid.Row="1" Margin="50,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <RadioButton Tag="2" GroupName="target" Grid.Row="0" Grid.Column="0" Content=" 所有廠商" FontSize="20" FontFamily="Segoe UI Semi" VerticalContentAlignment="Center" Margin="0,5,0,5" Checked="RadioButton_TargetOnChecked"/>
                <RadioButton Name="TargetManufactory" Tag="5" GroupName="target" Grid.Row="1" Grid.Column="0" Content=" 特定廠商" FontSize="20" FontFamily="Segoe UI Semi" VerticalContentAlignment="Center" Margin="0,5,0,5" Checked="RadioButton_TargetOnChecked" IsChecked="True"/>
                <controls:AutoCompleteBox x:Name="ManufactoryAuto" Width="300" FontSize="18" FontFamily="Segoe UI Semibold" BorderThickness="0,0,0,1" VerticalContentAlignment="Bottom" Height="30"
                                              ValueMemberPath="Name" Background="Transparent" ItemContainerStyle="{StaticResource AutoCompleteBoxItemContainerStyle}" Margin="-130,0,0,0"
                                              BorderBrush="DimGray" FilterMode="Contains" IsTextCompletionEnabled="False" Text="{Binding Name}" Grid.Row="1" Grid.Column="1"
                                              DropDownClosing="ManufactoryAuto_OnDropDownClosing" GotFocus="ManufactoryAuto_OnGotFocus">
                    <controls:AutoCompleteBox.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Label x:Name="ManId" Width="80" Content="{Binding Id}"/>
                                <Label x:Name="ManName" Width="200" Content="{Binding Name}"/>
                            </StackPanel>
                        </DataTemplate>
                    </controls:AutoCompleteBox.ItemTemplate>
                </controls:AutoCompleteBox>
            </Grid>
            <Label Content="選擇新增條件:" Foreground="Black" FontSize="30" Grid.Row="2" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <Grid Name="ConditionGrid" Grid.Row="3" Margin="50,0,0,0">
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <RadioButton Name="Con1"  Tag="1" GroupName="condition" Grid.Row="0" Grid.Column="0" Content=" 無" FontSize="20" FontFamily="Segoe UI Semi" VerticalContentAlignment="Center" Margin="0,5,0,5" IsChecked="True"/>
                <RadioButton Name="Con2" Tag="2" GroupName="condition" Grid.Row="0" Grid.Column="1" Content=" 低於安全量" FontSize="20" FontFamily="Segoe UI Semi" VerticalContentAlignment="Center" Margin="0,5,0,5"/>
                <RadioButton Name="Con3" Tag="3" GroupName="condition" Grid.Row="1" Grid.Column="0" Content=" 全補至基準量" FontSize="20" FontFamily="Segoe UI Semi" VerticalContentAlignment="Center" Margin="0,5,0,5"/>
                <RadioButton Name="Con4" Tag="4" GroupName="condition" Grid.Row="1" Grid.Column="1" Content=" 近期銷量較高" FontSize="20" FontFamily="Segoe UI Semi" VerticalContentAlignment="Center" Margin="0,5,0,5"/>
            </Grid>
            <Button Content="確認"  Grid.Row="4" Width="200" Background="DeepSkyBlue" BorderBrush="Transparent" FontSize="18" FontFamily="Segoe UI Semibold" Click="ConfirmButtonClick"/>
        </Grid>
    </Viewbox>
</Window>
