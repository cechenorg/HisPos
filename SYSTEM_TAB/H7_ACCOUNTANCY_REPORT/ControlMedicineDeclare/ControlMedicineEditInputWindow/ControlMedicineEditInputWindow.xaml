<Window x:Class="His_Pos.SYSTEM_TAB.H7_ACCOUNTANCY_REPORT.ControlMedicineDeclare.ControlMedicineEditInputWindow.ControlMedicineEditInputWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.H7_ACCOUNTANCY_REPORT.ControlMedicineDeclare.ControlMedicineEditInputWindow"
        mc:Ignorable="d"
        Title="管制藥品編輯_藥品代碼輸入" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <Window.DataContext>
        <local:ControlMedicineEditInputViewModel/>
    </Window.DataContext>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition />
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <Label  Content="藥品代碼" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" />
            <TextBox Text="{Binding MedicineID,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="180"  Margin="10,0,0,0" FontFamily="Segoe UI Semibold" FontSize="20"  VerticalAlignment="Center"  />
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Label Content="庫別" Margin="10,0,0,0" FontSize="25" Foreground="Black"  FontFamily="Segoe UI Semibold"  Grid.Row="1" VerticalAlignment="Center"/>
            <ComboBox Width="100" Grid.Row="1" FontFamily="Segoe UI Semi" FontSize="18"  SelectedItem="{Binding SelectedWareHouse,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                                ItemsSource="{Binding WareHouseCollection,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Name"  HorizontalContentAlignment="Center" Margin="10,0,0,0" ItemContainerStyle="{StaticResource ComboItemContainerStyle}" >
                </ComboBox>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="3">
            <Button Content="確認" Command="{Binding SubmitCommand}" FontSize="20" Foreground="Black" Margin="200,0,0,0" FontFamily="Segoe UI Semibold" Background="DarkCyan" Grid.Row="1" VerticalAlignment="Center"/>
            
        </StackPanel>
    </Grid>
</Window>
