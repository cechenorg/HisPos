            </DataGrid>
            <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" Background="{StaticResource GridDarkerBackGround}">
                <Label Content="小計" FontFamily="Segoe UI Semibold" FontSize="25" VerticalAlignment="Center"/>
                <Label Content="0" FontFamily="Segoe UI Semibold" FontSize="25" VerticalAlignment="Center"/>
