<UserControl x:Class="His_Pos.SYSTEM_TAB.H7_ACCOUNTANCY_REPORT.CashStockEntryReport.CashStockEntryReport"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.H7_ACCOUNTANCY_REPORT.CashStockEntryReport"
             xmlns:service="clr-namespace:His_Pos.Service"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             xmlns:entryDetailControl="clr-namespace:His_Pos.SYSTEM_TAB.H7_ACCOUNTANCY_REPORT.CashStockEntryReport.EntryDetailControl"
             mc:Ignorable="d" 
             xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
             d:DesignHeight="839" d:DesignWidth="1365">
    <UserControl.Resources>
        <service:NullableDateConverter x:Key="NullableDateConverter" />
        <DataTemplate x:Key="CashDetailControl" DataType="{x:Type local:CashStockEntryReportViewModel}">
            <entryDetailControl:CashDetailControl/>
        </DataTemplate>
        <DataTemplate x:Key="PrescriptionDetailControl" DataType="{x:Type local:CashStockEntryReportViewModel}">
            <entryDetailControl:PrescriptionDetailControl/>
        </DataTemplate>
        <DataTemplate x:Key="StockTakingDetailControl" DataType="{x:Type local:CashStockEntryReportViewModel}">
            <entryDetailControl:StockTakingDetailControl/>
        </DataTemplate>
        <DataTemplate x:Key="StockTakingOTCDetailControl" DataType="{x:Type local:CashStockEntryReportViewModel}">
            <entryDetailControl:StockTakingOTCDetailControl/>
        </DataTemplate>
        <DataTemplate x:Key="TradeProfitDetailControl" DataType="{x:Type local:CashStockEntryReportViewModel}">
            <entryDetailControl:TradeProfitDetailControl/>
        </DataTemplate>
        <DataTemplate x:Key="ExtraMoneyDetailControl" DataType="{x:Type local:CashStockEntryReportViewModel}">
            <entryDetailControl:ExtraMoneyDetailControl/>
        </DataTemplate>
        <DataTemplate x:Key="RewardDetailControl" DataType="{x:Type local:CashStockEntryReportViewModel}">
            <entryDetailControl:RewardDetailControl/>
        </DataTemplate>
    </UserControl.Resources>
    <xctk:BusyIndicator IsBusy="{Binding IsBusy,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" BusyContent="{Binding BusyContent,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}">
        <Grid Margin="10">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="400"/>
                <RowDefinition Height="400"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2">
                <xctk:MaskedTextBox x:Name="StartDate" Width="150" Margin="20,0,10,5" HorizontalContentAlignment="Center" FontSize="27" Style="{StaticResource MaterialDesignTextBox}"
                                Foreground="{StaticResource ForeGround}" Mask="000/00/00" PromptChar="-" ValueDataType="xctk:DateTimeFormat" FontFamily="Segoe UI Semibold"
                                InsertKeyMode="Overwrite" PreviewKeyDown="StartDate_PreviewKeyDown" InputScope="Number" >
                    <xctk:MaskedTextBox.Text>
                        <Binding Path="StartDate" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" 
                             ValidatesOnDataErrors="True" NotifyOnValidationError="True" Converter="{StaticResource NullableDateConverter}">
                            <Binding.ValidationRules>
                                <service:DateValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </xctk:MaskedTextBox.Text>
                </xctk:MaskedTextBox>
                <Label Content="~" FontSize="25" VerticalAlignment="Center"/>
                <xctk:MaskedTextBox x:Name="EndDate" Width="150" Margin="10,0,0,5" HorizontalContentAlignment="Center" FontSize="27" Style="{StaticResource MaterialDesignTextBox}"
                                Foreground="{StaticResource ForeGround}" Mask="000/00/00" PromptChar="-" ValueDataType="xctk:DateTimeFormat" FontFamily="Segoe UI Semibold"
                                InsertKeyMode="Overwrite" PreviewKeyDown="EndDate_PreviewKeyDown" InputScope="Number">
                    <xctk:MaskedTextBox.Text>
                        <Binding Path="EndDate" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" 
                             ValidatesOnDataErrors="True" NotifyOnValidationError="True" Converter="{StaticResource NullableDateConverter}">
                            <Binding.ValidationRules>
                                <service:DateValidationRule/>
                            </Binding.ValidationRules>
                        </Binding>
                    </xctk:MaskedTextBox.Text>
                </xctk:MaskedTextBox>
                <StackPanel  Grid.Row="3" Orientation="Horizontal">
                    <Button x:Name="btnAll" Content="門市總計" Background="DimGray"  BorderThickness="0" Height="25" Width="200" Margin="50,0,0,0" FontFamily="Segoe UI Semibold" FontSize="13" PreviewMouseDown="btnAll_PreviewMouseDown" Command="{Binding ExtraMoneyReportSelectionChangedCommand}"/>
                    <Button x:Name="btnMed" Content="處方調劑" Background="Transparent" Foreground="DimGray" BorderThickness="0" Height="25" Width="200" Margin="0,0,0,0" FontFamily="Segoe UI Semibold" FontSize="13" PreviewMouseDown="btnMed_PreviewMouseDown" Command="{Binding CooperativePrescriptionSelectionChangedCommand}"/>
                        <Button x:Name="btnTrade" Content="OTC交易" Background="Transparent" Foreground="DimGray" BorderThickness="0" Height="25" Width="200" Margin="0,0,0,0" FontFamily="Segoe UI Semibold" FontSize="13" PreviewMouseDown="btnTrade_PreviewMouseDown" Command="{Binding TradeProfitReportSelectionChangedCommand}"/>
                </StackPanel>
                <Button x:Name="SearchButton" Width="120" Command="{Binding SearchCommand}" Margin="185,0,0,0" Content="查詢" Height="35" FontSize="20" FontFamily="Segoe UI Semibold" Background="RoyalBlue" BorderThickness="0" />
            </StackPanel>

                <StackPanel x:Name="All" Grid.Row="1"  Grid.Column="0" Grid.ColumnSpan="2" Height="500" Visibility="Visible" Margin="20,10,20,0">
                    
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="330"/>
                        <ColumnDefinition Width="330"/>
                        <ColumnDefinition Width="330"/>
                        <ColumnDefinition Width="315"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10" Background="DarkSeaGreen"/>
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="10" Background="GhostWhite"/>
                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="3" Grid.ColumnSpan="4" Grid.RowSpan="2" BorderBrush="DarkSeaGreen"/>
                    <Label Grid.Row="0" Grid.Column="0" Content="OTC交易" FontFamily="Segoe UI Semibold" FontSize="20" HorizontalAlignment="Center"/>
                    <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" MouseDown="OTCMain_MouseDown" Width="330">
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="{Binding TotalCashFlow.TotalOTC,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="330"/>
                        </Border>
                    </StackPanel>
                    <Label Grid.Row="0" Grid.Column="1" Content="調劑總計" FontFamily="Segoe UI Semibold" FontSize="20" HorizontalAlignment="Center"/>
                    <StackPanel Grid.Row="1" Grid.Column="1" Orientation="Horizontal" MouseDown="MedMain_MouseDown"  Width="330">
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="{Binding TotalCashFlow.TotalMed,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="330"/>
                        </Border>
                    </StackPanel>
                    <Label Grid.Row="0" Grid.Column="2" Content="額外收支" FontFamily="Segoe UI Semibold" FontSize="20" HorizontalAlignment="Center"/>
                    <StackPanel x:Name="ExtraMain" Grid.Row="1" Grid.Column="2" Orientation="Horizontal"  Width="330"  Background="Transparent">
                    <StackPanel.InputBindings>
                        <MouseBinding Gesture="LeftClick" Command="{Binding ExtraMoneyReportSelectionChangedCommand}"/>
                    </StackPanel.InputBindings>
                    <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                        <Label Content="{Binding ExtraMoney,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="330"/>
                    </Border>
                </StackPanel>
                <Label Grid.Row="0" Grid.Column="3" Content="合計" FontFamily="Segoe UI Semibold" FontSize="20" HorizontalAlignment="Center" />
                    <StackPanel Grid.Row="1" Grid.Column="3"  Orientation="Horizontal" Width="315">
                    <Border BorderBrush="Gray" BorderThickness="0,0,1,0">
                            <Label Content="{Binding TotalCashFlow.Total,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="315"/>
                    </Border>
                </StackPanel>
                </Grid>
            </StackPanel>

            <StackPanel x:Name="Med"  Grid.Row="1"  Grid.Column="0" Grid.ColumnSpan="2" Height="600" Visibility="Collapsed" Margin="20,10,20,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="300"/>
                        <ColumnDefinition Width="205"/>
                        <ColumnDefinition Width="200"/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="10" Background="DarkSeaGreen"/>
                    <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="10" Background="GhostWhite"/>
                    <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="10" Background="GhostWhite"/>
                    <StackPanel x:Name="MedCashBack" Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="10" Background="GhostWhite"/>
                    <StackPanel  Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="10" Background="GhostWhite"/>
                    <StackPanel x:Name="MedStockBack" Grid.Row="5" Grid.Column="0" Grid.ColumnSpan="10" Background="GhostWhite"/>
                    <StackPanel Grid.Row="6" Grid.Column="3" Grid.ColumnSpan="10" Background="DarkSeaGreen"/>
                    
                    <Border Grid.Row="2" Grid.Column="0" BorderThickness="0,1,0,0" Grid.ColumnSpan="5" Grid.RowSpan="6" BorderBrush="LightGray"/>
                    <Border Grid.Row="3" Grid.Column="0" BorderThickness="0,1,0,0" Grid.ColumnSpan="5" Grid.RowSpan="6" BorderBrush="LightGray"/>
                    <Border Grid.Row="4" Grid.Column="0" BorderThickness="0,1,0,0" Grid.ColumnSpan="5" Grid.RowSpan="6" BorderBrush="LightGray"/>
                    <Border Grid.Row="5" Grid.Column="0" BorderThickness="0,1,0,0" Grid.ColumnSpan="5" Grid.RowSpan="6" BorderBrush="LightGray"/>
                    <Border Grid.Row="0" Grid.Column="0" BorderThickness="3" Grid.ColumnSpan="5" Grid.RowSpan="6" BorderBrush="DarkSeaGreen"/>
                    <StackPanel  Grid.Row="1" Grid.Column="0" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <Label Content="處方" FontFamily="Segoe UI Semibold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0"/>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" Background="Transparent" >
                        <Label Content="處方合作" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300" />
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="2" Orientation="Horizontal" Background="Transparent"  >
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="處方非合作" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="3"  Orientation="Horizontal"  >
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="金額" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Row="0" Grid.Column="4"  Orientation="Horizontal"  >
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="小計" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="200"/>
                        </Border>
                    </StackPanel>
                    <StackPanel x:Name="MedCoopPreBack" Grid.Row="1" Grid.Column="1"  Background="Transparent" PreviewMouseDown="MedCoopPreBack_PreviewMouseDown">
                        <StackPanel.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding CooperativePrescriptionSelectionChangedCommand}"/>
                        </StackPanel.InputBindings>
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="{Binding CooperativePrescriptionProfitReport.TotalMed,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300" Margin="0,10,0,0"/>
                        </Border>
                    </StackPanel>
                    <StackPanel x:Name="MedSelfPreBack"  Grid.Row="1" Grid.Column="2"  Background="Transparent" PreviewMouseDown="MedSelfPreBack_PreviewMouseDown">
                                <StackPanel.InputBindings>
                                    <MouseBinding Gesture="LeftClick" Command="{Binding SelfPrescriptionSelectionChangedCommand}"/>
                                </StackPanel.InputBindings>
                            <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                                <Label Content="{Binding SelfPrescriptionProfitReport.TotalMed,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300" Margin="0,10,0,0"/>
                            </Border>
                            </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="3"  Background="Transparent">
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="0" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300" Margin="0,10,0,0"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Row="1" Grid.Column="4" Orientation="Horizontal" Background="Transparent">
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="{Binding TotalCashFlow.TotalMedProfit,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="200" Margin="0,10,0,0"/>
                        </Border>
                    </StackPanel>

                    <Label Grid.Row="2" Grid.Column="0" Content="耗用" FontFamily="Segoe UI Semibold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <StackPanel x:Name="MedCostCoopBack" Grid.Row="2" Grid.Column="1"  Background="Transparent" PreviewMouseDown="MedCostCoopBack_PreviewMouseDown">
                                <StackPanel.InputBindings>
                                    <MouseBinding Gesture="LeftClick" Command="{Binding CooperativePrescriptionSelectionChangedCommand}"/>
                                </StackPanel.InputBindings>
                        <Border BorderBrush="LightGray" BorderThickness="0,1,0,0">
                            <Label Content="{Binding CooperativePrescriptionProfitReport.MedUse,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300" Margin="0,10,0,0"/>
                        </Border>
                    </StackPanel>
                    <StackPanel  x:Name="MedCostSelfBack" Grid.Row="2" Grid.Column="2"  Background="Transparent" PreviewMouseDown="MedCostSelfBack_PreviewMouseDown">
                                <StackPanel.InputBindings>
                                    <MouseBinding Gesture="LeftClick" Command="{Binding SelfPrescriptionSelectionChangedCommand}"/>
                                </StackPanel.InputBindings>
                        <Border BorderBrush="LightGray" BorderThickness="0,1,0,0">
                            <Label Content="{Binding SelfPrescriptionProfitReport.MedUse,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300" Margin="0,10,0,0" />
                                </Border>
                            </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="3"  Background="Transparent">
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="0" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300" Margin="0,10,0,0"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Row="2" Grid.Column="4" Orientation="Horizontal" Background="Transparent">
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="{Binding TotalCashFlow.TotalMedUse,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="200" Margin="0,10,0,0"/>
                        </Border>
                    </StackPanel>
                    <Label x:Name="MedCash" Grid.Row="4" Grid.Column="0" Content="自費" FontFamily="Segoe UI Semibold" FontSize="20" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
                    <StackPanel x:Name="MedCashCoop" Grid.Row="4" Grid.Column="1"  Orientation="Horizontal" Background="Transparent" PreviewMouseDown="MedCashCoop_PreviewMouseDown">
                        <StackPanel.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding CashNotCoopSelectionChangedCommand}"/>
                        </StackPanel.InputBindings>
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="{Binding CoopCashProfitReport.TotalPrice,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300"/>
                        </Border>
                    </StackPanel>
                    <StackPanel x:Name="MedCashNotCoop" Grid.Row="4" Grid.Column="2"  Orientation="Horizontal" Background="Transparent" PreviewMouseDown="MedCashNotCoop_PreviewMouseDown">
                        <StackPanel.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding CashCoopSelectionChangedCommand}"/>
                        </StackPanel.InputBindings>
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="{Binding CashProfitReport.TotalPrice,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Row="4" Grid.Column="3"  Orientation="Horizontal" Background="Transparent" >
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                                <Label Content="0" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300"/>
                            </Border>
                </StackPanel>
                    <StackPanel Grid.Row="4" Grid.Column="4"  Orientation="Horizontal" Background="Transparent">
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="{Binding TotalCashFlow.TotalMedCash,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="200"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Row="5" Grid.Column="0">
                        <Label  Content="盤差" FontFamily="Segoe UI Semibold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0"  PreviewMouseDown="MedStock_PreviewMouseDown"/>
                    </StackPanel>
                    <StackPanel x:Name="MedStock"  Grid.Row="5" Grid.Column="1" Orientation="Horizontal" Background="Transparent" PreviewMouseDown="MedStock_PreviewMouseDown">
                        <StackPanel.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding StockTakingReportSelectionChangedCommand}"/>
                        </StackPanel.InputBindings>
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="0" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Row="5" Grid.Column="2" Orientation="Horizontal" Background="Transparent" PreviewMouseDown="MedStock_PreviewMouseDown">
                        <StackPanel.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding StockTakingReportSelectionChangedCommand}"/>
                        </StackPanel.InputBindings>
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="0" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Row="5" Grid.Column="3" Orientation="Horizontal" Background="Transparent" PreviewMouseDown="MedStock_PreviewMouseDown">
                            <StackPanel.InputBindings>
                                <MouseBinding Gesture="LeftClick" Command="{Binding StockTakingReportSelectionChangedCommand}"/>
                            </StackPanel.InputBindings>
                            <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                                <Label Content="{Binding  TotalStockTakingReport.Price,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300"/>
                            </Border>
                    </StackPanel>
                    <StackPanel Grid.Row="5" Grid.Column="4" Orientation="Horizontal" Background="Transparent" PreviewMouseDown="MedStock_PreviewMouseDown">
                        <StackPanel.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding StockTakingReportSelectionChangedCommand}"/>
                        </StackPanel.InputBindings>
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="{Binding  TotalStockTakingReport.Price,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="200"/>
                        </Border>
                    </StackPanel>

                    <StackPanel Grid.Row="3" Grid.Column="0">
                        <Label  Content="調整" FontFamily="Segoe UI Semibold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,5,0,0"  PreviewMouseDown="MedStock_PreviewMouseDown"/>
                    </StackPanel>
                    <StackPanel x:Name="MedChange"  Grid.Row="3" Grid.Column="1" Orientation="Horizontal" Background="Transparent" PreviewMouseDown="MedChange_PreviewMouseDown">
                        <StackPanel.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding CooperativePrescriptionChangeSelectionChangedCommand}"/>
                        </StackPanel.InputBindings>
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="{Binding  CooperativePrescriptionChangeReport.Profit,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300"/>
                        </Border>
                    </StackPanel>
                    <StackPanel x:Name="MedCoopChange" Grid.Row="3" Grid.Column="2" Orientation="Horizontal" Background="Transparent" PreviewMouseDown="MedCoopChange_PreviewMouseDown">
                        <StackPanel.InputBindings>
                            <MouseBinding Gesture="LeftClick" Command="{Binding SelfPrescriptionChangeSelectionChangedCommand}"/>
                        </StackPanel.InputBindings>
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="{Binding  SelfPrescriptionChangeReport.Profit,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Grid.Column="3" Orientation="Horizontal" Background="Transparent" >
                       
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="0" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="300"/>
                        </Border>
                    </StackPanel>
                    <StackPanel Grid.Row="3" Grid.Column="4" Orientation="Horizontal" Background="Transparent" >
                        
                        <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                            <Label Content="{Binding  TotalCashFlow.TotalMedChange,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="200"/>
                        </Border>
                    </StackPanel>

                    <Label Grid.Row="6" Grid.Column="3" Content="合計" FontFamily="Segoe UI Semibold" FontSize="20" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    <StackPanel Grid.Row="6" Grid.Column="4" Orientation="Horizontal" Background="Transparent">
                    <Border BorderBrush="Gray" BorderThickness="0,0,0,0">
                        <Label Content="{Binding TotalCashFlow.TotalMed,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" ContentStringFormat="{}{0:N0}" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" HorizontalContentAlignment="Center" Width="200"/>
                    </Border>
                    </StackPanel>
                </Grid>
            </StackPanel>
            <StackPanel x:Name="OTC"  Grid.Row="1"  Grid.Column="0" Grid.ColumnSpan="2" Height="500" Visibility="Collapsed" Margin="20,10,20,0">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                        <RowDefinition Height="50"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="200"/>
                        <ColumnDefinition Width="180"/>
