<Window x:Class="His_Pos.SYSTEM_TAB.H7_ACCOUNTANCY_REPORT.CashStockEntryReport.ExportIncomeStatementWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.H7_ACCOUNTANCY_REPORT.CashStockEntryReport"
        mc:Ignorable="d" ResizeMode="NoResize" SizeToContent="Height" WindowStartupLocation="CenterScreen"
        Title="匯出損益表" Height="Auto" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
            <ColumnDefinition Width="120"/>
        </Grid.ColumnDefinitions>
        <Label Content="選擇檔案範本" Grid.Column="0" Grid.Row="0" FontSize="20" FontFamily="Arial Black" HorizontalContentAlignment="Right" VerticalContentAlignment="Center"/>
        <Label Content="{Binding TemplateFile, UpdateSourceTrigger=PropertyChanged}" Grid.Column="1" Grid.Row="0" Margin="8" FontSize="16" FontFamily="Arial" BorderThickness="0,0,0,1" BorderBrush="DimGray" VerticalContentAlignment="Bottom"/>
        <Button Content="選擇檔案" Grid.Column="2" Grid.Row="0" Margin="5,5,10,5" FontSize="17" FontFamily="Arial" BorderThickness="0" Background="DimGray" Click="ChooseFile_OnClick"/>
        <Button Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="3" Content="匯出" FontSize="17" FontFamily="Arial" BorderThickness="0" Background="RoyalBlue" Width="150" Click="Export_OnClick"/>
    </Grid>
</Window>
