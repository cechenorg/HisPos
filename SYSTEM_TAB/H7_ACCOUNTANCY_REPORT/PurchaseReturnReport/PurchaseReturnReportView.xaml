<UserControl x:Class="His_Pos.H7_ACCOUNTANCY_REPORT.PurchaseReturnReport.PurchaseReturnReportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:His_Pos.H7_ACCOUNTANCY_REPORT.PurchaseReturnReport"
             xmlns:hisPos="clr-namespace:His_Pos"
             xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="839" d:DesignWidth="1365">
    <UserControl.Resources>
        <hisPos:DateConverter x:Key="DateConverter"/>
    </UserControl.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            
            <xctk:MaskedTextBox Name="StartDate" Width="150" Margin="20,0,10,5" HorizontalContentAlignment="Center" FontSize="27" Style="{StaticResource MaterialDesignTextBox}"
                                Foreground="{StaticResource ForeGround}" Mask="000/00/00" PromptChar=" " ValueDataType="xctk:DateTimeFormat" FontFamily="Segoe UI Semibold"
                                InsertKeyMode="Overwrite" PreviewKeyDown="Date_OnPreviewKeyDown">
                <xctk:MaskedTextBox.Text>
                    <Binding Path="SDateTime" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" 
                             ValidatesOnDataErrors="True" NotifyOnValidationError="True" Converter="{StaticResource DateConverter}">
                        <Binding.ValidationRules>
                            <hisPos:DateValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </xctk:MaskedTextBox.Text>
            </xctk:MaskedTextBox>
            <Label Content="~" FontSize="25" VerticalAlignment="Center"/>
            <xctk:MaskedTextBox Name="EndDate" Width="150" Margin="10,0,0,5" HorizontalContentAlignment="Center" FontSize="27" Style="{StaticResource MaterialDesignTextBox}"
                                Foreground="{StaticResource ForeGround}" Mask="000/00/00" PromptChar=" " ValueDataType="xctk:DateTimeFormat" FontFamily="Segoe UI Semibold"
                                InsertKeyMode="Overwrite" PreviewKeyDown="Date_OnPreviewKeyDown">
                <xctk:MaskedTextBox.Text>
                    <Binding Path="EDateTime" Mode="TwoWay" UpdateSourceTrigger="PropertyChanged" 
                             ValidatesOnDataErrors="True" NotifyOnValidationError="True" Converter="{StaticResource DateConverter}">
                        <Binding.ValidationRules>
                            <hisPos:DateValidationRule/>
                        </Binding.ValidationRules>
                    </Binding>
                </xctk:MaskedTextBox.Text>
            </xctk:MaskedTextBox>
            <Button Name="SearchButton" Tag="ByUser" Width="120" Margin="20,0,0,0" Content="查詢" Height="35" FontSize="20" FontFamily="Segoe UI Semibold" Foreground="{StaticResource ForeGround}" Background="LightBlue" BorderThickness="0" Click="Search_OnClick"/>
            <Button Width="150" Tag="ThisMonth" Content="當月查詢" Margin="685,0,0,0" Height="35" FontSize="20" FontFamily="Segoe UI Semibold" Background="RoyalBlue" BorderThickness="0" Click="Search_OnClick"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="10,0,10,0" Background="{StaticResource GridBackGround}">
            <Rectangle Width="835"/>
            <Button Tag="1" Width="150" Margin="10,0,0,0" Height="35" FontSize="20" FontFamily="Segoe UI Semibold" Foreground="{StaticResource ForeGround}" Background="DarkGray" BorderThickness="0" Click="SetControlStatus_OnClick">
                <StackPanel Orientation="Horizontal">
                    <Image Source="../../Images/CloseRecord.png" Width="25"/>
                    <TextBlock Text="全部收起" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
            <Button Tag="2" Width="170" Margin="10,0,0,0" Height="35" FontSize="20" FontFamily="Segoe UI Semibold" Foreground="{StaticResource ForeGround}" Background="DarkGray" BorderThickness="0" Click="SetControlStatus_OnClick">
                <StackPanel Orientation="Horizontal">
                    <Image Source="../../Images/CloseRecord.png" Width="25"/>
                    <TextBlock Text="展開至訂單" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
            <Button Tag="3" Width="150" Margin="10,0,0,0" Height="35" FontSize="20" FontFamily="Segoe UI Semibold" Foreground="{StaticResource ForeGround}" Background="DarkGray" BorderThickness="0" Click="SetControlStatus_OnClick">
                <StackPanel Orientation="Horizontal">
                    <Image Source="../../Images/CloseRecord.png" Width="25"/>
                    <TextBlock Text="全部展開" Margin="8,0,0,0"/>
                </StackPanel>
            </Button>
        </StackPanel>
        <ScrollViewer Name="OutsideScrollViewer" Grid.Row="2" Margin="10,0,10,10" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Disabled"
                      CanContentScroll="False" Background="{StaticResource GridBackGround}">
            <ScrollViewer.Resources>
                <Style TargetType="{x:Type ScrollBar}">
                    <Setter Property="SnapsToDevicePixels" Value="True"/>
                    <Setter Property="OverridesDefaultStyle" Value="true"/>
                    <Setter Property="Width" Value="100"/>
                    <Style.Triggers>
                        <Trigger Property="Orientation" Value="Horizontal">
                            <Setter Property="Width" Value="Auto" />
                            <Setter Property="Height" Value="15" />
                            <Setter Property="Template" Value="{StaticResource HorizontalScrollBar}" />
                        </Trigger>
                        <Trigger Property="Orientation" Value="Vertical">
                            <Setter Property="Width" Value="12"/>
                            <Setter Property="Height" Value="Auto" />
                            <Setter Property="Template" Value="{StaticResource VerticalScrollBar}" />
                        </Trigger>
                    </Style.Triggers>
                </Style>
            </ScrollViewer.Resources>
            <Grid Height="Auto" Margin="0,0,5,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <StackPanel Name="FirstStack" Grid.Column="0" Margin="10,0,5,10"/>
                <StackPanel Name="SecondStack" Grid.Column="1" Margin="5,0,10,10"/>
            </Grid>
        </ScrollViewer>
    </Grid>
</UserControl>
