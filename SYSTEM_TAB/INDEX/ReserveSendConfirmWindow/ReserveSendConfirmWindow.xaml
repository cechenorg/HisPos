<Window x:Class="His_Pos.SYSTEM_TAB.INDEX.ReserveSendConfirmWindow.ReserveSendConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.INDEX.ReserveSendConfirmWindow"
        xmlns:generalCustomControl="clr-namespace:His_Pos.GeneralCustomControl"
        xmlns:service="clr-namespace:His_Pos.Service"
        mc:Ignorable="d"
        xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
        Title="預約慢箋處方確認" Height="625" Width="1000" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <service:NullableDateConverter x:Key="NullableDateConverter" />
        <DataTemplate x:Key="MedPrepareTypeAllPrepare" DataType="{x:Type Label}">
            <Border BorderBrush="Green" BorderThickness="1" CornerRadius="6" Margin="18,8,1,5">
                <TextBlock Text="全自備" Foreground="Green" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" Margin="8,0,8,2"/>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="MedPrepareTypeCoPrepare" DataType="{x:Type Label}">
            <Border BorderBrush="DodgerBlue"  BorderThickness="1" CornerRadius="6" Margin="0,8,1,5">
                <TextBlock Text="部分自備" Foreground="DodgerBlue" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" Margin="8,0,8,2"/>
            </Border>
        </DataTemplate>
        <DataTemplate x:Key="MedPrepareTypeAllSend" DataType="{x:Type Label}">
            <Border BorderBrush="Firebrick"  BorderThickness="1" CornerRadius="6" Margin="18,8,1,5">
                <TextBlock Text="全傳送" Foreground="Firebrick" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center" Margin="8,0,8,2"/>
            </Border>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="250"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid CanUserDeleteRows="False" HeadersVisibility="None" HorizontalScrollBarVisibility="Hidden" Background="{StaticResource GridDarkerBackGround}"
                  ItemsSource="{Binding IndexReserveCollection,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding IndexReserveSelectedItem,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                  ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" AutoGenerateColumns="False" VerticalScrollBarVisibility="Hidden" CanUserAddRows="False">
            <DataGrid.Columns>
                <DataGridTemplateColumn Width="250">
                    <DataGridTemplateColumn.CellStyle>
                        <Style TargetType="{x:Type DataGridCell}">
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="BorderBrush" Value="Transparent"/>
                            <Setter Property="Foreground" Value="{StaticResource ForeGround}"/>
                            <Style.Triggers>
                                <Trigger Property="IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource GridSelected}"/>
                                </Trigger>
                                <DataTrigger Binding="{Binding IsExpensive}" Value="True">
                                    <Setter Property="Background" Value="Khaki"></Setter>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </DataGridTemplateColumn.CellStyle>
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition/>
                                    <RowDefinition/>
                                </Grid.RowDefinitions>
                                <Label Content="{Binding CusName, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Margin="10,0,0,0" FontFamily="Segoe UI Semibold" FontSize="30" HorizontalContentAlignment="Left" VerticalAlignment="Center"/>
                                <StackPanel Orientation="Horizontal" Grid.Row="1">
                                    <Label Content="{Binding AdjustDate,Converter={StaticResource NullableDateConverter},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Width="110" Foreground="{StaticResource ForeGround}" FontFamily="Segoe UI Semi" FontSize="20" VerticalAlignment="Center" Margin="10,0,0,0"/>
                                    <Label Content="毛利 $" FontFamily="Segoe UI Semibold" FontSize="18" HorizontalContentAlignment="Center" VerticalAlignment="Center" Foreground="{StaticResource ForeGround}"/>
                                    <TextBlock Text="{Binding Profit,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged, StringFormat=N0}" Width="57" FontFamily="Segoe UI Semi" FontSize="18" VerticalAlignment="Center" Foreground="{StaticResource ForeGround}" TextAlignment="Right"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Grid Grid.Column="1" Background="{StaticResource GridDarkestBackGround}">
            <Grid.RowDefinitions>
                <RowDefinition Height="50"/>
                <RowDefinition Height="40"/>
                <RowDefinition Height="40"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0">
                <Label Content="{Binding IndexReserveSelectedItem.CusName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="Black" FontSize="32" FontFamily="Segoe UI Semibold" Width="200" VerticalAlignment="Center" Padding="0" Margin="10,0,0,0"/>
                <Label Content="生日" Foreground="Black" FontSize="28" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" Padding="0" Margin="10,0,0,0"/>
                <Label Content="{Binding IndexReserveSelectedItem.CusBirth, Converter={StaticResource NullableDateConverter},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="Black" FontSize="28" FontFamily="Segoe UI Semibold" Width="150" VerticalAlignment="Center" Padding="0" Margin="10,0,0,0"/>
                <ContentControl Content="{Binding}" Margin="190,0,0,0">
                    <ContentControl.Style>
                        <Style TargetType="{x:Type ContentControl}">
                            <Setter Property="ContentTemplate" Value="{StaticResource MedPrepareTypeAllPrepare}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding IndexReserveSelectedItem.PrepareMedType, UpdateSourceTrigger=PropertyChanged}" Value="CoPrepare">
                                    <Setter Property="ContentTemplate" Value="{StaticResource MedPrepareTypeCoPrepare}"/>
                                </DataTrigger>
                                <DataTrigger Binding="{Binding IndexReserveSelectedItem.PrepareMedType, UpdateSourceTrigger=PropertyChanged}" Value="AllSend">
                                    <Setter Property="ContentTemplate" Value="{StaticResource MedPrepareTypeAllSend}"/>
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
            </StackPanel>
            <StackPanel Grid.Row="1" Orientation="Horizontal" Grid.ColumnSpan="2">
                <Label Content="{Binding IndexReserveSelectedItem.InsName,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="{StaticResource ForeGround}" FontSize="25" FontFamily="Segoe UI Semibold" MaxWidth="500" VerticalAlignment="Center" Padding="0" Margin="10,0,0,0"/>
                <Label Margin="20,0,0,0" Content="{Binding IndexReserveSelectedItem.DivName, Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="{StaticResource ForeGround}" FontSize="25" Width="120" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" Padding="0"/>
            </StackPanel>
            <StackPanel Grid.Row="2" Orientation="Horizontal" Grid.ColumnSpan="2">
                <Label Content="就醫日" Foreground="{StaticResource ForeGround}" FontSize="22" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" Padding="0" Margin="10,0,0,0"/>
                <Label Content="{Binding IndexReserveSelectedItem.TreatDate,Converter={StaticResource NullableDateConverter},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="{StaticResource ForeGround}" Margin="10,0,0,0" FontSize="22" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" Padding="0"/>
                <Label Content="可領藥日" Foreground="{StaticResource ForeGround}" FontSize="22" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" Padding="0" Margin="50,0,0,0"/>
                <Label Content="{Binding IndexReserveSelectedItem.AdjustDate,Converter={StaticResource NullableDateConverter},Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Foreground="{StaticResource ForeGround}" Margin="10,0,0,0" FontSize="22" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" Padding="0"/>
            </StackPanel>
            <DataGrid Grid.Row="3" Background="{StaticResource Shadow}" ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" Margin="10,0,10,0"
                    CellStyle="{StaticResource DataGridCellStyle}" CanUserDeleteRows="False" CanUserAddRows="False" AutoGenerateColumns="False" ItemsSource="{Binding IndexReserveSelectedItem.IndexReserveDetailCollection,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"
                          SelectedItem="{Binding IndexReserveMedicineSelectedItem,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type ScrollBar}">
                        <Setter Property="SnapsToDevicePixels" Value="True"/>
                        <Setter Property="OverridesDefaultStyle" Value="true"/>
                        <Setter Property="Width" Value="100"/>
                        <Style.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Width" Value="Auto" />
                                <Setter Property="Height" Value="15" />
                                <Setter Property="Template" Value="{StaticResource HorizontalScrollBar}" />
                            </Trigger>
                            <Trigger Property="Orientation" Value="Vertical">
                                <Setter Property="Width" Value="15"/>
                                <Setter Property="Height" Value="Auto" />
                                <Setter Property="Template" Value="{StaticResource VerticalScrollBar}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="DataGridRow.IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource GridSelected}"/>
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="Background" Value="Transparent"/>
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="Height" Value="40"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTextColumn Width="170" Header="藥品編號" FontFamily="Segoe UI Semi" IsReadOnly="True" Binding="{Binding ID}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment"  Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn MaxWidth="280" Width="280" Header="藥品名稱" IsReadOnly="True" CanUserResize="False">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Margin="10,0,0,0">
                                    <generalCustomControl:ProductStatusIcon IsCommon="{Binding IsCommon}" ControlLevel="{Binding ControlLevel}" IsFrozen="{Binding IsFrozen}"/>
                                    <Label x:Name="FullName" Content="{Binding FullName, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" HorizontalAlignment="Left" FontSize="14" Margin="-5,0,0,0"/>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}">
                                <EventSetter Event="MouseDoubleClick" Handler="ShowDetail"/>
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="Foreground" Value="#FF424040" />
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn  Width="80" Header="架上量" FontFamily="Segoe UI Semi" IsReadOnly="True" Binding="{Binding FrameAmount,StringFormat=N2}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment"  Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn  Width="80" Header="調劑量" FontFamily="Segoe UI Semi" IsReadOnly="True" Binding="{Binding Amount,StringFormat=N2}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment"  Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn  Width="100" Header="傳送量" FontFamily="Segoe UI Semi" IsReadOnly="True" Binding="{Binding SendAmount,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment"  Value="Center"/>
                                <Setter Property="VerticalAlignment" Value="Center"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn> 
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Horizontal" Grid.Row="4"> 
                <Label Content="毛利 $" Foreground="Black" FontSize="22" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" Padding="0" Margin="10,0,0,0"/>
                <TextBlock Text="{Binding IndexReserveSelectedItem.Profit,UpdateSourceTrigger=PropertyChanged, StringFormat=N2}" Foreground="Black" Margin="10,0,0,0" FontSize="22" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" Padding="0" Width="200"/>
                <!--<CheckBox Content="全傳送" Foreground="Black" IsChecked="{Binding IsAllSend,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" FontSize="22" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" Padding="0" Margin="230,0,0,0" />-->
                <Button Width="120" Command="{Binding SubmitCommand}" Margin="325,0,0,0" Content="傳送處方" Height="35" FontSize="18" FontFamily="Segoe UI Semibold" Background="RoyalBlue" BorderThickness="0" />
            </StackPanel>
        </Grid>
    </Grid>
</Window>
