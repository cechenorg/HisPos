<Window x:Class="His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductPurchaseRecord.DeleteOrderWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductPurchaseRecord"
        mc:Ignorable="d"
        Title="刪除進退貨單" Height="230" Width="300" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Label Content="進退貨單刪除後即無法復原" Grid.Row="0" FontSize="22" FontFamily="Segoe UI Semibold" Foreground="Red" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <Label Content="{Binding CheckStringHint}" Grid.Row="1" FontSize="20" FontFamily="Segoe UI Semibold" VerticalContentAlignment="Center" HorizontalContentAlignment="Center"/>
        <TextBox Text="{Binding CheckString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="2" Margin="10,0,10,2" FontFamily="Segoe UI Semibold" FontSize="18" HorizontalContentAlignment="Center"/>
        <Button Grid.Row="3" Width="150" Content="確認刪除" FontFamily="Segoe UI Semibold" FontSize="18" Command="{Binding DeleteOrderCommand}"/>
    </Grid>
</Window>
