<Window
    x:Class="His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductPurchaseRecord.DeleteOrderWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductPurchaseRecord"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="刪除進退貨單"
    Width="300"
    Height="230"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="40" />
            <RowDefinition Height="40" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Label
            Grid.Row="0"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="進退貨單刪除後即無法復原"
            FontFamily="Segoe UI Semibold"
            FontSize="22"
            Foreground="Red" />
        <Label
            Grid.Row="1"
            HorizontalContentAlignment="Center"
            VerticalContentAlignment="Center"
            Content="{Binding CheckStringHint}"
            FontFamily="Segoe UI Semibold"
            FontSize="20" />
        <TextBox
            Grid.Row="2"
            Margin="10,0,10,2"
            HorizontalContentAlignment="Center"
            FontFamily="Segoe UI Semibold"
            FontSize="18"
            Text="{Binding CheckString, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            x:Name="btnDelete"
            Grid.Row="3"
            Width="150"
            Command="{Binding DeleteOrderCommand}"
            Content="確認刪除"
            FontFamily="Segoe UI Semibold"
            FontSize="18" />
    </Grid>
</Window>