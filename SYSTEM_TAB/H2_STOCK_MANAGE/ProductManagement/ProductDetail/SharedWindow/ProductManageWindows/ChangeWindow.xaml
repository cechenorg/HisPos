<Window
    x:Class="His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductManagement.ProductDetail.SharedWindow.ProductManageWindows.ChangeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductManagement.ProductDetail.SharedWindow.ProductManageWindows"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="單品盤點"
    Width="300"
    Height="300"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>

        <RadioButton
            x:Name="OUT"
            Grid.Row="0"
            Grid.Column="0"
            Margin="15,20,0,0"
            Checked="OUT_Checked"
            Content="轉讓"
            FontFamily="Segoe UI Semibold"
            FontSize="18"
            IsChecked="True"
            Tag="3" />
        <RadioButton
            x:Name="IN"
            Grid.Row="0"
            Grid.Column="1"
            Margin="10,20,0,0"
            Checked="IN_Checked_1"
            Content="受讓"
            FontFamily="Segoe UI Semibold"
            FontSize="18"
            Tag="4" />

        <Label
            Grid.Row="1"
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Right"
            Content="轉受讓數量"
            FontFamily="Segoe UI Semibold"
            FontSize="22"
            Foreground="Black" />
        <TextBox
            Grid.Row="1"
            Grid.Column="1"
            Width="120"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            FontFamily="Segoe UI Semibold"
            FontSize="20"
            Foreground="Black"
            Text="{Binding NewInventory, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Grid.Row="2"
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Right"
            Content="轉受讓單價"
            FontFamily="Segoe UI Semibold"
            FontSize="22"
            Foreground="Black" />
        <TextBox
            Grid.Row="2"
            Grid.Column="1"
            Width="120"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            FontFamily="Segoe UI Semibold"
            FontSize="20"
            Foreground="Black"
            IsEnabled="{Binding IsOverage, UpdateSourceTrigger=PropertyChanged}"
            Text="{Binding NewPrice, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Label
            Grid.Row="3"
            Grid.Column="0"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Right"
            Content="轉受讓批號"
            FontFamily="Segoe UI Semibold"
            FontSize="22"
            Foreground="Black" />
        <TextBox
            Grid.Row="3"
            Grid.Column="1"
            Width="120"
            VerticalAlignment="Center"
            HorizontalContentAlignment="Center"
            FontFamily="Segoe UI Semibold"
            FontSize="20"
            Foreground="Black"
            Text="{Binding Number, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
        <Button
            Grid.Row="4"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="150"
            Height="35"
            Background="ForestGreen"
            BorderThickness="0"
            Click="Confirm_OnClick"
            Command="{Binding MergeProductGroupCommand}"
            Content="完成"
            FontFamily="Segoe UI Semibold"
            FontSize="20" />
    </Grid>
</Window>