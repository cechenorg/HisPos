<Window x:Class="His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductManagement.ProductDetail.SharedWindow.ProductGroupSettingWindow.ProductGroupSettingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:productgroupsetting="clr-namespace:His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductManagement.ProductDetail.SharedWindow.ProductGroupSettingWindow.ProductGroupSettingUsercontrol"
        xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductManagement.ProductDetail.SharedWindow.ProductGroupSettingWindow"
        mc:Ignorable="d"
        Title="商品群組設定" Height="400" Width="450" >
    <Window.DataContext>
        <local:ProductGroupSettingWindowViewModel/>
    </Window.DataContext>
    <Window.Resources>
        <DataTemplate x:Key="MergeProduct" DataType="{x:Type UserControl}">
            <productgroupsetting:MergeProductUserControl/>
        </DataTemplate>
        <DataTemplate x:Key="SpiltProduct" DataType="{x:Type UserControl}">
            <productgroupsetting:SplitProductUserControl/>
        </DataTemplate>
    </Window.Resources>
    <Grid  Background="{StaticResource GridDarkestBackGround}">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal">
            <RadioButton Content="併庫" Tag="3" Margin="15,0,5,0" FontSize="18" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" VerticalContentAlignment="Center"/>
            <RadioButton Content="拆庫" Tag="4" Margin="10,0,5,0" FontSize="18" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" VerticalContentAlignment="Center"  />
        </StackPanel>
        <ContentControl Grid.Row="1" Content="{Binding}">
            <ContentControl.Style>
                <Style TargetType="{x:Type ContentControl}">
                    <Setter Property="ContentTemplate" Value="{StaticResource MergeProduct}" />
                    <Style.Triggers>
                        <DataTrigger Binding="{Binding IsSplit}" Value="true">
                            <Setter Property="ContentTemplate" Value="{StaticResource SpiltProduct}"/>
                        </DataTrigger>
                    </Style.Triggers>
                </Style>
            </ContentControl.Style>
        </ContentControl>
    </Grid>
</Window>
