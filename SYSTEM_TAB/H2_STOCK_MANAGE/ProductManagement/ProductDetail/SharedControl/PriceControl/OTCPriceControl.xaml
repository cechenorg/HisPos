<UserControl
    x:Class="His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductManagement.ProductDetail.SharedControl.PriceControl.OTCPriceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:medicineControl="clr-namespace:His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductManagement.ProductDetail.MedicineControl"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Background="{StaticResource Shadow}"
            Orientation="Horizontal">
            <Label
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="商品價格"
                FontFamily="Segoe UI Semibold"
                FontSize="25"
                Foreground="Black" />
            <Label
                Margin="30,0,0,0"
                VerticalAlignment="Center"
                Content="售價"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Black" />
            <TextBlock
                Width="80"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                Text="{Binding MedicineDetail.RetailPrice, Mode=TwoWay, StringFormat=N0, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="會員價"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Black" />
            <TextBlock
                Width="80"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                Text="{Binding MedicineDetail.MemberPrice, Mode=TwoWay, StringFormat=N0, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Background="{StaticResource Shadow}"
            Orientation="Horizontal">
            <Image
                Width="25"
                Margin="50,0,0,0"
                Source="../../../../../../Images/Settings.png">
                <Image.InputBindings>
                    <MouseBinding Command="{Binding DataContext.SetPricesCommand, RelativeSource={RelativeSource AncestorType=UserControl}}" MouseAction="LeftClick" />
                </Image.InputBindings>
            </Image>
            <Label
                Margin="55,0,0,0"
                VerticalAlignment="Center"
                Content="員工價"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Black" />
            <TextBlock
                Width="80"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                Text="{Binding MedicineDetail.EmployeePrice, Mode=TwoWay, StringFormat=N0, UpdateSourceTrigger=PropertyChanged}" />
            <Label
                Margin="11,0,0,0"
                VerticalAlignment="Center"
                Content="特殊價"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Black" />
            <TextBlock
                Width="80"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                Text="{Binding MedicineDetail.SpecialPrice, Mode=TwoWay, StringFormat=N0, UpdateSourceTrigger=PropertyChanged}" />
        </StackPanel>
        <StackPanel Grid.Row="3">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="50" />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <StackPanel
            Grid.Row="0"
            Background="{StaticResource Shadow}"
            Orientation="Horizontal">
                    <Label
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="杏德價"
                FontFamily="Segoe UI Semibold"
                FontSize="25"
                Foreground="Black" />
                    <Label
                Margin="30,0,0,0"
                VerticalAlignment="Center"
                Content="散裝價"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Black" />
                    <TextBlock
                Width="80"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                Text="{Binding MedicineDetail.SindePrice, StringFormat=N2}" />
                    <Label
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="包裝價"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Black" />
                    <TextBlock
                Width="90"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                Text="{Binding MedicineDetail.SingdePackagePrice, StringFormat=N2}" />
                </StackPanel>
                <StackPanel
            Grid.Row="1"
            Background="{StaticResource Shadow}"
            Orientation="Horizontal">
                    <Label
                Margin="113,0,0,0"
                VerticalAlignment="Center"
                Content="杏德庫存量"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Black" />
                    <TextBlock
                Width="80"
                Margin="8,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                Text="{Binding MedicineDetail.SindeStock}" />
                    <Label
                Margin="11,0,0,0"
                VerticalAlignment="Center"
                Content="包裝量"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Black" />
                    <TextBlock
                Width="80"
                Margin="8,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                Text="{Binding MedicineDetail.SingdePackageAmount}" />
                </StackPanel>
            </Grid>
        </StackPanel>
    </Grid>
    
</UserControl>