<UserControl
    x:Class="His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductManagement.ProductDetail.SharedControl.PriceControl.SingdePriceControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <StackPanel
            Grid.Row="0"
            Background="{StaticResource Shadow}"
            Orientation="Horizontal">
            <Label
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="杏德藥價"
                FontFamily="Segoe UI Semibold"
                FontSize="25"
                Foreground="Black" />
            <Label
                Margin="30,0,0,0"
                VerticalAlignment="Center"
                Content="散裝價"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Black" />
            <TextBlock
                Width="80"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                Text="{Binding MedicineDetail.SindePrice, StringFormat=N2}" />
            <Label
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                Content="包裝價"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Black" />
            <TextBlock
                Width="90"
                Margin="10,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                Text="{Binding MedicineDetail.SingdePackagePrice, StringFormat=N2}" />
        </StackPanel>
        <StackPanel
            Grid.Row="1"
            Background="{StaticResource Shadow}"
            Orientation="Horizontal">
            <Label
                Margin="151,0,0,0"
                VerticalAlignment="Center"
                Content="庫存量"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Black" />
            <TextBlock
                Width="80"
                Margin="8,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                Text="{Binding MedicineDetail.SindeStock}" />
            <Label
                Margin="11,0,0,0"
                VerticalAlignment="Center"
                Content="包裝量"
                FontFamily="Segoe UI Semibold"
                FontSize="20"
                Foreground="Black" />
            <TextBlock
                Width="80"
                Margin="8,0,0,0"
                VerticalAlignment="Center"
                FontFamily="Segoe UI Semi"
                FontSize="18"
                Foreground="{StaticResource ForeGround}"
                Text="{Binding MedicineDetail.SingdePackageAmount}" />
        </StackPanel>
    </Grid>
</UserControl>