<Window x:Class="His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductTypeManage.AddTypeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="新增類別" Height="250" Width="400" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition/>
            <RowDefinition Height="60"/>
        </Grid.RowDefinitions>
        <RadioButton Name="BigTypeRadioButton" Grid.Row="0" Grid.Column="0" Content="大類別" Foreground="{StaticResource ForeGround}" FontSize="30" FontFamily="Segoe UI Semibold" HorizontalAlignment="Center" VerticalContentAlignment="Center" Checked="RadioButton_Checked"/>
        <RadioButton Name="SmallTypeRadioButton" Grid.Row="0" Grid.Column="1" Content="小類別" Foreground="{StaticResource ForeGround}" FontSize="30" FontFamily="Segoe UI Semibold" HorizontalAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" Checked="RadioButton_Checked"/>
        <StackPanel Grid.Row="1" Grid.Column="0" VerticalAlignment="Center">
            <Label Name="SelectionHint" FontFamily="Segoe UI Semibold" FontSize="18" Margin="20,0,0,0" Foreground="DimGray"/>
            <ComboBox Name="BigTypeCombo" Width="150" Height="50" ItemsSource="{Binding TypeManageCollection, UpdateSourceTrigger=PropertyChanged}" DisplayMemberPath="Name" FontFamily="Segoe UI Semi" FontSize="25"
                          ItemContainerStyle="{StaticResource ComboItemContainerStyle}" SelectedItem="{Binding SelectedType, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </StackPanel>
        <TextBox Name="ChiName" Grid.Row="1" Grid.Column="1" Width="170" Height="35" materialDesign:HintAssist.Hint="中文名稱" FontFamily="Segoe UI Semi" FontSize="20"/>
        <Button Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Width="250" Height="45" Content="新增" FontFamily="Segoe UI Semibold" FontSize="25" Background="IndianRed" BorderThickness="0" Click="ConfrimClick"/>
    </Grid>
</Window>
