<Window
    x:Class="His_Pos.SYSTEM_TAB.H2_STOCK_MANAGE.ProductTypeManage.DeleteTypeWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="刪除類別"
    Width="400"
    Height="200"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d">
    <Grid
        Width="390"
        Height="150"
        HorizontalAlignment="Left"
        VerticalAlignment="Top">
        <Grid.RowDefinitions>
            <RowDefinition Height="45" />
            <RowDefinition Height="40" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <RadioButton
            Grid.Row="0"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            VerticalContentAlignment="Center"
            Content="大類別"
            FontFamily="Segoe UI Semibold"
            FontSize="30"
            Foreground="{StaticResource ForeGround}" />
        <RadioButton
            Name="SmallCategoryRadioButton"
            Grid.Row="0"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Bottom"
            VerticalContentAlignment="Center"
            Content="小類別"
            FontFamily="Segoe UI Semibold"
            FontSize="30"
            Foreground="{StaticResource ForeGround}"
            IsChecked="True" />
        <Label
            Grid.Row="1"
            Grid.Column="0"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="{Binding SelectedType.Name}"
            FontFamily="Segoe UI SemiBold"
            FontSize="20"
            Foreground="DimGray" />
        <Label
            Grid.Row="1"
            Grid.Column="1"
            HorizontalAlignment="Center"
            VerticalAlignment="Top"
            Content="{Binding SelectedType.CurrentDetailType.Name}"
            FontFamily="Segoe UI SemiBold"
            FontSize="20"
            Foreground="DimGray" />
        <Button
            Grid.Row="2"
            Grid.Column="0"
            Grid.ColumnSpan="2"
            Width="250"
            Height="50"
            VerticalAlignment="Bottom"
            Background="IndianRed"
            BorderThickness="0"
            Click="Confirm_OnClick"
            Content="確認刪除"
            FontFamily="Segoe UI Semibold"
            FontSize="25" />
    </Grid>
</Window>