<Window
    x:Class="His_Pos.SYSTEM_TAB.H1_DECLARE.PrescriptionDeclare.FunctionWindow.MedBagSelectionWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:His_Pos.Service"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Width="350"
    Height="230"
    ResizeMode="NoResize"
    WindowStartupLocation="CenterScreen"
    WindowStyle="None"
    mc:Ignorable="d">
    <Grid Name="MainGrid">
        <StackPanel VerticalAlignment="Top" Orientation="Vertical">
            <StackPanel
                Height="35"
                Background="CornflowerBlue"
                Orientation="Horizontal">
                <Label
                    Width="200"
                    VerticalContentAlignment="Center"
                    Content="請選擇藥袋列印模式"
                    FontFamily="Segoe UI Semibold"
                    FontSize="16"
                    Foreground="GhostWhite" />
                <Button
                    Name="Back"
                    Width="25"
                    Height="25"
                    Margin="120,0,0,0"
                    Padding="0"
                    Background="Transparent"
                    BorderBrush="Transparent"
                    Click="Back_Click">
                    <Image
                        Width="20"
                        Height="20"
                        Margin="0"
                        Source="/Images/closeButton.png" />
                </Button>
            </StackPanel>
            <StackPanel
                Height="180"
                VerticalAlignment="Center"
                Orientation="Vertical">
                <Button
                    Name="MultiMode"
                    Width="170"
                    Height="55"
                    Margin="10,20,10,10"
                    Background="WhiteSmoke"
                    BorderBrush="WhiteSmoke"
                    Click="MultiMode_Click"
                    KeyDown="MultiMode_KeyDown">
                    <StackPanel Orientation="Horizontal">
                        <Image Height="35" Source="/Images/medicine.png" />
                        <Label
                            Width="100"
                            Height="40"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Segoe UI Semibold"
                            FontSize="18"
                            Foreground="DimGray">
                            多藥一袋
                        </Label>
                    </StackPanel>
                </Button>
                <Button
                    Name="SingleMode"
                    Width="170"
                    Height="55"
                    Margin="10,20,10,10"
                    Background="WhiteSmoke"
                    BorderBrush="WhiteSmoke"
                    Click="SingleMode_Click"
                    KeyDown="SingleMode_KeyDown">
                    <StackPanel Orientation="Horizontal">
                        <Image Height="35" Source="/Images/capsule.png" />
                        <Label
                            Width="100"
                            Height="40"
                            VerticalAlignment="Center"
                            HorizontalContentAlignment="Center"
                            VerticalContentAlignment="Center"
                            FontFamily="Segoe UI Semibold"
                            FontSize="18"
                            Foreground="DimGray">
                            一藥一袋
                        </Label>
                    </StackPanel>
                </Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>