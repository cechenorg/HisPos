<Window x:Class="His_Pos.SYSTEM_TAB.H1_DECLARE.PrescriptionDeclare.FunctionWindow.CustomerPrescriptionWindow.CustomerPrescriptionWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:service="clr-namespace:His_Pos.Service"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.H1_DECLARE.PrescriptionDeclare.FunctionWindow.CustomerPrescriptionWindow"
        xmlns:newClass="clr-namespace:His_Pos.NewClass"
        mc:Ignorable="d" Height="630" Width="1000" WindowStartupLocation="CenterScreen"
        FontFamily="Segoe UI Semibold" Title="{Binding WindowTitle,UpdateSourceTrigger=PropertyChanged}">
    <Window.Background>
        <ImageBrush ImageSource="/Images/tabViewBackground.jpg"/>
    </Window.Background>
    <Window.Resources>
        <service:NullableDateConverter x:Key="NullableDateConverter" />
        <service:DateConverter x:Key="DateConverter" />
        <service:EnumBooleanConverter x:Key="EnumBooleanConverter" />
        <DataTemplate DataType="{x:Type local:CustomerPrescriptionViewModel}" x:Key="CooperativeGrid">
            <DataGrid HeadersVisibility="None" HorizontalScrollBarVisibility="Hidden" Margin="0,0,10,10"  Background="{StaticResource GridBackGround}" ItemsSource="{Binding CooperativePres,UpdateSourceTrigger=PropertyChanged}"
                           AutoGenerateColumns="False" VerticalScrollBarVisibility="Hidden" CanUserAddRows="False" ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" SelectedItem="{Binding SelectedPrescription,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding PrescriptionSelected}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="DataGridRow.IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource GridSelected}"/>
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource ForeGround}"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,5,0,5">
                                        <Label Content="{Binding Institution.Name}" Width="245" FontSize="19" HorizontalContentAlignment="Left" VerticalAlignment="Center" />
                                        <Label Content="{Binding Division.Name}" FontSize="19" HorizontalContentAlignment="Left" VerticalAlignment="Center" Width="81"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,5">
                                        <Label Content="就醫" FontSize="18" HorizontalContentAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                                        <Label Content="{Binding TreatDate,Converter={StaticResource DateConverter}}" FontSize="18" VerticalAlignment="Center" Width="123" FontFamily="Segoe UI"/>
                                        <Label Content="{Binding DoctorName}" FontSize="18" VerticalAlignment="Center" Width="130" FontFamily="Segoe UI"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:CustomerPrescriptionViewModel}" x:Key="RegisterGrid">
            <DataGrid HeadersVisibility="None" HorizontalScrollBarVisibility="Hidden" Margin="0,0,10,10"  Background="{StaticResource GridBackGround}" ItemsSource="{Binding ChronicRegisterPres,UpdateSourceTrigger=PropertyChanged}"
                           AutoGenerateColumns="False" VerticalScrollBarVisibility="Hidden" CanUserAddRows="False" ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" SelectedItem="{Binding SelectedPrescription,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding PrescriptionSelected}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <DataGrid.Resources>
                    <newClass:BindingProxy x:Key="proxy" Data="{Binding}" />
                </DataGrid.Resources>
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="DataGridRow.IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource GridSelected}"/>
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource ForeGround}"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <DataTemplate.Resources>
                                    <Style  x:Key="MyLabelStyle" TargetType="Label">
                                        <Setter Property="Template">
                                            <Setter.Value>
                                                <ControlTemplate TargetType="{x:Type Label}">
                                                    <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                                             BorderThickness="{TemplateBinding BorderThickness}" 
                                                             Background="{TemplateBinding Background}" 
                                                             Padding="{TemplateBinding Padding}" 
                                                             SnapsToDevicePixels="true" 
                                                             CornerRadius="3">
                                                        <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                    </Border>
                                                    <ControlTemplate.Triggers>
                                                        <Trigger Property="IsEnabled" Value="false">
                                                            <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                                        </Trigger>
                                                    </ControlTemplate.Triggers>
                                                </ControlTemplate>
                                            </Setter.Value>
                                        </Setter>
                                    </Style>
                                    <DataTemplate x:Key="LabelWaitingConfirm" DataType="{x:Type local:CustomerPrescriptionWindow}">
                                        <Label Content="等待確認" Style="{StaticResource MyLabelStyle}" BorderThickness="2" BorderBrush="OrangeRed" Foreground="OrangeRed" Width="80" FontSize="16" FontFamily="Segoe UI Semibold" VerticalContentAlignment="Center"/>
                                    </DataTemplate>
                                    <DataTemplate x:Key="LabelWaiting" DataType="{x:Type local:CustomerPrescriptionWindow}">
                                        <Label Content="等待收貨" Style="{StaticResource MyLabelStyle}" BorderThickness="2" BorderBrush="RoyalBlue" Foreground="RoyalBlue" Width="80" FontSize="16" FontFamily="Segoe UI Semibold" VerticalContentAlignment="Center"/>
                                    </DataTemplate>
                                    <DataTemplate x:Key="LabelNotSend" DataType="{x:Type local:CustomerPrescriptionWindow}">
                                        <Label Content="無訂單" Style="{StaticResource MyLabelStyle}" BorderThickness="2" BorderBrush="Red" Foreground="Red" Width="62" FontSize="16" FontFamily="Segoe UI Semibold" VerticalContentAlignment="Center"/>
                                    </DataTemplate>
                                    <DataTemplate x:Key="LabelReceived" DataType="{x:Type local:CustomerPrescriptionWindow}">
                                        <Label Content="已收貨" Style="{StaticResource MyLabelStyle}" BorderThickness="2" BorderBrush="Green" Foreground="Green" Width="62" FontSize="16" FontFamily="Segoe UI Semibold" VerticalContentAlignment="Center"/>
                                    </DataTemplate>
                                    <DataTemplate x:Key="LabelObsolete" DataType="{x:Type local:CustomerPrescriptionWindow}">
                                        <Label Content="訂單作廢" Style="{StaticResource MyLabelStyle}" BorderThickness="2" BorderBrush="DimGray" Foreground="DimGray" Width="80" FontSize="16" FontFamily="Segoe UI Semibold" VerticalContentAlignment="Center"/>
                                    </DataTemplate>
                                </DataTemplate.Resources>
                                <Grid>
                                    <Grid.ContextMenu>
                                        <ContextMenu TextBlock.TextAlignment="Left" DataContext="{Binding PlacementTarget.DataContext, RelativeSource={RelativeSource Self}}">
                                            <MenuItem Header="刪除" Command="{Binding Source={StaticResource proxy}, Path=Data.DeleteRegisterPrescription}" />
                                        </ContextMenu>
                                    </Grid.ContextMenu>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                                        <ContentControl Content="{Binding}" Margin="10,2,0,0">
                                            <ContentControl.Style>
                                                <Style TargetType="{x:Type ContentControl}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsSend, UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type DataGridCell}}}" Value="訂單作廢">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource LabelObsolete}" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding DataContext.IsSend, UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type DataGridCell}}}" Value="無訂單">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource LabelNotSend}" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding DataContext.IsSend, UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type DataGridCell}}}" Value="等待確認">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource LabelWaitingConfirm}" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding DataContext.IsSend, UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type DataGridCell}}}" Value="等待收貨">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource LabelWaiting}" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding DataContext.IsSend, UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type DataGridCell}}}" Value="已收貨">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource LabelReceived}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ContentControl.Style>
                                        </ContentControl>
                                        <Label Content="單號:" FontSize="16" HorizontalContentAlignment="Left" VerticalAlignment="Center"/>
                                        <Label Content="{Binding OrderID}" FontSize="16" HorizontalContentAlignment="Left" VerticalAlignment="Center"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,5,0,5">
                                        <Label Content="{Binding Institution.Name}" Width="245" FontSize="19" HorizontalContentAlignment="Left" VerticalAlignment="Center" />
                                        <Label Content="{Binding Division.Name}" FontSize="19" HorizontalContentAlignment="Left" VerticalAlignment="Center" Width="81"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,5" >
                                        <Label Content="就醫:" FontSize="18" HorizontalContentAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                                        <Label Content="{Binding TreatDate,Converter={StaticResource DateConverter}}" FontSize="18" VerticalAlignment="Center" Width="100" FontFamily="Segoe UI"/>
                                        <Label Content="調劑:" FontSize="18" HorizontalContentAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI"/>
                                        <Label Content="{Binding AdjustDate,Converter={StaticResource DateConverter}}" FontSize="18" VerticalAlignment="Center" Width="100" FontFamily="Segoe UI"/>
                                        <Label Content="{Binding ChronicTotal}" FontSize="18" VerticalAlignment="Center" Padding="0" FontFamily="Segoe UI"/>
                                        <Label Content="-" FontSize="18" HorizontalContentAlignment="Left" VerticalAlignment="Center" Padding="0" FontFamily="Segoe UI"/>
                                        <Label Content="{Binding ChronicSeq}" FontSize="18" VerticalAlignment="Center" Padding="0" FontFamily="Segoe UI"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DataTemplate>
        <DataTemplate DataType="{x:Type local:CustomerPrescriptionViewModel}" x:Key="ReserveGrid">
            <DataGrid HeadersVisibility="None" HorizontalScrollBarVisibility="Hidden" Margin="0,0,10,10"  Background="{StaticResource GridBackGround}" ItemsSource="{Binding ChronicReservePres,UpdateSourceTrigger=PropertyChanged}"
                           AutoGenerateColumns="False" VerticalScrollBarVisibility="Hidden" CanUserAddRows="False" ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" SelectedItem="{Binding SelectedPrescription,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                <i:Interaction.Triggers>
                    <i:EventTrigger EventName="MouseDoubleClick">
                        <i:InvokeCommandAction Command="{Binding PrescriptionSelected}"/>
                    </i:EventTrigger>
                </i:Interaction.Triggers>
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="DataGridRow.IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource GridSelected}"/>
                            </Trigger>
                        </Style.Triggers>
                        <Setter Property="Background" Value="Transparent"/>
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn>
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="{StaticResource ForeGround}"/>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                 <DataTemplate.Resources>
                                     <Style  x:Key="MyLabelStyle" TargetType="Label">
                                         <Setter Property="Template">
                                             <Setter.Value>
                                                 <ControlTemplate TargetType="{x:Type Label}">
                                                     <Border BorderBrush="{TemplateBinding BorderBrush}" 
                                                             BorderThickness="{TemplateBinding BorderThickness}" 
                                                             Background="{TemplateBinding Background}" 
                                                             Padding="{TemplateBinding Padding}" 
                                                             SnapsToDevicePixels="true" 
                                                             CornerRadius="3">
                                                         <ContentPresenter HorizontalAlignment="{TemplateBinding HorizontalContentAlignment}" RecognizesAccessKey="True" SnapsToDevicePixels="{TemplateBinding SnapsToDevicePixels}" VerticalAlignment="{TemplateBinding VerticalContentAlignment}"/>
                                                     </Border>
                                                     <ControlTemplate.Triggers>
                                                         <Trigger Property="IsEnabled" Value="false">
                                                             <Setter Property="Foreground" Value="{DynamicResource {x:Static SystemColors.GrayTextBrushKey}}"/>
                                                         </Trigger>
                                                     </ControlTemplate.Triggers>
                                                 </ControlTemplate>
                                             </Setter.Value>
                                         </Setter>
                                     </Style>
                                    <DataTemplate x:Key="LabelNotSend" DataType="{x:Type local:CustomerPrescriptionWindow}">
                                        <Label Content="未處理" Style="{StaticResource MyLabelStyle}" BorderThickness="2" BorderBrush="Red" Foreground="Red" Width="62" FontSize="16" FontFamily="Segoe UI Semibold"/>
                                    </DataTemplate>
                                    <DataTemplate x:Key="LabelIsSend" DataType="{x:Type local:CustomerPrescriptionWindow}">
                                        <Label Content="已備藥" Style="{StaticResource MyLabelStyle}" BorderThickness="2" BorderBrush="Green" Foreground="Green" Width="62" FontSize="16" FontFamily="Segoe UI Semibold"/>
                                    </DataTemplate>
                                    <DataTemplate x:Key="LabelNotPrepare" DataType="{x:Type local:CustomerPrescriptionWindow}">
                                        <Label Content="不備藥" Style="{StaticResource MyLabelStyle}" BorderThickness="2" BorderBrush="DimGray" Foreground="DimGray" Width="62" FontSize="16" FontFamily="Segoe UI Semibold"/>
                                     </DataTemplate>
                                </DataTemplate.Resources>
                                 <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition />
                                        <RowDefinition />
                                        <RowDefinition />
                                    </Grid.RowDefinitions>
                                    <StackPanel Orientation="Horizontal" Grid.Row="0">
                                        <ContentControl Content="{Binding}" Margin="10,2,0,0">
                                            <ContentControl.Style>
                                                <Style TargetType="{x:Type ContentControl}">
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding DataContext.IsSend, UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type DataGridCell}}}" Value="未處理">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource LabelNotSend}" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding DataContext.IsSend, UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type DataGridCell}}}" Value="已備藥">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource LabelIsSend}" />
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding DataContext.IsSend, UpdateSourceTrigger=PropertyChanged,RelativeSource={RelativeSource AncestorType={x:Type DataGridCell}}}" Value="不備藥">
                                                            <Setter Property="ContentTemplate" Value="{StaticResource LabelNotPrepare}" />
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </ContentControl.Style>
                                        </ContentControl>
                                        <Label Content="{Binding OrderID}" FontSize="16" HorizontalContentAlignment="Left" VerticalAlignment="Center"/>
                                    </StackPanel>
                                     <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="0,0,0,5">
                                        <Label Content="{Binding Institution.Name}" Width="245" FontSize="18" HorizontalContentAlignment="Left" VerticalAlignment="Center" />
                                        <Label Content="{Binding Division.Name}" FontSize="18" HorizontalContentAlignment="Left" VerticalAlignment="Center" Width="81"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="0,0,0,5">
                                        <Label Content="就醫" FontSize="18" HorizontalContentAlignment="Center" VerticalAlignment="Center" Width="45" FontFamily="Segoe UI"/>
                                        <Label Content="{Binding TreatDate,Converter={StaticResource DateConverter}}" FontSize="18" VerticalAlignment="Center" Width="100" FontFamily="Segoe UI"/>
                                        <Label Content="調劑" FontSize="18" HorizontalContentAlignment="Center" VerticalAlignment="Center" Width="45" FontFamily="Segoe UI"/>
                                        <Label Content="{Binding AdjustDate,Converter={StaticResource DateConverter}}" FontSize="18" VerticalAlignment="Center" Width="100" FontFamily="Segoe UI"/>
                                        <Label Content="{Binding ChronicTotal}" FontSize="18" VerticalAlignment="Center" Padding="0" FontFamily="Segoe UI"/>
                                        <Label Content="-" FontSize="18" HorizontalContentAlignment="Left" VerticalAlignment="Center" Padding="0" FontFamily="Segoe UI"/>
                                        <Label Content="{Binding ChronicSeq}" FontSize="18" VerticalAlignment="Center" Padding="0" FontFamily="Segoe UI"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </DataTemplate>
    </Window.Resources>
    <Viewbox Stretch="Fill">
        <xctk:BusyIndicator IsBusy="{Binding IsBusy, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}" BusyContent="{Binding BusyContent, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}">
            <Grid Height="630" Width="1000">
                <Grid.RowDefinitions>
                    <RowDefinition Height="55"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350"/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="*"/>
                    </Grid.ColumnDefinitions>
                    <RadioButton Grid.Column="0" Content="{Binding CooperativeContent,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" FontSize="20"  VerticalContentAlignment="Center" 
                                 Margin="10,0,0,0" GroupName="Group1" IsChecked="{Binding Path=SelectedRadioButton, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Option1}" 
                                 Background="#4878CD" Foreground="#FF424040" IsEnabled="{Binding CooperativeRadioBtnEnable}"/>
                    <RadioButton Grid.Column="1" Content="{Binding RegisterContent,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" FontSize="20"  VerticalContentAlignment="Center" 
                                 Margin="10,0,0,0" GroupName="Group1" IsChecked="{Binding Path=SelectedRadioButton, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Option2}" 
                                 Background="#4878CD" Foreground="#FF424040" IsEnabled="{Binding RegisterRadioBtnEnable}"/>
                    <RadioButton Grid.Column="2" Content="{Binding ReserveContent,UpdateSourceTrigger=PropertyChanged}" VerticalAlignment="Center" FontSize="20"  VerticalContentAlignment="Center" 
                                 Margin="10,0,0,0" GroupName="Group1" IsChecked="{Binding Path=SelectedRadioButton, Mode=TwoWay, Converter={StaticResource EnumBooleanConverter}, ConverterParameter=Option3}" 
                                 Background="#4878CD" Foreground="#FF424040" IsEnabled="{Binding ReserveRadioBtnEnable}"/>
                </Grid>
                <ContentControl Name="PrescriptionGrid" Grid.Row="1" Grid.Column="0" Content="{Binding}" Margin="10,0,0,0">
                    <ContentControl.Style>
                        <Style TargetType="{x:Type ContentControl}">
                            <Setter Property="ContentTemplate" Value="{StaticResource CooperativeGrid}" />
                            <Style.Triggers>
                                <DataTrigger Binding="{Binding SelectedType, UpdateSourceTrigger=PropertyChanged}" Value="Cooperative">
                                    <Setter Property="ContentTemplate" Value="{StaticResource CooperativeGrid}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedType, UpdateSourceTrigger=PropertyChanged}" Value="Register">
                                    <Setter Property="ContentTemplate" Value="{StaticResource RegisterGrid}" />
                                </DataTrigger>
                                <DataTrigger Binding="{Binding SelectedType, UpdateSourceTrigger=PropertyChanged}" Value="Reserve">
                                    <Setter Property="ContentTemplate" Value="{StaticResource ReserveGrid}" />
                                </DataTrigger>
                            </Style.Triggers>
                        </Style>
                    </ContentControl.Style>
                </ContentControl>
                <DockPanel Grid.Row="1" Grid.Column="1">
                    <StackPanel Orientation="Vertical" Margin="0,0,10,10" DockPanel.Dock="Top" Visibility="{Binding NoCardGridVisible,UpdateSourceTrigger=PropertyChanged,Converter={StaticResource BooleanToVisibilityConverter}}">
                        <StackPanel Orientation="Horizontal" Height="35" Margin="0,0,0,10" >
                            <Label Content="未過卡處方" Style="{StaticResource BoldLabelContent18}" />
                            <Button Content="補卡" Background="IndianRed" BorderThickness="0"  Margin="475,0,0,0" VerticalAlignment="Center" Command="{Binding MakeUp}"/>
                        </StackPanel>
                        <DataGrid AutoGenerateColumns="False" CanUserAddRows="False" CanUserSortColumns="False" EnableRowVirtualization="False" CanUserResizeColumns="False" CanUserResizeRows="False"
                                  GridLinesVisibility="Horizontal" ItemsSource="{Binding NoCardPres,UpdateSourceTrigger=PropertyChanged}" SelectedItem="{Binding MakeUpPrescription,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}">
                            <DataGrid.Resources>
                                <Style TargetType="{x:Type ScrollBar}">
                                    <Setter Property="SnapsToDevicePixels" Value="True" />
                                    <Setter Property="OverridesDefaultStyle" Value="true" />
                                    <Setter Property="Width" Value="100" />
                                    <Style.Triggers>
                                        <Trigger Property="Orientation" Value="Horizontal">
                                            <Setter Property="Width" Value="Auto" />
                                            <Setter Property="Height" Value="15" />
                                            <Setter Property="Template" Value="{StaticResource HorizontalScrollBar}" />
                                        </Trigger>
                                        <Trigger Property="Orientation" Value="Vertical">
                                            <Setter Property="Width" Value="15" />
                                            <Setter Property="Height" Value="Auto" />
                                            <Setter Property="Template" Value="{StaticResource VerticalScrollBar}" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.Resources>
                            <DataGrid.Background>
                                <StaticResource ResourceKey="GridBackGround"/>
                            </DataGrid.Background>
                            <DataGrid.CellStyle>
                                <StaticResource ResourceKey="DataGridCellStyle"/>
                            </DataGrid.CellStyle>
                            <DataGrid.ColumnHeaderStyle>
                                <StaticResource ResourceKey="DataGridColumnHeaderStyle"/>
                            </DataGrid.ColumnHeaderStyle>
                            <DataGrid.RowStyle>
                                <Style TargetType="{x:Type DataGridRow}">
                                    <Setter Property="Background" Value="Transparent" />
                                    <Setter Property="BorderBrush" Value="Transparent" />
                                    <Setter Property="FontSize" Value="16" />
                                    <Setter Property="Height" Value="40" />
                                    <Style.Triggers>
                                        <Trigger Property="IsSelected" Value="True">
                                            <Setter Property="Background" Value="{StaticResource GridSelected}" />
                                        </Trigger>
                                    </Style.Triggers>
                                </Style>
                            </DataGrid.RowStyle>
                            <DataGrid.Columns>
                                <DataGridTextColumn Header="院所" Width="300" FontSize="14" FontWeight="Bold" IsReadOnly="True" Binding="{Binding Institution.Name, UpdateSourceTrigger=PropertyChanged}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="科別" Width="80" FontSize="14" FontWeight="Bold" IsReadOnly="True" Binding="{Binding Division.Name, UpdateSourceTrigger=PropertyChanged}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="就醫日" Width="100" FontSize="14" FontWeight="Bold" IsReadOnly="True" Binding="{Binding TreatDate, UpdateSourceTrigger=PropertyChanged,Converter={StaticResource NullableDateConverter}}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                                <DataGridTextColumn Header="調劑日" Width="100" FontSize="14" FontWeight="Bold" IsReadOnly="True" Binding="{Binding AdjustDate, UpdateSourceTrigger=PropertyChanged,Converter={StaticResource NullableDateConverter}}">
                                    <DataGridTextColumn.ElementStyle>
                                        <Style TargetType="{x:Type TextBlock}">
                                            <Setter Property="HorizontalAlignment" Value="Center" />
                                            <Setter Property="VerticalAlignment" Value="Center" />
                                        </Style>
                                    </DataGridTextColumn.ElementStyle>
                                </DataGridTextColumn>
                            </DataGrid.Columns>
                        </DataGrid>
                    </StackPanel>
                    <DataGrid DockPanel.Dock="Top" AutoGenerateColumns="False" Background="{StaticResource GridBackGround}" CanUserAddRows="False" CellStyle="{StaticResource DataGridCellStyle}" Margin="0,0,10,10" DataContext="{Binding SelectedPrescription,UpdateSourceTrigger=PropertyChanged}"
                          ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" GridLinesVisibility="Horizontal" ItemsSource="{Binding Medicines,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" >
                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Style.Triggers>
                                    <Trigger Property="DataGridRow.IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource GridDarkerBackGround}" />
                                    </Trigger>
                                </Style.Triggers>
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="FontSize" Value="16" />
                                <Setter Property="Height" Value="40" />
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTextColumn Width="100"
                                     Binding="{Binding ID,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" FontSize="15" FontWeight="Bold" Header="藥品編號" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="350" Binding="{Binding FullName,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" FontSize="15" FontWeight="Bold"  Header="藥品名稱" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment" Value="Left" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="60" Binding="{Binding Dosage,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}" FontSize="15" FontWeight="Bold"  Header="用量" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="60" Binding="{Binding Usage,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"
                                                FontSize="15" FontWeight="Bold"  Header="用法" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Width="60" Binding="{Binding Amount,Mode=OneWay,UpdateSourceTrigger=PropertyChanged}"
                                                FontSize="15" FontWeight="Bold"  Header="總量" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment" Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </DockPanel>
            </Grid>
        </xctk:BusyIndicator>
    </Viewbox>
</Window>
