<Window x:Class="His_Pos.SYSTEM_TAB.H1_DECLARE.PrescriptionDec2.ErrorMssageWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="處方資料錯誤" Width="450" Height="350" WindowStyle="None" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label VerticalAlignment="Top" HorizontalAlignment="Left" Content="處方資料錯誤 : " FontSize="18" FontFamily="Segoe UI Semibold" Margin="5,0,0,0"/>
        <StackPanel Orientation="Vertical" VerticalAlignment="Center">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="270">
                <Image Name="Icon"  Height="50" Width="50" Margin="30,0,20,0" Source="C:\HisPos\Images\Error.png"/>
                <ScrollViewer Margin="30,30,0,10" Width="300" VerticalScrollBarVisibility="Auto">
                    <Label VerticalAlignment="Center" Name="Message" FontSize="16" FontFamily="Segoe UI Semibold"/>
                </ScrollViewer>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Margin="10" Content="修改" Background="RoyalBlue" Click="ButtonBase_OnClick" Height="30" Width="200"/>
                <Button Margin="10" Content="異常登錄" Background="IndianRed" Click="ErrorLogInClick" Width="200"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
