<UserControl x:Class="His_Pos.SYSTEM_TAB.H5_ATTEND.WorkScheduleManage.DayRemark"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             mc:Ignorable="d">
    <Grid Background="LightGray">
        <Grid.RowDefinitions>
            <RowDefinition Height="45"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <TextBlock Name="Remark" Margin="5,2,5,0" Grid.Row="0" TextWrapping="Wrap" Foreground="{StaticResource ForeGround}" FontSize="16" FontFamily="Segoe UI Semibold"/>
        <TextBlock Name="LeaveRecord" Margin="5,5,5,2" Grid.Row="1" TextWrapping="Wrap" Foreground="{StaticResource ForeGround}" FontSize="12" FontFamily="Segoe UI Semi"/>
    </Grid>
</UserControl>
