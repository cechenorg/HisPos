<Window x:Class="His_Pos.SYSTEM_TAB.H4_BASIC_MANAGE.EmployeeManage.ChangePasswordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" WindowStartupLocation="CenterScreen" ResizeMode="NoResize"
        Title="更改密碼" Height="240" Width="350">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition Height="50"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="130"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label Content="舊密碼" Grid.Row="0" Grid.Column="0" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="Black" FontSize="20" FontFamily="Segoe UI Semibold"/>
        <PasswordBox Name="OldPassword" Grid.Row="0" Grid.Column="1" Margin="5" FontSize="25" FontFamily="Segoe UI Semibold" PreviewKeyDown="Password_OnPreviewKeyDown"/>
        <Label Content="新密碼" Grid.Row="1" Grid.Column="0" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="Black" FontSize="20" FontFamily="Segoe UI Semibold"/>
        <PasswordBox Name="NewPassword" Grid.Row="1" Grid.Column="1" Margin="5" FontSize="25" FontFamily="Segoe UI Semibold" PreviewKeyDown="Password_OnPreviewKeyDown"/>
        <Label Content="確認新密碼" Grid.Row="2" Grid.Column="0" VerticalAlignment="Center" HorizontalContentAlignment="Center" Foreground="Black" FontSize="20" FontFamily="Segoe UI Semibold"/>
        <PasswordBox Name="ConfirmNewPassword" Grid.Row="2" Grid.Column="1" Margin="5" FontSize="25" FontFamily="Segoe UI Semibold" PreviewKeyDown="Password_OnPreviewKeyDown"/>
        <Button Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" Width="120" Content="確認" FontFamily="Segoe UI Semibold" FontSize="16" Background="IndianRed" BorderThickness="0" Click="ConfirmChangePassword_OnClick"/>
    </Grid>
</Window>
