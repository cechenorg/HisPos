                                    </i:EventTrigger>
                                </i:Interaction.Triggers>
                            </xctk:MaskedTextBox>
                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2" Margin="8">
                            <Label  Content="職位" FontFamily="Segoe UI Semibold" FontSize="20" VerticalAlignment="Center"/>
