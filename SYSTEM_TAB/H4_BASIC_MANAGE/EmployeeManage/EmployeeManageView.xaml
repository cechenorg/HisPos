<UserControl
    x:Class="His_Pos.SYSTEM_TAB.H4_BASIC_MANAGE.EmployeeManage.EmployeeManageView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:employeeManageControl="clr-namespace:His_Pos.SYSTEM_TAB.H4_BASIC_MANAGE.EmployeeManage.EmployeeManageControl"
    xmlns:gif="http://wpfanimatedgif.codeplex.com"
    xmlns:hisPos="clr-namespace:His_Pos"
    xmlns:i="clr-namespace:System.Windows.Interactivity;assembly=System.Windows.Interactivity"
    xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.H4_BASIC_MANAGE.EmployeeManage"
    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:service="clr-namespace:His_Pos.Service"
    xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
    d:DesignHeight="839"
    d:DesignWidth="1365"
    Loaded="UserControl_Loaded"
    mc:Ignorable="d">
    <UserControl.Resources>
        <DataTemplate x:Key="AllEditableControl" DataType="UserControl">
            <employeeManageControl:AllEditableControl />
        </DataTemplate>
        <DataTemplate x:Key="NoControl" DataType="UserControl">
            <employeeManageControl:NoControl />
        </DataTemplate>
        <DataTemplate x:Key="NoEditControl" DataType="UserControl">
            <employeeManageControl:NoEditControl />
        </DataTemplate>
        <DataTemplate x:Key="SelfEditControl" DataType="UserControl">
            <employeeManageControl:SelfEditControl />
        </DataTemplate>
        <DataTemplate x:Key="NoData" DataType="UserControl">
            <Grid Background="{StaticResource GridDarkerBackGround}">
                <Label
                    HorizontalAlignment="Center"
                    Content="無員工資料"
                    Foreground="{StaticResource ForeGround}"
                    Style="{StaticResource BoldLabelHeader30}" />
            </Grid>
        </DataTemplate>
    </UserControl.Resources>
    <Viewbox Stretch="Fill">
        <Grid Width="1365" Height="839">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="180" />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid
                Grid.Column="0"
                Margin="10,10,0,10"
                Background="{StaticResource GridBackGround}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="40" />
                    <RowDefinition />
                    <RowDefinition Height="50" />
                </Grid.RowDefinitions>
                <StackPanel
                    Grid.Row="0"
                    HorizontalAlignment="Center"
                    Orientation="Horizontal">
                    <RadioButton
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="本店"
                        FontFamily="Segoe UI Semibold"
                        FontSize="20"
                        IsChecked="{Binding LocalCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                    <RadioButton
                        Margin="10,0,0,0"
                        VerticalAlignment="Center"
                        VerticalContentAlignment="Center"
                        Content="全部"
                        FontFamily="Segoe UI Semibold"
                        FontSize="20"
                        IsChecked="{Binding GlobalCheck, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
                <DataGrid
                    x:Name="Main"
                    Grid.Row="1"
                    AutoGenerateColumns="False"
                    Background="Transparent"
                    CanUserAddRows="False"
                    CellStyle="{StaticResource DataGridCellStyle}"
                    ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                    HeadersVisibility="None"
                    HorizontalScrollBarVisibility="Hidden"
                    IsSynchronizedWithCurrentItem="True"
                    ItemsSource="{Binding EmployeeCollectionView, Mode=OneWay, UpdateSourceTrigger=PropertyChanged}"
                    SelectedItem="{Binding Employee, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                    VerticalScrollBarVisibility="Hidden">
                    <DataGrid.RowStyle>
                        <Style TargetType="{x:Type DataGridRow}">
                            <Style.Triggers>
                                <Trigger Property="DataGridRow.IsSelected" Value="True">
                                    <Setter Property="Background" Value="{StaticResource GridSelected}" />
                                </Trigger>
                            </Style.Triggers>
                            <Setter Property="Background" Value="Transparent" />
                            <Setter Property="BorderBrush" Value="Transparent" />
                            <Setter Property="FontSize" Value="25" />
                            <Setter Property="Height" Value="50" />
                        </Style>
                    </DataGrid.RowStyle>
                    <DataGrid.Columns>
                        <DataGridTextColumn
                            Width="160"
                            Binding="{Binding Name, UpdateSourceTrigger=PropertyChanged}"
                            FontFamily="Segoe UI Semibold"
                            IsReadOnly="True">
                            <DataGridTextColumn.ElementStyle>
                                <Style TargetType="{x:Type TextBlock}">
                                    <Setter Property="HorizontalAlignment" Value="Center" />
                                    <Setter Property="VerticalAlignment" Value="Center" />
                                </Style>
                            </DataGridTextColumn.ElementStyle>
                        </DataGridTextColumn>
                    </DataGrid.Columns>
                    <i:Interaction.Triggers>
                        <i:EventTrigger EventName="SelectionChanged">
                            <i:InvokeCommandAction Command="{Binding SelectionChangedCommand}" />
                        </i:EventTrigger>
                    </i:Interaction.Triggers>
                </DataGrid>
                <StackPanel
                    Grid.Row="2"
                    Background="{StaticResource GridBackGround}"
                    Orientation="Horizontal">
                    <Image
                        Width="35"
                        Margin="10,0,0,0"
                        Source="/Images/Plus.png">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding NewEmployeeCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Image>
                    <Rectangle Width="85" />
                    <!--<Image Source="/Images/Delete.png" IsEnabled="{Binding IsEnable,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"  Width="30" Name="ButtonDelete">
                        <i:Interaction.Triggers>
                            <i:EventTrigger EventName="MouseLeftButtonDown">
                                <i:InvokeCommandAction Command="{Binding DeleteCommand}" />
                            </i:EventTrigger>
                        </i:Interaction.Triggers>
                    </Image>-->
                </StackPanel>
            </Grid>
            <ContentControl
                Grid.Column="1"
                Margin="0,10,10,10"
                Content="{Binding}">
                <ContentControl.Style>
                    <Style TargetType="{x:Type ContentControl}">
                        <Setter Property="ContentTemplate" Value="{StaticResource NoEditControl}" />
                        <Style.Triggers>
                            <DataTrigger Binding="{Binding ControlType, UpdateSourceTrigger=PropertyChanged}" Value="NoEditControl">
                                <Setter Property="ContentTemplate" Value="{StaticResource NoEditControl}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ControlType, UpdateSourceTrigger=PropertyChanged}" Value="SelfEditControl">
                                <Setter Property="ContentTemplate" Value="{StaticResource SelfEditControl}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ControlType, UpdateSourceTrigger=PropertyChanged}" Value="AllEditableControl">
                                <Setter Property="ContentTemplate" Value="{StaticResource AllEditableControl}" />
                            </DataTrigger>
                            <DataTrigger Binding="{Binding ControlType, UpdateSourceTrigger=PropertyChanged}" Value="NoControl">
                                <Setter Property="ContentTemplate" Value="{StaticResource NoControl}" />
                            </DataTrigger>
                        </Style.Triggers>
                    </Style>
                </ContentControl.Style>
            </ContentControl>
        </Grid>
    </Viewbox>
</UserControl>