    xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.H8_ACCOUNTREPORT.BalanceSheet.BalanceControl"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <Grid DataContext="{Binding BankViewModel}">
        <Grid.RowDefinitions>
            <RowDefinition Height="80" />
            <RowDefinition Height="80" />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid Grid.Row="0">
            <StackPanel HorizontalAlignment="Left" Orientation="Horizontal">
                <Label
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    Content="新增會計科目"
                    FontFamily="Segoe UI Semibold"
                    FontSize="25" />
                <TextBox
                    x:Name="tb_New"
                    Width="230"
                    Margin="10,0,0,0"
                    VerticalAlignment="Center"
                    HorizontalContentAlignment="Center"
                    FontFamily="Segoe UI Semibold"
                    FontSize="18"
                    PreviewMouseLeftButtonDown="tb_New_PreviewMouseLeftButtonDown"
                    Text="{Binding TransferValue, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" />
            </StackPanel>
            <StackPanel HorizontalAlignment="Right" Orientation="Horizontal">
                <Button
                    Width="120"
                    Margin="0,0,10,0"
                    VerticalAlignment="Center"
                    Background="DimGray"
                    BorderThickness="0"
                    Command="{Binding InsertCommand}"
                    Content="新增"
                    FontFamily="Segoe UI Semibold"
                    FontSize="18" />
            </StackPanel>
        </Grid>
