                    </Button>
                    <TextBox
                        x:Name="tbYear"
                        Width="100"
                        Margin="0,0,0,0"
                        VerticalAlignment="Center"
                        HorizontalContentAlignment="Center"
                        FontFamily="Segoe UI Semi"
                        FontSize="16"
                        Foreground="Black"
                        GotFocus="tbYear_GotFocus"
                        PreviewKeyDown="tbYear_PreviewKeyDown">
