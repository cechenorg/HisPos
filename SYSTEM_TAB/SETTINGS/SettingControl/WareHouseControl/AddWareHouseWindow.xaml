<Window x:Class="His_Pos.SYSTEM_TAB.SETTINGS.SettingControl.WareHouseControl.AddWareHouseWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:His_Pos.SYSTEM_TAB.SETTINGS.SettingControl.WareHouseControl"
        mc:Ignorable="d"
        Title="新增倉庫" Height="150" Width="200" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Label Content="新倉庫名稱" Grid.Row="0" FontFamily="Segoe UI Semibold" FontSize="18" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
        <TextBox Text="{Binding NewName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" Grid.Row="1" Margin="10,0,10,2" FontFamily="Segoe UI Semibold" FontSize="18" HorizontalContentAlignment="Center"/>
        <Button Width="120" Grid.Row="2" Content="確認" FontFamily="Segoe UI Semibold" FontSize="16" Background="RoyalBlue" BorderThickness="0" Click="ConfirmClick"/>
    </Grid>
</Window>
