<Window
    x:Class="His_Pos.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:authenticationManage="clr-namespace:His_Pos.H4_BASIC_MANAGE.AuthenticationManage"
    xmlns:chromeTabs="clr-namespace:ChromeTabs;assembly=ChromeTabs"
    xmlns:clockIn="clr-namespace:His_Pos.H5_ATTEND.ClockIn"
    xmlns:converters="clr-namespace:ChromeTabs.Converters;assembly=ChromeTabs"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:employeeManage="clr-namespace:His_Pos.H4_BASIC_MANAGE.EmployeeManage"
    xmlns:inventoryManagement="clr-namespace:His_Pos.InventoryManagement"
    xmlns:locationManage="clr-namespace:His_Pos.LocationManage"
    xmlns:manufactoryManage="clr-namespace:His_Pos.ManufactoryManage"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:medBagManage="clr-namespace:His_Pos.H1_DECLARE.MedBagManage"
    xmlns:medFrequencyManage="clr-namespace:His_Pos.H4_BASIC_MANAGE.MedFrequencyManage"
    xmlns:pharmacyManage="clr-namespace:His_Pos.H4_BASIC_MANAGE.PharmacyManage"
    xmlns:prescriptionDec2="clr-namespace:His_Pos.H1_DECLARE.PrescriptionDec2"
    xmlns:prescriptionInquire="clr-namespace:His_Pos.PrescriptionInquire"
    xmlns:productPurchase="clr-namespace:His_Pos.ProductPurchase"
    xmlns:productPurchaseRecord="clr-namespace:His_Pos.ProductPurchaseRecord"
    xmlns:productTypeManage="clr-namespace:His_Pos.ProductTypeManage"
    xmlns:resource="clr-namespace:His_Pos.Resource"
    xmlns:stockTaking="clr-namespace:His_Pos.StockTaking"
    xmlns:stockTakingRecord="clr-namespace:His_Pos.StockTakingRecord"
    xmlns:CustomerManage="clr-namespace:His_Pos.H4_BASIC_MANAGE.CustomerManage"
    xmlns:workScheduleManage="clr-namespace:His_Pos.H5_ATTEND.WorkScheduleManage"
    xmlns:IndexView="clr-namespace:His_Pos.IndexView"
    xmlns:declarefile="clr-namespace:His_Pos.H6_DECLAREFILE.Export"
    xmlns:stockTaking1="clr-namespace:His_Pos.H3_STOCKTAKING.StockTaking"
    xmlns:entrySearch="clr-namespace:His_Pos.H7_ACCOUNTANCY_REPORT.EntrySerach"
    xmlns:PurchaseReturnReport="clr-namespace:His_Pos.H7_ACCOUNTANCY_REPORT.PurchaseReturnReport"
    xmlns:cooperativeAdjustReport="clr-namespace:His_Pos.H7_ACCOUNTANCY_REPORT.CooperativeAdjustReport"
    xmlns:CooperativeEntry="clr-namespace:His_Pos.H7_ACCOUNTANCY_REPORT.CooperativeEntry"
    Title="藥健康 HIS POS 系統"
    Width="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width}"
    Height="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}"
    MinWidth="800"
    MinHeight="450"
    Background="{DynamicResource MaterialDesignPaper}"
    DataContext="{Binding Source={StaticResource Locator}, Path=ViewModelMainWindow}"
    FontFamily="{DynamicResource MaterialDesignFont}"
    WindowStartupLocation="CenterScreen"
    mc:Ignorable="d"
    Closing="Window_Closing" Loaded="Window_Loaded">
    <Window.Resources>
        <DataTemplate DataType="{x:Type prescriptionDec2:PrescriptionDec2}">
            <prescriptionDec2:PrescriptionDec2View />
        </DataTemplate>
        <DataTemplate DataType="{x:Type prescriptionInquire:PrescriptionInquire}">
            <prescriptionInquire:PrescriptionInquireView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type inventoryManagement:InventoryManagement}">
            <inventoryManagement:InventoryManagementView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type productPurchase:ProductPurchase}">
            <productPurchase:ProductPurchaseView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type productPurchaseRecord:ProductPurchaseRecord}">
            <productPurchaseRecord:ProductPurchaseRecordView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type stockTaking:StockTaking}">
            <stockTaking1:StockTakingView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type stockTakingRecord:StockTakingRecord}">
            <stockTakingRecord:StockTakingRecordView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type productTypeManage:ProductTypeManage}">
            <productTypeManage:ProductTypeManageView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type locationManage:LocationManage}">
            <locationManage:LocationManageView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type manufactoryManage:ManufactoryManage}">
            <manufactoryManage:ManufactoryManageView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type pharmacyManage:PharmacyManage}">
            <pharmacyManage:PharmacyManageView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type employeeManage:EmployeeManage}">
            <employeeManage:EmployeeManageView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type CustomerManage:CustomerManage}">
            <CustomerManage:CustomerManageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type medFrequencyManage:MedFrequencyManage}">
            <medFrequencyManage:MedFrequencyManageView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type workScheduleManage:WorkScheduleManage}">
            <workScheduleManage:WorkScheduleManageView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type clockIn:ClockIn}">
            <clockIn:ClockInView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type authenticationManage:AuthenticationManage}">
            <authenticationManage:AuthenticationManageView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type medBagManage:MedBagManage}">
            <medBagManage:MedBagManageView />
        </DataTemplate>
        <DataTemplate DataType="{x:Type IndexView:Index}">
            <IndexView:IndexView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type declarefile:Export}">
            <declarefile:ExportView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type entrySearch:EntrySearch}">
            <entrySearch:EntrySearchView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type PurchaseReturnReport:PurchaseReturnReport}">
            <PurchaseReturnReport:PurchaseReturnReportView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type cooperativeAdjustReport:CooperativeAdjustReport}">
            <cooperativeAdjustReport:CooperativeAdjustReportView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type CooperativeEntry:CooperativeEntry}">
            <CooperativeEntry:CooperativeEntryView/>
        </DataTemplate>
        <Style x:Key="ScrollBarPageButton" TargetType="{x:Type RepeatButton}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Border Background="Transparent" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="LightGray"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <ControlTemplate x:Key="VerticalScrollBar" TargetType="{x:Type ScrollBar}">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="0"/>
                    <RowDefinition/>
                    <RowDefinition Height="0"/>
                </Grid.RowDefinitions>
                <Border
                                Grid.RowSpan="3"
                                Background="DimGray" />
                <Track 
                                Name="PART_Track"
                                Grid.Row="1"
                                IsDirectionReversed="True">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton 
                                        Style="{DynamicResource ScrollBarPageButton}"
                                        Command="ScrollBar.PageUpCommand" />
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb 
                                        Style="{DynamicResource ScrollBarThumb}" 
                                        Margin="0"
                                        Width="8"/>
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton 
                                        Style="{DynamicResource ScrollBarPageButton}"
                                        Command="ScrollBar.PageDownCommand" />
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <Viewbox Stretch="Fill">
        <Grid Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230" />
                <ColumnDefinition Width="1365" />
            </Grid.ColumnDefinitions>
            <StackPanel
                Name="MenuStack"
                Grid.Column="0"
                Background="{StaticResource MenuBarBackGround}"
                Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Image
                        Name="SystemIcon"
                        Width="60"
                        Height="60"
                        Margin="0,-2,0,5"
                        Source="Images/LOGO_HISPOS.png" />
                    <Label
                        Name="HisSwitch"
                        Margin="25,10,0,0"
                        Content="調劑"
                        FontFamily="Segoe UI Semi"
                        FontSize="20"
                        Foreground="LightSkyBlue"
                        MouseDown="Shortcut_OnMouseLeftButtonDown" />
                    <Label
                        Name="PosSwitch"
                        Margin="25,10,0,0"
                        Content="交易"
                        FontFamily="Segoe UI Semi"
                        FontSize="20"
                        Foreground="Orange"
                        MouseDown="Shortcut_OnMouseLeftButtonDown" />
                </StackPanel>
                <ScrollViewer Name="HisMenu" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="760">
                    <ScrollViewer.Resources>
                        <Style TargetType="{x:Type ScrollBar}">
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="OverridesDefaultStyle" Value="true"/>
                            <Setter Property="Width" Value="100"/>
                            <Style.Triggers>
                                <Trigger Property="Orientation" Value="Vertical">
                                    <Setter Property="Width" Value="8"/>
                                    <Setter Property="Height" Value="Auto" />
                                    <Setter Property="Template" Value="{DynamicResource VerticalScrollBar}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Resources>
                    <StackPanel Orientation="Vertical" Height="Auto">
                        <resource:MenuListItem x:Name="HisFeature1" MouseDown="FeatureMouseDown" Visibility="Collapsed"/>
                        <resource:MenuListItem x:Name="HisFeature2" MouseDown="FeatureMouseDown" Visibility="Collapsed"/>
                        <resource:MenuListItem x:Name="HisFeature3" MouseDown="FeatureMouseDown" Visibility="Collapsed"/>
                        <resource:MenuListItem x:Name="HisFeature4" MouseDown="FeatureMouseDown" Visibility="Collapsed"/>
                        <resource:MenuListItem x:Name="HisFeature5" MouseDown="FeatureMouseDown" Visibility="Collapsed"/>
                        <resource:MenuListItem x:Name="HisFeature6" MouseDown="FeatureMouseDown" Visibility="Collapsed"/>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
            <StackPanel
                Grid.Column="0"
                VerticalAlignment="Bottom"
                Background="#FF494949"
                Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <Label
                        Name="UserName"
                        Margin="10,10,0,0"
                        FontFamily="Arial"
                        FontSize="18"
                        FontWeight="Bold"
                        Foreground="White" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Image
                        Height="20"
                        Margin="10,5,0,10"
                        Source="Images/Settings.png"
                        MouseLeftButtonDown="Settings_OnMouseLeftButtonDown"/>
                    <TextBlock
                        Name="SystemTime"
                        Margin="10,5,10,10"
                        VerticalAlignment="Center"
                        FontSize="15"
                        Foreground="DarkGray"
                        TextWrapping="Wrap" />
                </StackPanel>
            </StackPanel>
            <DockPanel Grid.Column="1">
                <DockPanel.Background>
                    <ImageBrush ImageSource="Images/onlyoneeeeeee.jpg" />
                </DockPanel.Background>
                <chromeTabs:ChromeTabControl Name="Tabs" MaximumTabWidth="200" TabPersistBehavior="All" AddTabButtonBehavior="OpenNewTab" PinnedTabWidth="120"
                             Background="AliceBlue" ItemsSource="{Binding ItemCollection}" SelectedItem="{Binding SelectedTab}" SelectedTabBrush="White" PinTabCommand="{Binding PinTabCommand}"
                             CanMoveTabs="{Binding CanMoveTabs}" DragWindowWithOneTab="True" IsAddButtonVisible="{Binding ShowAddButton}" AddTabCommand="{Binding AddTabCommand}"
                             CloseTabCommand="{Binding CloseTabCommand}" ReorderTabsCommand="{Binding ReorderTabsCommand}" Height="900" SelectionChanged="Tabs_SelectionChanged"
                             ContainerItemPreparedForOverride="TabControl_ContainerItemPreparedForOverride">
                    <chromeTabs:ChromeTabControl.Template>
                        <ControlTemplate TargetType="{x:Type chromeTabs:ChromeTabControl}">
                            <ControlTemplate.Resources>
                                <converters:TabPersistBehaviorToContentPresenterVisibilityConverter x:Key="TabPersistBehaviorToContentPresenterVisibilityConverter" />
                                <converters:TabPersistBehaviorToItemHolderVisibilityConverter x:Key="TabPersistBehaviorToItemHolderVisibilityConverter" />
                            </ControlTemplate.Resources>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Border
                                    Grid.Row="0"
                                    Background="{TemplateBinding Background}"
                                    BorderBrush="Gray"
                                    BorderThickness="0,0,0,1">
                                    <chromeTabs:ChromeTabPanel Background="{TemplateBinding Background}" IsItemsHost="True" />
                                </Border>
                                <Grid Grid.Row="1" Visibility="{TemplateBinding TabPersistBehavior, Converter={StaticResource TabPersistBehaviorToContentPresenterVisibilityConverter}}">
                                    <ContentPresenter Content="{TemplateBinding SelectedContent}" />
                                </Grid>
                                <Grid
                                    x:Name="PART_ItemsHolder"
                                    Grid.Row="1"
                                    Visibility="{TemplateBinding TabPersistBehavior,
                                                                 Converter={StaticResource TabPersistBehaviorToItemHolderVisibilityConverter}}" />
                            </Grid>
                        </ControlTemplate>
                    </chromeTabs:ChromeTabControl.Template>
                    <chromeTabs:ChromeTabControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Tag="{Binding RelativeSource={RelativeSource AncestorType={x:Type chromeTabs:ChromeTabItem}}}">
                                <StackPanel Background="Transparent" Orientation="Horizontal">
                                    <Image
                                        Width="20"
                                        Height="20"
                                        Margin="5,2,0,0"
                                        Source="{Binding Icon}" />
                                    <TextBlock
                                        Margin="10,0,0,0"
                                        VerticalAlignment="Center"
                                        FontFamily="Segoe UI Semibold"
                                        FontSize="15"
                                        Text="{Binding TabName}"
                                        TextTrimming="CharacterEllipsis"
                                        TextWrapping="NoWrap" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </chromeTabs:ChromeTabControl.ItemTemplate>
                </chromeTabs:ChromeTabControl>
            </DockPanel>
        </Grid>
    </Viewbox>
</Window>