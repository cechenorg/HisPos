<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:prescriptionDec="clr-namespace:His_Pos.PrescriptionDec"
        xmlns:prescriptionInquire="clr-namespace:His_Pos.PrescriptionInquire"
        xmlns:chromeTabs="clr-namespace:ChromeTabs;assembly=ChromeTabs"
        xmlns:converters="clr-namespace:ChromeTabs.Converters;assembly=ChromeTabs"
        xmlns:inventoryManagement="clr-namespace:His_Pos.InventoryManagement"
        xmlns:ProductPurchase="clr-namespace:His_Pos.ProductPurchase"
        xmlns:ProductPurchaseRecord="clr-namespace:His_Pos.ProductPurchaseRecord"
        xmlns:StockTaking="clr-namespace:His_Pos.StockTaking"
        xmlns:StockTakingRecord="clr-namespace:His_Pos.StockTakingRecord"
        xmlns:ProductTypeManage="clr-namespace:His_Pos.ProductTypeManage"
        xmlns:ManufactoryManage="clr-namespace:His_Pos.ManufactoryManage"
        xmlns:LocationManage="clr-namespace:His_Pos.LocationManage"
        xmlns:EmployeeManage="clr-namespace:His_Pos.H4_BASIC_MANAGE.EmployeeManage"
        xmlns:MedFrequencyManage="clr-namespace:His_Pos.H4_BASIC_MANAGE.MedFrequencyManage"
        xmlns:WorkScheduleManage ="clr-namespace:His_Pos.H5_ATTEND.WorkScheduleManage"
        xmlns:ClockIn="clr-namespace:His_Pos.H5_ATTEND.ClockIn"
        xmlns:PharmacyManage="clr-namespace:His_Pos.H4_BASIC_MANAGE.PharmacyManage"
        xmlns:prescriptionDec2="clr-namespace:His_Pos.H1_DECLARE.PrescriptionDec2"
        xmlns:resource="clr-namespace:His_Pos.Resource"
        xmlns:AuthenticationManage="clr-namespace:His_Pos.H4_BASIC_MANAGE.AuthenticationManage"
        xmlns:MedBagManage="clr-namespace:His_Pos.H4_BASIC_MANAGE.MedBagManage"
        xmlns:CustomerManage="clr-namespace:His_Pos.H4_BASIC_MANAGE.CustomerManage"
        x:Class="His_Pos.MainWindow"
        mc:Ignorable="d" Title="藥健康 POS-HIS 系統"
        WindowStartupLocation="CenterScreen"   Height="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Height}" 
        Width="{Binding Source={x:Static SystemParameters.WorkArea}, Path=Width}"
        Background="{DynamicResource MaterialDesignPaper}"
        FontFamily="{DynamicResource MaterialDesignFont}" MinWidth="800" MinHeight="450"
        DataContext="{Binding Source={StaticResource Locator},Path=ViewModelMainWindow}">
    <Window.Resources>
        <DataTemplate DataType="{x:Type prescriptionDec:PrescriptionDec}">
            <prescriptionDec:PrescriptionDecView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type prescriptionDec2:PrescriptionDec2}">
            <prescriptionDec2:PrescriptionDec2View/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type prescriptionInquire:PrescriptionInquire}">
            <prescriptionInquire:PrescriptionInquireView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type inventoryManagement:InventoryManagement}">
            <inventoryManagement:InventoryManagementView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ProductPurchase:ProductPurchase}">
            <ProductPurchase:ProductPurchaseView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ProductPurchaseRecord:ProductPurchaseRecord}">
            <ProductPurchaseRecord:ProductPurchaseRecordView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type StockTaking:StockTaking}">
            <StockTaking:StockTakingView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type StockTakingRecord:StockTakingRecord}">
            <StockTakingRecord:StockTakingRecordView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ProductTypeManage:ProductTypeManage}">
            <ProductTypeManage:ProductTypeManageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type LocationManage:LocationManage}">
            <LocationManage:LocationManageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ManufactoryManage:ManufactoryManage}">
            <ManufactoryManage:ManufactoryManageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type PharmacyManage:PharmacyManage}">
            <PharmacyManage:PharmacyManageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type EmployeeManage:EmployeeManage}">
            <EmployeeManage:EmployeeManageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type  MedFrequencyManage:MedFrequencyManage}">
            <MedFrequencyManage:MedFrequencyManageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type WorkScheduleManage:WorkScheduleManage}">
            <WorkScheduleManage:WorkScheduleManageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type ClockIn:ClockIn}">
            <ClockIn:ClockInView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type AuthenticationManage:AuthenticationManage}">
            <AuthenticationManage:AuthenticationManageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type MedBagManage:MedBagManage}">
            <MedBagManage:MedBagManageView/>
        </DataTemplate>
        <DataTemplate DataType="{x:Type CustomerManage:CustomerManage}">
            <CustomerManage:CustomerManageView/>
        </DataTemplate>
        
        <Style x:Key="ScrollBarPageButton" TargetType="{x:Type RepeatButton}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type RepeatButton}">
                        <Border Background="Transparent" />
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style x:Key="ScrollBarThumb" TargetType="{x:Type Thumb}">
            <Setter Property="SnapsToDevicePixels" Value="True"/>
            <Setter Property="OverridesDefaultStyle" Value="true"/>
            <Setter Property="IsTabStop" Value="false"/>
            <Setter Property="Focusable" Value="false"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type Thumb}">
                        <Border Background="LightGray"/>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <ControlTemplate x:Key="VerticalScrollBar" TargetType="{x:Type ScrollBar}">
            <Grid >
                <Grid.RowDefinitions>
                    <RowDefinition Height="0"/>
                    <RowDefinition/>
                    <RowDefinition Height="0"/>
                </Grid.RowDefinitions>
                <Border
                                Grid.RowSpan="3"
                                Background="DimGray" />
                <Track 
                                Name="PART_Track"
                                Grid.Row="1"
                                IsDirectionReversed="True">
                    <Track.DecreaseRepeatButton>
                        <RepeatButton 
                                        Style="{DynamicResource ScrollBarPageButton}"
                                        Command="ScrollBar.PageUpCommand" />
                    </Track.DecreaseRepeatButton>
                    <Track.Thumb>
                        <Thumb 
                                        Style="{DynamicResource ScrollBarThumb}" 
                                        Margin="0"
                                        Width="8"/>
                    </Track.Thumb>
                    <Track.IncreaseRepeatButton>
                        <RepeatButton 
                                        Style="{DynamicResource ScrollBarPageButton}"
                                        Command="ScrollBar.PageDownCommand" />
                    </Track.IncreaseRepeatButton>
                </Track>
            </Grid>
        </ControlTemplate>
    </Window.Resources>
    <Viewbox Stretch="Fill">
        <Grid Name="MainGrid">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="230"/>
                <ColumnDefinition Width="1365"/>
            </Grid.ColumnDefinitions>
            <StackPanel Background="#FF363535" Orientation="Vertical" Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <Image Source="Images/LOGO_HISPOS.png" Height="60" Width="60" Margin="0,-1,0,5" />
                    <Label FontFamily="Segoe UI Semi" Foreground="LightSkyBlue" Content="調劑" Margin="20,10,0,15" FontSize="20" MouseLeftButtonDown="Shortcut_OnMouseLeftButtonDown"/>
                    <Label FontFamily="Segoe UI Semi" Foreground="Orange" Content="交易" Margin="25,10,0,15" FontSize="20" MouseLeftButtonDown="Shortcut_OnMouseLeftButtonDown"/>
                </StackPanel>
                <ScrollViewer Name="HisMenu" VerticalScrollBarVisibility="Auto" HorizontalAlignment="Left" Height="763">
                    <ScrollViewer.Resources>
                        <Style TargetType="{x:Type ScrollBar}">
                            <Setter Property="SnapsToDevicePixels" Value="True"/>
                            <Setter Property="OverridesDefaultStyle" Value="true"/>
                            <Setter Property="Width" Value="100"/>
                            <Style.Triggers>
                                <Trigger Property="Orientation" Value="Vertical">
                                    <Setter Property="Width" Value="8"/>
                                    <Setter Property="Height" Value="Auto" />
                                    <Setter Property="Template" Value="{DynamicResource VerticalScrollBar}" />
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </ScrollViewer.Resources>
                    <StackPanel Orientation="Vertical" Height="Auto">
                        <resource:MenuListItem x:Name="HisFeature1" MouseDown="FeatureMouseDown"/>
                        <resource:MenuListItem x:Name="HisFeature2" MouseDown="FeatureMouseDown"/>
                        <resource:MenuListItem x:Name="HisFeature3" MouseDown="FeatureMouseDown"/>
                        <resource:MenuListItem x:Name="HisFeature4" MouseDown="FeatureMouseDown"/>
                        <resource:MenuListItem x:Name="HisFeature5" MouseDown="FeatureMouseDown"/>
                    </StackPanel>
                </ScrollViewer>
            </StackPanel>
            <StackPanel Orientation="Vertical" VerticalAlignment="Bottom" Background="#FF494949" Grid.Column="0">
                <StackPanel Orientation="Horizontal">
                    <Label Name="UserName" FontFamily="Arial" Foreground="White" Margin="10,10,0,0" FontSize="18" FontWeight="Bold"/>
                    <Label FontFamily="Arial" Foreground="White" Margin="0,10,0,0" FontSize="15" Content="處方張數: " VerticalAlignment="Center"/>
                    <Label Name="PrescriptionCount" FontFamily="Arial" Foreground="White" Margin="0,10,10,0" FontSize="15"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal"> 
                    <Image Margin="10,5,0,10" Height="20" Source="Images/Settings.png"/>
                    <TextBlock Name="SystemTime" FontSize="15" TextWrapping="Wrap" Margin="10,5,10,10" Foreground="DarkGray" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
            <DockPanel Grid.Column="1">
                <DockPanel.Background>
                    <ImageBrush ImageSource="Images/onlyoneeeeeee.jpg"/>
                </DockPanel.Background>
                <chromeTabs:ChromeTabControl Name="Tabs" MaximumTabWidth="200" TabPersistBehavior="All" AddTabButtonBehavior="OpenNewTab"
                             Background="AliceBlue" ItemsSource="{Binding ItemCollection}" SelectedItem="{Binding SelectedTab}" SelectedTabBrush="White"
                             CanMoveTabs="{Binding CanMoveTabs}" DragWindowWithOneTab="True" IsAddButtonVisible="{Binding ShowAddButton}" AddTabCommand="{Binding AddTabCommand}"
                             CloseTabCommand="{Binding CloseTabCommand}" ReorderTabsCommand="{Binding ReorderTabsCommand}" Height="900" SelectionChanged="Tabs_SelectionChanged">
                    <chromeTabs:ChromeTabControl.Template>
                        <ControlTemplate TargetType="{x:Type chromeTabs:ChromeTabControl}">
                            <ControlTemplate.Resources>
                                <converters:TabPersistBehaviorToContentPresenterVisibilityConverter x:Key="TabPersistBehaviorToContentPresenterVisibilityConverter" />
                                <converters:TabPersistBehaviorToItemHolderVisibilityConverter x:Key="TabPersistBehaviorToItemHolderVisibilityConverter" />
                            </ControlTemplate.Resources>
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="30" />
                                    <RowDefinition Height="*" />
                                </Grid.RowDefinitions>
                                <Border Background="{TemplateBinding Background}" BorderThickness="0,0,0,1" BorderBrush="Gray" Grid.Row="0">
                                    <chromeTabs:ChromeTabPanel IsItemsHost="True" Background="{TemplateBinding Background}" />
                                </Border>
                                <Grid Grid.Row="1" Visibility="{TemplateBinding TabPersistBehavior,Converter={StaticResource TabPersistBehaviorToContentPresenterVisibilityConverter}}">
                                    <ContentPresenter Content="{TemplateBinding SelectedContent}" />
                                </Grid>
                                <Grid x:Name="PART_ItemsHolder" Grid.Row="1" Visibility="{TemplateBinding TabPersistBehavior,Converter={StaticResource TabPersistBehaviorToItemHolderVisibilityConverter}}" />
                            </Grid>
                        </ControlTemplate>
                    </chromeTabs:ChromeTabControl.Template>
                    <chromeTabs:ChromeTabControl.ItemTemplate>
                        <DataTemplate>
                            <Grid Tag="{Binding RelativeSource={RelativeSource AncestorType={x:Type chromeTabs:ChromeTabItem}}}">
                                <StackPanel Orientation="Horizontal" Background="Transparent">
                                    <Image Source="{Binding Icon}" Width="20" Height="20" Margin="5,2,0,0"/>
                                    <TextBlock Text="{Binding TabName}" Margin="10,0,0,0" FontFamily="Segoe UI Semibold" FontSize="18" TextWrapping="NoWrap" TextTrimming="CharacterEllipsis" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </chromeTabs:ChromeTabControl.ItemTemplate>
                </chromeTabs:ChromeTabControl>
            </DockPanel>
        </Grid>
    </Viewbox>
</Window>
