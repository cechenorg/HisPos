<Window x:Class="His_Pos.FunctionWindow.LoadingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:His_Pos"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen" Title="LoadingWindow" Height="100" Width="200" WindowStyle="None">
    <Grid>
        <Image gif:ImageBehavior.AnimatedSource="/Images/loading.gif" Height="40" Width="40" Margin="0,-30,0,0"/>
        <Label Name="LoadingMessage" HorizontalAlignment="Center" VerticalAlignment="Center" Margin="0,30,0,0"/>
    </Grid>
</Window>
