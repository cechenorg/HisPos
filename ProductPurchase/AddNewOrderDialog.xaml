<Window x:Class="His_Pos.ProductPurchase.AddNewOrderDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:His_Pos.ProductPurchase"
        xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
        mc:Ignorable="d"
        Title="AddNewOrderDialog" Height="300" Width="500" WindowStartupLocation="CenterScreen">
    <Viewbox Stretch="Fill">
        <Grid Height="280" Width="500">
            <Grid.RowDefinitions>
                <RowDefinition Height="70"/>
                <RowDefinition/>
                <RowDefinition Height="50"/>
            </Grid.RowDefinitions>
            <Label Content="選擇新增方式:" Foreground="Black" FontSize="30" Grid.Row="0" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" Margin="10,0,0,0"/>
            <StackPanel Orientation="Vertical" Grid.Row="1" Margin="50,0,0,0">
                <RadioButton Tag="0" GroupName="selection" Content=" 自行新增" FontSize="20" Grid.Row="0" FontFamily="Segoe UI Semi" VerticalContentAlignment="Center" Margin="0,10,0,10" IsChecked="True" Checked="ChangeAddOrderType"/>
                <RadioButton Tag="1" GroupName="selection" Content=" 低於安全量" FontSize="20" Grid.Row="0" FontFamily="Segoe UI Semi" VerticalContentAlignment="Center" Margin="0,10,0,10" Checked="ChangeAddOrderType"/>
                <StackPanel Orientation="Horizontal">
                    <RadioButton Tag="2" GroupName="selection" Content=" 廠商" FontSize="20" Grid.Row="0" FontFamily="Segoe UI Semi" VerticalContentAlignment="Center" Margin="0,10,20,10" Checked="ChangeAddOrderType"/>
                    <controls:AutoCompleteBox x:Name="ManufactoryAuto" Width="300" FontSize="14" FontFamily="Segoe UI Semibold" BorderThickness="0,0,0,1" VerticalContentAlignment="Bottom" Height="30"
                                                              ValueMemberPath="Name" Background="Transparent" ItemContainerStyle="{StaticResource AutoCompleteBoxItemContainerStyle}"
                                                              BorderBrush="DimGray" FilterMode="Contains" IsTextCompletionEnabled="False" Text="{Binding Name}"
                                                              ItemFilter="{Binding ManufactoryFilter}">
                        <controls:AutoCompleteBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Label x:Name="ManId" Width="80" Content="{Binding Id}"/>
                                    <Label x:Name="ManName" Width="280" Content="{Binding Name}"/>
                                </StackPanel>
                            </DataTemplate>
                        </controls:AutoCompleteBox.ItemTemplate>
                    </controls:AutoCompleteBox>
                </StackPanel>
            </StackPanel>
            <Button Content="確認"  Grid.Row="2" Width="200" Background="#FF63B6FF" BorderBrush="Transparent" Foreground="{StaticResource ForeGround}" FontFamily="Segoe UI Semibold" Click="ConfirmButtonClick"/>
        </Grid>
    </Viewbox>
</Window>
