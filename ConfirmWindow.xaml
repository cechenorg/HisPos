<Window x:Class="His_Pos.ConfirmWindow"
            xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
            xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
            xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
            xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
            xmlns:local="clr-namespace:His_Pos"
            mc:Ignorable="d"
            Height="340" Width="470"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize" WindowStyle="None">
    <Grid Background="White">
        <StackPanel Orientation="Vertical" VerticalAlignment="Center" Background="White">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Height="300">
                <Image Name="Icon"  Height="50" Width="50" Margin="10,0,10,0"/>
                <ScrollViewer Margin="0,10,0,10" Width="400">
                    <Label VerticalAlignment="Center" Name="Message"/>
                </ScrollViewer>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <Button Name="CancelBtn" Margin="10,0,0,0" Width="220" Content="否" Click="Cancel_Click"/>
                <Button Name="ConfirmBtn" Margin="10,0,0,0" Width="220" Content="是" Click="ConfirmClick" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
