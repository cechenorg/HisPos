<UserControl x:Class="His_Pos.H6_DECLAREFILE.Export.ExportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:His_Pos.H6_DECLAREFILE.Export"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="839"
             d:DesignWidth="1365"
             mc:Ignorable="d">
    <Viewbox Name="ExportViewBox" Stretch="UniformToFill">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="839"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="400"/>
                <ColumnDefinition Width="965"/>
            </Grid.ColumnDefinitions>
            <DataGrid ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" CellStyle="{StaticResource DataGridCellStyle}"
                      VerticalScrollBarVisibility="Hidden" CanUserAddRows="False" HeadersVisibility="None" Background="Transparent"
                      Height="839">
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="400">
                        <DataGridTemplateColumn.CellStyle>
                            <Style TargetType="{x:Type DataGridCell}">
                                <Setter Property="Background" Value="Transparent"/>
                                <Setter Property="BorderBrush" Value="Transparent"/>
                                <Setter Property="Foreground" Value="#FF424040"/>
                                <Style.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter Property="Background" Value="{StaticResource GridSelected}"/>
                                    </Trigger>
                                </Style.Triggers>
                            </Style>
                        </DataGridTemplateColumn.CellStyle>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Grid Height="80">
                                    <Grid.RowDefinitions>
                                        <RowDefinition/>
                                        <RowDefinition/>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                    <ColumnDefinition/>
                                    <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Orientation="Vertical" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Width="80">
                                        <Label Content="{Binding DeclareFile.DeclareYear}"/>
                                        <Label Content="{Binding DeclareFile.DeclareMonth}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Column="1" Width="320" HorizontalAlignment="Right" Grid.Row="0">
                                        <Label Content="總點數" FontSize="18" FontFamily="Segoe UI Semi"/>
                                        <Label Content="{Binding DeclareFile.TotalPoint}"/>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal" Grid.Column="1" Width="320" HorizontalAlignment="Right" Grid.Row="1">
                                        <Label Content="一般" FontSize="18" FontFamily="Segoe UI Semi"/>
                                        <Label Content="{Binding DeclareFile.NormalCount}" FontSize="18" FontFamily="Segoe UI Semi"/>
                                        <Label Content="慢性" FontSize="18" FontFamily="Segoe UI Semi"/>
                                        <Label Content="{Binding DeclareFile.ChronicCount}" FontSize="18" FontFamily="Segoe UI Semi"/>
                                        <Image Source="C:\HisPos\Images\DeleteDot.png"/>
                                        <Label Content="{Binding DeclareFile.ErrorCount}" FontSize="18" FontFamily="Segoe UI Semi"/>
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
            <StackPanel Orientation="Vertical" Grid.Row="0" Grid.Column="1">
                <DataGrid
                     Name="PrescriptionList" Height="400" MaxHeight="400" Background="{StaticResource GridBackGround}"
                    CanUserAddRows="False" AutoGenerateColumns="False" materialDesign:DataGridAssist.CellPadding="13 8 8 8" materialDesign:DataGridAssist.ColumnHeaderPadding="8" Margin="10,10,10,429">
                    <DataGrid.Columns>
                        <DataGridCheckBoxColumn
                            Width="70" Header="申報"/>
                        <DataGridTextColumn
                            Width="100" Binding="{Binding }" Header="病患姓名"/>
                        <materialDesign:MaterialDataGridTextColumn
                            Width="80" Binding="{Binding Description}" Header="科別" />
                        <materialDesign:MaterialDataGridTextColumn
                            Width="100" Binding="{Binding Name}"  Header="調劑日期"/>
                        <materialDesign:MaterialDataGridTextColumn
                            Width="100" Binding="{Binding Name}"  Header="調劑藥師"/>
                        <materialDesign:MaterialDataGridTextColumn
                            Width="80" Binding="{Binding Name}"  Header="藥費"/>
                        <materialDesign:MaterialDataGridTextColumn
                            Width="80" Binding="{Binding Name}"  Header="總點數"/>
                    </DataGrid.Columns>
                </DataGrid>

            </StackPanel>
            </Grid>
    </Viewbox>
</UserControl>
