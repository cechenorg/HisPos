<UserControl x:Class="His_Pos.H6_DECLAREFILE.ExportView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:His_Pos.H6_DECLAREFILE.Export"
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             d:DesignHeight="839"
             d:DesignWidth="1365"
             mc:Ignorable="d">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="420"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <DataGrid
            Grid.Row="0" Grid.Column="0" Name="DeclareFileList" Width="660" Height="400" MaxHeight="400" CanUserAddRows="False" AutoGenerateColumns="False"
            materialDesign:DataGridAssist.CellPadding="13 8 8 8" materialDesign:DataGridAssist.ColumnHeaderPadding="8" Background="{StaticResource GridBackGround}">
            <DataGrid.Columns>
                <DataGridTextColumn
                    Header="月份"/>
                <DataGridTextColumn
                    Width="100" Binding="{Binding Code}" Header="慢性處方箋"/>
                <materialDesign:MaterialDataGridTextColumn
                    Binding="{Binding Name}"  Header="一般處方箋"/>
                <materialDesign:MaterialDataGridTextColumn
                    Binding="{Binding Description}" Header="總點數" />
                <materialDesign:MaterialDataGridTextColumn
                    Binding="{Binding Description}" Header="錯誤" />
            </DataGrid.Columns>
        </DataGrid>
        <DataGrid
            Grid.Row="0" Grid.Column="1" Name="PrescriptionList"  Width="600" Height="400" MaxHeight="400" Background="{StaticResource GridBackGround}"
            CanUserAddRows="False" AutoGenerateColumns="False" materialDesign:DataGridAssist.CellPadding="13 8 8 8" materialDesign:DataGridAssist.ColumnHeaderPadding="8" Margin="0,10,83,10">
            <DataGrid.Columns>
                <DataGridCheckBoxColumn
                    Width="70" Header="申報"/>
                <DataGridTextColumn
                    Width="100" Binding="{Binding }" Header="病患姓名"/>
                <materialDesign:MaterialDataGridTextColumn
                    Width="80" Binding="{Binding Description}" Header="科別" />
                <materialDesign:MaterialDataGridTextColumn
                    Width="100" Binding="{Binding Name}"  Header="調劑日期"/>
                <materialDesign:MaterialDataGridTextColumn
                    Width="100" Binding="{Binding Name}"  Header="調劑藥師"/>
                <materialDesign:MaterialDataGridTextColumn
                    Width="80" Binding="{Binding Name}"  Header="藥費"/>
                <materialDesign:MaterialDataGridTextColumn
                    Width="80" Binding="{Binding Name}"  Header="總點數"/>
            </DataGrid.Columns>
        </DataGrid>
    </Grid>
</UserControl>
