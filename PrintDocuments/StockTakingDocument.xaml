<UserControl x:Class="His_Pos.PrintDocuments.StockTakingDocument"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:His_Pos.PrintDocuments"
             mc:Ignorable="d"
             d:DesignHeight="1082" d:DesignWidth="765">
    <Grid Margin="15">
        <Grid.RowDefinitions>
            <RowDefinition Height="50"/>
            <RowDefinition Height="30"/>
            <RowDefinition/>
            <RowDefinition Height="40"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Grid.Row="0">
            <Label Content="盤點單" FontSize="30" FontFamily="Segoe UI Semibold"/>
            <Label Content="日期: " FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semi" Margin="10,0,0,0"/>
            <Label Content="{Binding PrintDate}" FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semi"/>
            <Label Content="盤點品項: " FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semi" Margin="10,0,0,0"/>
            <Label Content="{Binding TotalProductCount}" FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semi"/>
            <Label Content="盤點人: " FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semi" Margin="10,0,0,0"/>
            <Label Content="{Binding UserName}" FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semi"/>
        </StackPanel>
        <StackPanel Orientation="Horizontal" Grid.Row="1">
            <Label Content="商品代碼" FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semibold" Margin="5,0,0,0"/>
            <Label Content="商品名稱" FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semibold" Margin="47,0,0,0"/>
            <Label Content="類別" FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semibold" Margin="57,0,0,0"/>
            <Label Content="批號" FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semibold" Margin="63,0,0,0"/>
            <Label Content="庫存" FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semibold" Margin="60,0,0,0"/>
            <Label Content="結果" FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semibold" Margin="8,0,0,0"/>
            <Label Content="效期" FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semibold" Margin="25,0,0,0"/>
            <Label Content="櫃位" FontSize="18" VerticalAlignment="Bottom" FontFamily="Segoe UI Semibold" Margin="30,0,0,0"/>
        </StackPanel>
        <DataGrid Grid.Row="2" Name="PrintData" Background="Transparent" HorizontalScrollBarVisibility="Hidden" VerticalScrollBarVisibility="Hidden" ItemsSource="{Binding PrintCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                  AutoGenerateColumns="False" CanUserAddRows="False" FontFamily="Segoe UI Semibold" HeadersVisibility="None">
            <DataGrid.RowStyle>
                <Style TargetType="{x:Type DataGridRow}">
                    <Setter Property="Background" Value="Transparent"/>
                    <Setter Property="FontSize" Value="12"/>
                </Style>
            </DataGrid.RowStyle>
            <DataGrid.Columns>
                <DataGridTextColumn MinWidth="90" MaxWidth="90" Header="商品代碼" FontFamily="Segoe UI Semi" IsReadOnly="True" Binding="{Binding Id}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment"  Value="Center"/>
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn MinWidth="170" MaxWidth="170" Header="商品名稱" FontFamily="Segoe UI SemiBold" IsReadOnly="True" Binding="{Binding Name}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn MinWidth="70" MaxWidth="70" Header="類別" FontFamily="Segoe UI Semi" IsReadOnly="True" Binding="{Binding Category}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment"  Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTemplateColumn MinWidth="150" MaxWidth="150" Header="批號" IsReadOnly="True">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <DataGrid Background="Transparent" CanUserAddRows="False" AutoGenerateColumns="False" HeadersVisibility="None" VerticalAlignment="Center"
                                          ItemsSource="{Binding BatchNumbersCollection, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          HorizontalScrollBarVisibility="Disabled" VerticalScrollBarVisibility="Disabled" Margin="-13" GridLinesVisibility="None">
                                <DataGrid.RowStyle>
                                    <Style TargetType="{x:Type DataGridRow}">
                                        <Style.Triggers>
                                            <Trigger Property="DataGridRow.IsSelected" Value="True">
                                                <Setter Property="Background" Value="Transparent"/>
                                            </Trigger>
                                        </Style.Triggers>
                                        <Setter Property="Background" Value="Transparent"/>
                                        <Setter Property="FontSize" Value="12"/>
                                        <Setter Property="Height" Value="28"/>
                                    </Style>
                                </DataGrid.RowStyle>
                                <DataGrid.Columns>
                                    <DataGridTextColumn MinWidth="80" MaxWidth="80" FontFamily="Segoe UI Semi" IsReadOnly="True" Binding="{Binding BatchNumber}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="HorizontalAlignment"  Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                    <DataGridTextColumn MinWidth="60" MaxWidth="60" FontFamily="Segoe UI Semi" IsReadOnly="True" Binding="{Binding Amount}">
                                        <DataGridTextColumn.ElementStyle>
                                            <Style TargetType="{x:Type TextBlock}">
                                                <Setter Property="HorizontalAlignment"  Value="Center" />
                                                <Setter Property="VerticalAlignment" Value="Center"/>
                                            </Style>
                                        </DataGridTextColumn.ElementStyle>
                                    </DataGridTextColumn>
                                </DataGrid.Columns>
                            </DataGrid>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn MinWidth="60" MaxWidth="60" Header="庫存" FontFamily="Segoe UI Semi" IsReadOnly="True" Binding="{Binding Inventory}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment"  Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn MinWidth="50" MaxWidth="50" Header="結果" FontFamily="Segoe UI Semi" IsReadOnly="True">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment"  Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn MinWidth="90" MaxWidth="90" Header="效期" FontFamily="Segoe UI Semi" IsReadOnly="True" Binding="{Binding ValidDate}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment"  Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn MinWidth="70" MaxWidth="70" Header="櫃位" FontFamily="Segoe UI Semi" IsReadOnly="True" Binding="{Binding Location}">
                    <DataGridTextColumn.ElementStyle>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="HorizontalAlignment"  Value="Center" />
                            <Setter Property="VerticalAlignment" Value="Center"/>
                        </Style>
                    </DataGridTextColumn.ElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
        <Label Content="{Binding PageNumber}" FontSize="20" HorizontalAlignment="Center" FontFamily="Segoe UI Semibold" Grid.Row="3"/>
    </Grid>
</UserControl>
