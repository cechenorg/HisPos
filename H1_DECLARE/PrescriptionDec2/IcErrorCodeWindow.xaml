<Window x:Class="His_Pos.H1_DECLARE.PrescriptionDec2.IcErrorCodeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        WindowStyle="SingleBorderWindow"
        mc:Ignorable="d" Title="選擇異常代碼" Height="420" Width="550" WindowStartupLocation="CenterScreen">
    <Window.Resources>
        <Style x:Key="HideHeaderStyle" TargetType="{x:Type GridViewColumnHeader}">
            <Setter Property="Visibility" Value="Collapsed" />
        </Style>
    </Window.Resources>
    <Viewbox Stretch="Fill">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="430"/>
            </Grid.RowDefinitions>
            <StackPanel Orientation="Vertical" Margin="10,10,10,10" Grid.Row="0" Width="550" Height="430">
                <ListView x:Name="lv" SelectionMode="Single" ItemsSource="{Binding IcErrorCodes,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" Height="365" Background="{StaticResource GridBackGround}">
                    <ListView.View>
                        <GridView ColumnHeaderContainerStyle="{StaticResource HideHeaderStyle}">
                            <GridView.Columns>
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <CheckBox IsChecked="{Binding IsSelected,RelativeSource={RelativeSource FindAncestor,AncestorType={x:Type ListViewItem}}}" Checked="CheckBox_Checked" />
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                                <GridViewColumn>
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Label Content="{Binding Id,UpdateSourceTrigger=PropertyChanged}" FontSize="16" FontFamily="Segoe UI Semibold"/>
                                        </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                            <GridViewColumn>
                                <GridViewColumn.CellTemplate>
                                    <DataTemplate>
                                        <Label Content="{Binding Cause,UpdateSourceTrigger=PropertyChanged}" FontSize="16" FontFamily="Segoe UI Semibold"/>
                                    </DataTemplate>
                                </GridViewColumn.CellTemplate>
                            </GridViewColumn>
                        </GridView.Columns>
                    </GridView>
                </ListView.View>
            </ListView>
            <StackPanel Orientation="Horizontal" Margin="10,10,0,0" Width="140" Height="35" HorizontalAlignment="Right">
                <Button Background="DarkGray" Content="取消" Click="Button_Click" BorderThickness="0" FontSize="16" FontFamily="Segoe UI Semibold"/>
                <Button Background="IndianRed" Content="確定" Margin="10,0,0,0" Click="Ok_Click" BorderThickness="0" FontSize="16" FontFamily="Segoe UI Semibold"/>
            </StackPanel>
        </StackPanel>
    </Grid>
        </Viewbox>
</Window>
