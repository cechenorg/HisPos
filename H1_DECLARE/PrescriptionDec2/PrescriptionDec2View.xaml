<UserControl x:Class="His_Pos.H1_DECLARE.PrescriptionDec2.PrescriptionDec2View"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:His_Pos.H1_DECLARE.PrescriptionDec2"
             xmlns:hisPos="clr-namespace:His_Pos"
             xmlns:controls="clr-namespace:System.Windows.Controls;assembly=System.Windows.Controls.Input.Toolkit"
             mc:Ignorable="d" x:Name="PreDec2"
             d:DesignHeight="839" d:DesignWidth="1365">
    <UserControl.Resources>
        <Style x:Key="CenterGridHeaderStyle" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="Transparent" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5,10,5,10" />
        </Style>
        <Style x:Key="CenterGridHeaderStyle2" TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="Background" Value="#99BFBFBF" />
            <Setter Property="FontWeight" Value="Bold" />
            <Setter Property="FontSize" Value="16" />
            <Setter Property="Margin" Value="5,10,5,10" />
        </Style>
        <DataTemplate x:Key="MedcineCodeAutoComplete">
            <StackPanel Orientation="Horizontal">
                <Label x:Name="Promid" Width="100" Content="{Binding Id}" />
                <Label x:Name="PromName" Width="350" Content="{Binding Name}" />
            </StackPanel>
        </DataTemplate>
        <local:GenderConverter x:Key="GenderConverter" />
        <hisPos:AutoCompleteIsEnableConverter x:Key="AutoCompleteIsEnableConverter"/>
        <hisPos:LastRowIsEnableConverter x:Key="LastRowIsEnableConverter"/>
    </UserControl.Resources>
    <Viewbox Name="PrescriptionViewBox" Stretch="Fill">
        <Grid Height="839" Width="1365">
            <Grid.RowDefinitions>
                <RowDefinition Height="50" />
                <RowDefinition Height="160" />
                <RowDefinition />
                <RowDefinition Height="300" />
            </Grid.RowDefinitions>
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="9">
                <Image Width="25" Name="IcPatientGender" Source="../../Images/Genders.png" Margin="20,0,15,0" />
                <ComboBox Name="PatientGender" Width="50" FontFamily="Segoe UI Semi" HorizontalContentAlignment="Center" FontSize="18" Margin="0,0,15,0" Text="{Binding Prescription.Customer.Gender,Mode=TwoWay,Converter={StaticResource GenderConverter}}">
                    <ListBoxItem Content="男" />
                    <ListBoxItem Content="女" />
                </ComboBox>
                <Image Width="25" Name="IcPatientName" Source="../../Images/User_48px.png" Margin="20,0,15,0" />
                <TextBox Name="PatientName" Width="150" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" FontSize="18" Margin="0,0,30,0" Text="{Binding Prescription.Customer.Name,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                <Image Name="IcPatientId" Width="30" Source="../../Images/ID_Card.png" />
                <TextBox Name="PatientId" Width="150"  Foreground="{StaticResource ForeGround}" HorizontalContentAlignment="Center" FontSize="18" Margin="5,0,20,0" Text="{Binding Prescription.Customer.IcCard.IcNumber,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                <Image Name="IcPatientBirthday" Width="30" Source="..\..\Images\birthday.png" />
                <TextBox Name="PatientBirthday" Width="150" Foreground="{StaticResource ForeGround}" HorizontalContentAlignment="Center" FontSize="18" Margin="5,0,20,0" Text="{Binding Prescription.Customer.Birthday,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" />
                <Label Content="藥品毛利 : " FontSize="18" Foreground="{StaticResource ForeGround}" VerticalAlignment="Center" FontFamily="Segoe UI Semibold" />
                <Label x:Name="PrescriptionProfit" FontSize="16"  Foreground="#FF424040" HorizontalContentAlignment="Center" VerticalAlignment="Center" Margin="0,0,0,0" />
                <Rectangle Width="335" />
                <Button Content="取得病患資料" Background="DeepSkyBlue" FontSize="16" MinWidth="130" BorderThickness="0" FontFamily="Segoe UI Semibold" />
            </StackPanel>
            <Grid Background="{StaticResource GridBackGround}" Grid.Row="1" Margin="10,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition />
                    <RowDefinition />
                    <RowDefinition />
                </Grid.RowDefinitions>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Margin="8">
                    <Label Content="釋出院所" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" />
                    <controls:AutoCompleteBox x:Name="ReleaseHospital" Background="Transparent" Width="450" FontSize="16" FontStretch="ExtraExpanded" HorizontalContentAlignment="Center"
                                                      BorderThickness="0,0,0,1" VerticalContentAlignment="Stretch" FontFamily="Segoe UI Semibold" ValueMemberPath="FullName" SelectedItem="{Binding Prescription.Treatment.MedicalInfo.Hospital, Mode=TwoWay}"
                                                      MinimumPrefixLength="4" BorderBrush="DimGray" ItemContainerStyle="{StaticResource AutoCompleteBoxItemContainerStyle}">
                        <controls:AutoCompleteBox.ItemTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Label Width="100" Content="{Binding Id}" />
                                    <Label Width="350" Content="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </controls:AutoCompleteBox.ItemTemplate>
                    </controls:AutoCompleteBox>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="2" Margin="8">
                    <Label Content="就醫科別" Width="auto" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" />
                    <ComboBox x:Name="DivisionCombo" Width="170" FontSize="14" IsEditable="True" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" DisplayMemberPath="FullName" SelectedItem="{Binding Prescription.Treatment.MedicalInfo.Hospital.Division,Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="3" Margin="8">
                    <Label Content="診治醫生" Width="auto" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" />
                    <TextBox x:Name="DoctorId" Width="170" FontSize="14" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Text="{Binding Prescription.Treatment.MedicalInfo.Hospital.Doctor.Id,Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="0" Grid.Column="4" Margin="8">
                    <Label Content="就醫序號" Width="auto" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" />
                    <TextBox x:Name="MedicalNumber" Width="170" FontSize="14" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" Text="{Binding Prescription.Customer.IcCard.MedicalNumber,Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="0" Margin="8">
                    <Label Content="處方案件" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" />
                    <ComboBox x:Name="TreatmentCaseCombo" Width="170" FontSize="14" IsEditable="True" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" DisplayMemberPath="FullName" SelectedItem="{Binding Prescription.Treatment.MedicalInfo.TreatmentCase,Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="1" Margin="8">
                    <Label Content="就醫日期" Width="auto" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" />
                    <DatePicker x:Name="TreatmentDate" Width="170" FontSize="14" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" SelectedDate="{Binding Prescription.Treatment.TreatmentDate,Mode=TwoWay,StringFormat = {}{0:yyyy-mm-dd}}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="2" Margin="8">
                    <Label Content="調劑日期" Width="auto" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" />
                    <DatePicker x:Name="AdjustDate" Width="170" FontSize="14" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center"  SelectedDate="{Binding Prescription.Treatment.AdjustDate,Mode=TwoWay,StringFormat = {}{0:yyyy-mm-dd}}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="3" Margin="8">
                    <Label Content="主要診斷" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" />
                    <TextBox x:Name="MainDiagnosis" Width="170" FontSize="14" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" Text="{Binding Prescription.Treatment.MedicalInfo.MainDiseaseCode.Id,Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="1" Grid.Column="4" Margin="8">
                    <Label Width="auto" Content="次要診斷" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" />
                    <TextBox x:Name="SeconDiagnosis" Width="170" FontSize="14" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" Text="{Binding Prescription.Treatment.MedicalInfo.SecondDiseaseCode.Id,Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="0" Margin="8">
                    <Label Content="給付類別" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" />
                    <ComboBox x:Name="PaymentCategoryCombo" Width="170" FontSize="14" IsEditable="True" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center"  DisplayMemberPath="FullName" SelectedItem="{Binding Prescription.Treatment.PaymentCategory,Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="1" Margin="8">
                    <Label Content="部分負擔" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" />
                    <ComboBox x:Name="CopaymentCombo" Width="170" FontSize="14" IsEditable="True" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" DisplayMemberPath="FullName" SelectedItem="{Binding Prescription.Treatment.Copayment,Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="2" Margin="8">
                    <Label Content="調劑案件" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" />
                    <ComboBox x:Name="AdjustCaseCombo" Width="170" FontSize="14" IsEditable="True" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" DisplayMemberPath="FullName" SelectedItem="{Binding Prescription.Treatment.AdjustCase,Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="3" Margin="8">
                    <Label Content="領藥次數" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" />
                    <TextBox x:Name="ChronicSequence" Width="72" FontSize="14" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" Text="{Binding Prescription.ChronicSequence,Mode=TwoWay}" />
                    <Label Content=" / " FontSize="16" FontFamily="Segoe UI Semibold" />
                    <TextBox x:Name="ChronicTotal" Width="72" FontSize="14" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" Text="{Binding Prescription.ChronicTotal,Mode=TwoWay}" />
                </StackPanel>
                <StackPanel Orientation="Horizontal" Grid.Row="2" Grid.Column="4" Margin="8">
                    <Label Content="特定治療" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" />
                    <TextBox x:Name="SpecialCode" Width="170" FontSize="14" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" Text="{Binding Prescription.Treatment.MedicalInfo.SpecialCode.Id,Mode=TwoWay}" />
                </StackPanel>
            </Grid>
            <DataGrid Name="PrescriptionMedicines" Grid.Row="2" Margin="10,0,10,10" Background="{StaticResource GridBackGround}" ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}" CellStyle="{StaticResource DataGridCellStyle}"
                      AutoGenerateColumns="False" GridLinesVisibility="Horizontal" CanUserAddRows="True" MouseDoubleClick="PrescriptionMedicines_MouseDoubleClick" AddingNewItem="PrescriptionMedicines_AddingNewItem">
                <DataGrid.Resources>
                    <Style TargetType="{x:Type ScrollBar}">
                        <Setter Property="SnapsToDevicePixels" Value="True" />
                        <Setter Property="OverridesDefaultStyle" Value="true" />
                        <Setter Property="Width" Value="100" />
                        <Style.Triggers>
                            <Trigger Property="Orientation" Value="Horizontal">
                                <Setter Property="Width" Value="Auto" />
                                <Setter Property="Height" Value="15" />
                                <Setter Property="Template" Value="{StaticResource HorizontalScrollBar}" />
                            </Trigger>
                            <Trigger Property="Orientation" Value="Vertical">
                                <Setter Property="Width" Value="15" />
                                <Setter Property="Height" Value="Auto" />
                                <Setter Property="Template" Value="{StaticResource VerticalScrollBar}" />
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </DataGrid.Resources>
                <DataGrid.RowStyle>
                    <Style TargetType="{x:Type DataGridRow}">
                        <Style.Triggers>
                            <Trigger Property="DataGridRow.IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource GridDarkerBackGround}" />
                            </Trigger>
                        </Style.Triggers>
                        <EventSetter Event="MouseEnter" Handler="DataGridRow_MouseEnter" />
                        <EventSetter Event="MouseLeave" Handler="DataGridRow_MouseLeave" />
                        <Setter Property="Background" Value="Transparent" />
                        <Setter Property="BorderBrush" Value="Transparent" />
                        <Setter Property="FontSize" Value="16" />
                        <Setter Property="Height" Value="40" />
                    </Style>
                </DataGrid.RowStyle>
                <DataGrid.Columns>
                    <DataGridTemplateColumn Width="30">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Name="DeleteDot" Width="18" Source="{Binding Source, NotifyOnSourceUpdated=True}" MouseLeftButtonDown="DeleteDot_MouseLeftButtonDown" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn x:Name="MedicineCode" Width="130" Header="健保代碼">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:Name="MedicineCodeDataTemplate">
                                <controls:AutoCompleteBox x:Name="MedicineCodeAuto" Width="130" Height="30" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" BorderThickness="0,0,0,1"
                                                                 VerticalContentAlignment="Stretch" HorizontalAlignment="Center" ItemTemplate="{StaticResource MedcineCodeAutoComplete}" Background="Transparent" MaxHeight="50" Text="{Binding Id,Mode=TwoWay}"
                                                                 ValueMemberPath="Id" MinimumPrefixLength="2" BorderBrush="DimGray" ItemContainerStyle="{StaticResource AutoCompleteBoxItemContainerStyle}" IsEnabled="{Binding Id, Converter={StaticResource AutoCompleteIsEnableConverter}}"
                                                                 FilterMode="Contains" IsTextCompletionEnabled="False"  Populating="MedicineCodeAuto_Populating" DropDownClosed="MedicineCodeAuto_DropDownClosed" />
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn MinWidth="400" Header="藥品名稱" FontSize="14"  FontWeight="Bold"  FontFamily="Segoe UI Semibold" IsReadOnly="True" Binding="{Binding Name}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment"  Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTemplateColumn MinWidth="60" Header="用量" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:Name="DosageDataTemplate">
                                <TextBox x:Name="Dosage"  MinWidth="60" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" BorderBrush="DimGray" 
                                         BorderThickness="0,0,0,1" Text="{Binding Dosage,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Converter={StaticResource LastRowIsEnableConverter}}" 
                                         PreviewKeyDown="PrescriptionMedicines_PreviewKeyDown" MouseDoubleClick="PrescriptionMedicines_MouseDoubleClick"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn MinWidth="40" Header="用法" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:Name="UsageDataTemplate">
                                <TextBox x:Name="Usage" MinWidth="40" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" BorderBrush="DimGray" BorderThickness="0,0,0,1" 
                                         Text="{Binding UsageName,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Converter={StaticResource LastRowIsEnableConverter}}" 
                                         PreviewKeyDown="PrescriptionMedicines_PreviewKeyDown" MouseDoubleClick="PrescriptionMedicines_MouseDoubleClick"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn MinWidth="40" Header="天數" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:Name="MedicineDaysDataTemplate">
                                <TextBox x:Name="MedicineDays" MinWidth="40" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" BorderBrush="DimGray" BorderThickness="0,0,0,1" 
                                         Text="{Binding Days,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Converter={StaticResource LastRowIsEnableConverter}}"
                                         PreviewKeyDown="PrescriptionMedicines_PreviewKeyDown" MouseDoubleClick="PrescriptionMedicines_MouseDoubleClick"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn MinWidth="40" Header="總量" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:Name="MedicineAmountDataTemplate">
                                <TextBox x:Name="MedicineTotal" MinWidth="40" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" BorderBrush="DimGray" BorderThickness="0,0,0,1" 
                                         Text="{Binding Amount,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Converter={StaticResource LastRowIsEnableConverter}}" 
                                         PreviewKeyDown="PrescriptionMedicines_PreviewKeyDown" MouseDoubleClick="PrescriptionMedicines_MouseDoubleClick"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn MinWidth="40" Header="自費" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:Name="PaysDataTemplate">
                                <CheckBox x:Name="PaySelf"  HorizontalAlignment="Center" HorizontalContentAlignment="Center" IsChecked="{Binding PaySelf,Mode=TwoWay,UpdateSourceTrigger=PropertyChanged}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn MinWidth="40" Header="途徑" IsReadOnly="True">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate x:Name="PositionDataTemplate">
                                <TextBox x:Name="Position" MinWidth="40" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" BorderBrush="DimGray" BorderThickness="0,0,0,1" 
                                         Text="{Binding Position,Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" IsEnabled="{Binding Converter={StaticResource LastRowIsEnableConverter}}" 
                                         PreviewKeyDown="PrescriptionMedicines_PreviewKeyDown" MouseDoubleClick="PrescriptionMedicines_MouseDoubleClick"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn MinWidth="60" Header="健保價格" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" Binding="{Binding HcPrice}" IsReadOnly="True">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment"  Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn MinWidth="60" Header="自費價格" FontSize="14" FontWeight="Bold" FontFamily="Segoe UI Semibold" Binding="{Binding Price}" IsReadOnly="True" >
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="{x:Type TextBlock}">
                                <Setter Property="HorizontalAlignment"  Value="Center" />
                                <Setter Property="VerticalAlignment" Value="Center" />
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                </DataGrid.Columns>
            </DataGrid>
            <Grid Grid.Row="3" Margin="10,0,10,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="350" />
                    <ColumnDefinition Width="650" />
                    <ColumnDefinition />
                </Grid.ColumnDefinitions>
                <Grid Grid.Column="0" Background="{StaticResource GridBackGround}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="40" />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Grid.Row="0" Orientation="Horizontal" Background="{StaticResource GridBackGround}">
                        <RadioButton Content="交易" Tag="1" Margin="20,0,5,0" FontSize="16" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                        <Image Source="/Images/PosDot.png" Width="18" />
                        <RadioButton Content="調劑" Tag="0" Margin="20,0,5,0" FontSize="16" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" VerticalContentAlignment="Center" />
                        <Image Source="/Images/HisDot.png" Width="18" />
                        <RadioButton Content="全部顯示" Tag="2" Margin="20,0,5,0" FontSize="16" FontFamily="Segoe UI Semibold" VerticalAlignment="Center" VerticalContentAlignment="Center" IsChecked="True" />
                        <Image Source="/Images/PosHisDot.png" Width="27" Margin="0,0,15,0" />
                    </StackPanel>
                    <DataGrid x:Name="CusHistoryMaster" ColumnHeaderStyle="{DynamicResource CenterGridHeaderStyle}" AutoGenerateColumns="False"
                              HeadersVisibility="None" Background="Transparent"
                              Grid.Row="1" CellStyle="{StaticResource DataGridCellStyle}" HorizontalScrollBarVisibility="Hidden">
                        <DataGrid.RowStyle>
                            <Style TargetType="{x:Type DataGridRow}">
                                <Style.Triggers>
                                    <Trigger Property="DataGridRow.IsSelected" Value="True">
                                        <Setter Property="Background" Value="LightGray" />
                                    </Trigger>
                                </Style.Triggers>
                                <Setter Property="Background" Value="Transparent" />
                                <Setter Property="BorderBrush" Value="Transparent" />
                                <Setter Property="FontSize" Value="14" />
                                <Setter Property="Height" Value="35" />
                            </Style>
                        </DataGrid.RowStyle>
                        <DataGrid.Columns>
                            <DataGridTemplateColumn Width="Auto" MinWidth="15">
                                <DataGridTemplateColumn.CellTemplate>
                                    <DataTemplate x:Name="CustomHistoriesTypeIcon">
                                        <Image Width="15" Height="15" />
                                    </DataTemplate>
                                </DataGridTemplateColumn.CellTemplate>
                            </DataGridTemplateColumn>
                            <DataGridTextColumn Header="date" MinWidth="90" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment"  Value="Center" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                            <DataGridTextColumn Header="title" Width="220" IsReadOnly="True">
                                <DataGridTextColumn.ElementStyle>
                                    <Style TargetType="{x:Type TextBlock}">
                                        <Setter Property="HorizontalAlignment"  Value="Left" />
                                        <Setter Property="VerticalAlignment" Value="Center" />
                                    </Style>
                                </DataGridTextColumn.ElementStyle>
                            </DataGridTextColumn>
                        </DataGrid.Columns>
                    </DataGrid>
                </Grid>
                <DataGrid x:Name="CusHistoryDetail" Background="{StaticResource GridDarkerBackGround}" ColumnHeaderStyle="{StaticResource DataGridColumnHeaderStyle}"
                          AutoGenerateColumns="False" CanUserAddRows="False" VerticalScrollBarVisibility="Auto" Grid.Column="1" Margin="0,0,10,0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Width="250" />
                        <DataGridTextColumn MinWidth="90" />
                        <DataGridTextColumn MinWidth="90" />
                        <DataGridTextColumn MinWidth="70" />
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Grid.Column="2" Background="{StaticResource GridBackGround}">
                    <Grid.RowDefinitions>
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                        <RowDefinition />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="8">
                        <Label Content="押金 $" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" Width="100" HorizontalAlignment="Right" />
                        <TextBox Name="Deposit" Text="0" Foreground="{StaticResource ForeGround}" Width="120" FontSize="18" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="1" Margin="8">
                        <Label Content="自費 $" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" Width="100" />
                        <TextBox Name="SelfCost" Text="0" Foreground="{StaticResource ForeGround}" Width="120" FontSize="18" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="2" Margin="8">
                        <Label Content="部分負擔 $" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" Width="100" />
                        <TextBox Name="Copayment" Text="0" Foreground="{StaticResource ForeGround}" Width="120" FontSize="18" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="3" Margin="8">
                        <Label Content="應收金額 $" Foreground="{StaticResource ForeGround}" FontSize="18" FontFamily="Segoe UI Semibold" Width="100" />
                        <TextBox Name="TotalPrice" Text="0" Foreground="{StaticResource ForeGround}" Width="120" FontSize="18" FontFamily="Segoe UI Semibold" HorizontalContentAlignment="Center" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Grid.Row="4" Background="{StaticResource Shadow}">
