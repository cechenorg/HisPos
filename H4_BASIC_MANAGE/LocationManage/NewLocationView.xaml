<Window x:Class="His_Pos.H4_BASIC_MANAGE.LocationManage.NewLocationView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:His_Pos.H4_BASIC_MANAGE.LocationManage"
        mc:Ignorable="d"
        Title="NewLocationView" Height="200" Width="500" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid Grid.Row="0" Width="505" Height="100">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Label Grid.Column="0" Content="請輸入櫃位名稱:" Width="170" HorizontalContentAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Semibold" FontSize="20" Margin="90,0,0,0"/>
            <TextBox Name="txtNewLocation" Grid.Column="1"  Width="170" HorizontalContentAlignment="Center" VerticalAlignment="Center" FontFamily="Segoe UI Semibold" FontSize="20" Margin="0,0,70,0"/>
        </Grid>
        <Grid Grid.Row="1">
            <Button Name="ButtonNewLocation" Content="新增" Width="100" Height="50" FontFamily="Segoe UI Semibold" FontSize="20" Margin="0,0,0,30" Click="ButtonNewLocation_Click"/>
        </Grid>
    </Grid>
</Window>
